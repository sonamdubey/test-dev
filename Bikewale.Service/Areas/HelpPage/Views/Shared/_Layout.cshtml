<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)

    <style>
        #body{
            padding: 20px;
        }
        #brand {
            background: url("http://www.imediaconnection.in/article_images/bikewalelogo.png")no-repeat center center;
            width: 150px;
            background-size: 75% 75%;
        }

        header {
            width: 100%;
        }

        nav ul {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        form {
            width: 30%;
            min-width: 300px;
            border: 1px solid #ccc;
            position: relative;
            padding: 20px;
            display: block;
            margin: 0 auto;
            box-shadow: 1px 1px 2px #ccc;
        }

            form h4 {
                display: block;
                position: absolute;
                top: -10px;
                padding: 10px;
                border-bottom: 1px solid #aaa;
                width: 100%;
                left: 0;
                background-color: #ccc;
            }

            form label {
                text-transform: capitalize;
            }

            form .input-group {
                padding: 10px;
            }

        
            h2 {
            display: block;
            margin: 0 auto;
            color: teal;
            text-align: left;
            padding-bottom: 10px;
        }

        .nav-back {
            display: block;
            margin: 0 auto;
            width: 200px;
            margin-top: 25px;
        }


            .nav-back a {
                text-align: center;
                color: black;
            }

                .nav-back a:hover {
                    text-decoration: none;
                }
    </style>
</head>
<body>
    <div class="headWrapper">
        <header id="header"></header>
    </div>

    <div class="navWrappper">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" id="brand" href="#"></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Search", "SearchApiDoc", "Help")@*<span class="sr-only">(current)</span>*@</li>
                        <li>@Html.ActionLink("View All", "Index", "Help")</li>
                        <li>
                            <form class="navbar-form navbar-left" role="search" action="/Help/ControllerHelp">
                                <div class="form-group">
                                    <input type="text" name="url" class="form-control" placeholder="E.g. api/Bike" style="width: 100vh;">
                                </div>
                                <button type="submit" class="btn btn-primary">Go</button>
                            </form>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
    <br />
    @RenderBody()
</body>
</html>
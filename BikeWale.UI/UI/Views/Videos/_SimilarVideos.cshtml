@model Bikewale.Models.SimilarVideoModelsVM
@using Bikewale.Utility;
@if (Model!= null && Model.Videos != null && Model.Videos.Count() > 0) 
{ 
   <section>
            <div class="container section-bottom-margin">
                    <div class="grid-12">
                        <div class="content-box-shadow">
                            <div class="padding-top20 font14">
                                <div class="carousel-heading-content">
                                    <div class="swiper-heading-left-grid inline-block">
                                        <h2>More related videos</h2>
                                    </div>@if (!String.IsNullOrEmpty(Model.ViewAllLinkUrl)){ <div class="swiper-heading-right-grid inline-block text-right">
                                        <a href="@Model.ViewAllLinkUrl" title="@Model.ViewAllLinkTitle" class="btn view-all-target-btn">@Model.ViewAllLinkText</a>
                                    </div>}
                                    <div class="clear"></div>
                                </div>
                                    <div class="jcarousel-wrapper inner-content-carousel padding-bottom20 overlay-carousel video-carousel">
                                        <div class="jcarousel">
                                            <ul>
                                                @foreach (var video in Model.Videos)
                                                {
                                                    <li class="list-item">
                                                        <a href="@UrlFormatter.VideoDetailPageUrl(video.VideoTitleUrl,video.BasicId.ToString())" title="@video.VideoTitle" class="jcarousel-card">
                                                            <div class="model-jcarousel-image-preview">
                                                                <div class="card-image-block">
                                                                    <img class="lazy" data-original="https://img.youtube.com/vi/@Html.Raw(video.VideoId)/mqdefault.jpg" alt="@video.VideoTitle" src="" border="0" />
                                                                    <div class="play-icon-wrapper">
                                                                        <span class="bwsprite video-play-icon"></span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="card-desc-block">
                                                                <h3 class="text-black margin-bottom5">@video.VideoTitle</h3>
                                                                <div class="inline-block margin-right10">
                                                                    <span class="bwsprite calender-grey-sm-icon"></span>
                                                                    <span class="article-stats-content">@FormatDate.GetFormatDate(video.DisplayDate, "dd MMMM yyyy")</span>
                                                                </div>
                                                                <div class="inline-block">
                                                                    <span class="bwsprite review-sm-lgt-grey"></span>
                                                                    <span class="article-stats-content">@Format.FormatNumeric(video.Views.ToString())</span>
                                                                </div>
                                                            </div>
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                        <span class="jcarousel-control-left"><a href="#" class="bwsprite jcarousel-control-prev inactive" rel="nofollow"></a></span>
                                        <span class="jcarousel-control-right"><a href="#" class="bwsprite jcarousel-control-next" rel="nofollow"></a></span>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
        </section>
}
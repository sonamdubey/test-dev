@model Bikewale.Models.UpcomingPageVM
@{
    Model.IsHeaderFix = false;
    Model.IsTransparentHeader = false;
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/UI/sass/upcoming-bikes/upcoming-bikes.css' inline />";
    Model.Page_JS_Path = "/UI/src/upcoming-bikes.js";
    Layout = "~/UI/Views/Shared/_Layout.cshtml";
    Model.AdTags.AdPath = "/1017752/Bikewale_Upcoming_";
    Model.AdTags.AdId = "1517814650143";
    Model.AdTags.Ad_970x90Top = true;
    Model.AdTags.Ad_970x90Bottom = true;
}

@if (Model != null && Model.Make != null)
{
    <section>
        <div class="container section-bottom-margin">
            <div class="grid-12">
                <div class="bg-white">
                    <h1 class="section-header">@Model.Page_H1</h1>
                    <p class="section-inner-padding font14 text-light-grey">@Model.Make.MakeName is a well-known two-wheeler brand in India. @Model.Make.MakeName bikes announces some of its key upcoming models at the beginning of a year. Either we are a first-time bike buyer or a seasoned rider, we eagerly wait to know the expected launches of different brands. BikeWale brings you a list of all expected Honda bike launches along with their expected price. Explore the list of upcoming @Model.Make.MakeName bikes and get ready to pick your favorite one for this year.</p>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>

    <section>
        <div id="upcoming-bikes" data-make-filter="@Model.Make.MakeId" class="container section-bottom-margin">
            <div class="grid-12">
                @Html.Partial("~/UI/Views/Upcoming/_UpcomingBikesList.cshtml", Model)
            </div>
            <div class="clear"></div>
        </div>
    </section>

    if (Model.PopularBikes != null && Model.PopularBikes.Bikes != null && Model.PopularBikes.Bikes.Count() > 0)
    {


        <section>
            <div class="container section-bottom-margin">
                <div class="grid-12">
                    <div class="content-box-shadow padding-top20 padding-bottom20">
                        <div class="carousel-heading-content">
                            <div class="swiper-heading-left-grid inline-block">
                                <h2>Other popular @Model.Make.MakeName bikes</h2>
                            </div>
                            <div class="swiper-heading-right-grid inline-block text-right">
                                <a href="@string.Format("/{0}-bikes/",Model.Make.MaskingName)" title="@string.Format("{0} Bikes",Model.Make.MakeName)" class="btn view-all-target-btn">View all</a>
                            </div>
                            <div class="clear"></div>
                        </div>


                        @Html.Partial("~/UI/Views/BikeModels/_MostPopularBikes.cshtml", Model.PopularBikes)
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </section>
    }

    if (Model.OtherMakes != null)
    {
        <section>
            <div class="container section-bottom-margin">
                <div class="grid-12">
                    <div class="content-box-shadow padding-top20 padding-bottom20">
                        <div class="carousel-heading-content">
                            <div class="swiper-heading-left-grid inline-block">
                                <h2>Upcoming bikes of other brands</h2>
                            </div>
                            <div class="swiper-heading-right-grid inline-block text-right">
                                <a href="/upcoming-bikes/" title="Upcomin bikes in India" class="btn view-all-target-btn">View all</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                        @Html.Partial("~/UI/Views/Make/_OtherMakes.cshtml", Model.OtherMakes)
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </section>
    }
}

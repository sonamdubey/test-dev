@model Bikewale.Models.BikeSeries.ModelSeriesSlugVM
@if (Model != null)
{
    <div class="find-series-section card-bottom-margin content-box-shadow" id="modelPageSeriesSlug" onmouseover="" style="cursor: pointer;">
        <div class="find-series-section__icon"></div>
        <div class="find-series-section__content">
            <h2 class="find-series-section__head">Find The Right @Model.SeriesName </h2>
            <p class="find-series-section__desc">
                @Model.MakeName offers @(Model.SeriesBikesCount - 1) more @Model.SeriesName model@(Model.SeriesBikesCount > 2 ? "s" : "") starting from ₹ @Bikewale.Utility.Format.FormatPrice(Convert.ToString(Model.MinimumPrice))
            </p>
            <a href="@string.Format("/m/{0}-bikes/{1}/", Model.MakeMaskingName, Model.SeriesMaskingName)" class="find-series-section__view-link" title="@string.Format("{0} {1}",Model.MakeName,Model.SeriesName)">View all</a>
        </div>
    </div>
    <input type="hidden" id="makeMaskingName" value="@Model.MakeMaskingName" />
    <input type="hidden" id="seriesMaskingName" value="@Model.SeriesMaskingName" />
}


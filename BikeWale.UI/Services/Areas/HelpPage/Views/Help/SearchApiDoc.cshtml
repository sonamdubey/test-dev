@model Bikewale.Service.Areas.HelpPage.Controllers.SearchDoc

@{
    ViewBag.Title = "Search Api Doc";
}

<h2>Web API</h2>
</hr>

@using (Html.BeginForm("Search","Help")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Search API Documentation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group">
            @Html.LabelFor(model => model.method, htmlAttributes: new { @class = "input-group-addon" })
                @Html.EditorFor(model => model.method, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.method, "", new { @class = "text-danger" })
        </div>

        <div class="input-group">
            @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "input-group-addon" })
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })

        </div>

        <div class="input-group">
            <div class="col-md-offset-6 col-md-10">
                <input class="btn btn-primary" type="submit" value="Search Documentation"  />
            </div>
            
        </div>
    </div>
}

<div class="btn btn-success nav-back">
    @Html.ActionLink("Back to Index Page", "Index")
</div>

@helper GenerateSuggestionList(string baseUrl)
{
    <ul class="accordion-list js-accordion-list" data-bind="foreach: questions">
        <li class="accordion-list-item js-accordion-list-item" data-bind="attr : { 'data-qid': question.guid }">
            <div class="accordion-heading js-accordion-heading">
                <h4 class="accordion-primary-title" data-bind="html: 'Q: ' + question.questionText"></h4>
                <p class="accordion-primary-subtitle">(<span data-bind="text: answerCount"></span> Answer<span data-bind="if : answerCount > 1">s</span>)</p>
            </div>
            <div class="accordion-content-wrapper js-accordion-content-wrapper">
                <div class="accordion-content js-accordion-content">
                    <p class="qna-accordion-answer">
                        <span class="stripped-answer" data-bind="text: 'A: ' + answer.answerText.substring(0, 150) + (answer.answerText.length > 150 ? '...' : '')">

                        </span>
                        <span class="full-answer hide" data-bind="text: 'A: ' + answer.answerText">

                        </span>
                        <!-- ko if: answer.answerText.length > 150 -->
                        <span class="qna-accordion-read-more">Read more</span>
                        <!-- /ko -->
                    </p>
                    <p class="qna-accordion-answer-info" data-bind="text: answer.answerAge + ' ago by ' + answer.answeredBy.name "></p>
                    <!-- ko if: answerCount > 1 -->
                    <a href="" title="Read All Answers" class="qna-accordion-read-all" data-bind="attr: { href: '@baseUrl' + pageUrl + '/'}">Read All <span data-bind="text: answerCount"></span> Answers</a>
                    <!-- /ko -->
                </div>
            </div>
        </li>
    </ul>
}

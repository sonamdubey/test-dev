@helper GenerateAskButton(bool isAskQuestionPopup)
{
    string idName = isAskQuestionPopup ? "askquestion-askbutton" : "qnasearch-askbutton";

    <div class="qna-search-footer">
        <p class="qna-search-footer__text" data-bind="text:footerText"></p>
        <button id="@idName" class="qna-search-footer__btn btn btn-inv-blue" role="button" aria-label="Ask Question">Ask</button>
    </div>
}


@model Bikewale.Models.PriceInCity.PriceInTopCitiesWidgetVM
@using Bikewale.Utility
<div class="jcarousel-wrapper inner-content-carousel carousel-type-city">
    <div class="jcarousel">
        <ul>
            @foreach (var priceQuote in Model.PriceQuoteList)
            {
                <li>
                    <a href="@UrlFormatter.PriceInCityUrl(priceQuote.MakeMaskingName, priceQuote.ModelMaskingName, priceQuote.CityMaskingName)" title="@string.Format("{0} price in {1}", Model.BikeName, priceQuote.CityName)" class="card-target-link">
                        <div class="city-image-preview">
                            <span class="city-sprite c1-icon"></span>
                        </div>
                        <div class="text-left padding-top15 padding-left20 padding-right20 padding-bottom20">
                            <p class="font15 text-default text-bold margin-bottom5">@priceQuote.CityName</p>
                            <p class="text-light-grey font14">
                                <span class="bwsprite inr-sm-grey"></span>&nbsp;@Format.FormatPrice(Convert.ToString(priceQuote.OnRoadPrice)) onwards
                            </p>
                        </div>
                    </a>
                </li>
            }
                </ul>
            </div>
        <span class="jcarousel-control-left">
            <a href="#" class="bwsprite jcarousel-control-prev" rel="nofollow"></a>
        </span>
        <span class="jcarousel-control-right">
            <a href="#" class="bwsprite jcarousel-control-next" rel="nofollow"></a>
        </span>
    </div>


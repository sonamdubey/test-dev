@model IEnumerable<Bikewale.Entities.PriceQuote.PriceQuoteOfTopCities>

@if (@Model != null)
{
    <ul class="prices-by-cities-list">
        @foreach (var priceQuote in @Model)
        {
            <li>
                <a class="text-truncate" href="@string.Format("/m{0}", @Bikewale.Utility.UrlFormatter.PriceInCityUrl(@priceQuote.MakeMaskingName, @priceQuote.ModelMaskingName, @priceQuote.CityMaskingName))"
                   title="@String.Format("{0} {1} Price in {2}", @priceQuote.Make, @priceQuote.Model, @priceQuote.CityName)">
                    @priceQuote.CityName
                </a>
                <span class="nearby-city-price">
                    <span class="bwmsprite inr-dark-grey-xsm-icon"></span>&nbsp;
                    @Bikewale.Utility.Format.FormatPrice(Convert.ToString(priceQuote.OnRoadPrice))
                </span>
            </li>
        }
    </ul>
}
@model Bikewale.Models.Videos.VideosLandingPageVM
@using Bikewale.Utility;

@{
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/videos/bwm-videos-landing.css' inline />";
    Model.PageMetaTags.CanonicalUrl = "https://www.bikewale.com/bike-videos/";
    Model.IsTransparentHeader = true;
}


@if (Model != null)
{
    <section>
        <div class="container">
            @if (Model.LandingFirstVideoData != null)
            {
                <div class="video-jumbotron">
                    <a href="@string.Format("/m{0}", UrlFormatter.VideoDetailPageUrl(Model.LandingFirstVideoData.VideoTitleUrl, Model.LandingFirstVideoData.BasicId.ToString()))">
                        <img class="lazy" data-original="@String.Format("https://img.youtube.com/vi/{0}/sddefault.jpg", Model.LandingFirstVideoData.VideoId)" alt="@Model.LandingFirstVideoData.VideoTitle" title="@Model.LandingFirstVideoData.VideoTitle" src="@String.Format("https://img.youtube.com/vi/{0}/sddefault.jpg", Model.LandingFirstVideoData.VideoId)" border="0" />
                        <span>@Model.LandingFirstVideoData.VideoTitle</span>
                    </a>
                </div>
            }
            @if (Model.LandingOtherVideosData != null && Model.LandingOtherVideosData.Count() > 0)
            {
                <ul class="video-jumbotron-list bottom-shadow margin-bottom20">
                    @foreach (var video in Model.LandingOtherVideosData)
                    {
                        <li>
                            <a href="@string.Format("/m{0}", UrlFormatter.VideoDetailPageUrl(video.VideoTitleUrl, Convert.ToString(video.BasicId)))" class="jumbotron-list-image margin-right20">
                                <img class="lazy" data-original="@String.Format("https://img.youtube.com/vi/{0}/default.jpg", video.VideoId)" alt="@video.VideoTitle" title="@video.VideoTitle" src="@String.Format("https://img.youtube.com/vi/{0}/default.jpg", video.VideoId)" border="0" />
                            </a>
                            <a href="@string.Format("/m{0}", @UrlFormatter.VideoDetailPageUrl(video.VideoTitleUrl, Convert.ToString(video.BasicId)))" class="jumbotron-list-title font14 text-default">@video.VideoTitle</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </section>

    <section>
        <div class="powerdrift-banner container font14">
            <p class="text-bold text-white padding-top10 margin-left20 padding-bottom10">Reviews, Specials, Underground, Launch Alerts & a whole lot more...</p>
            <div class="bg-white powerdrift-subscribe">
                <p class="font14 leftfloat margin-left10 margin-top3">PowerDrift</p>
                <div class="rightfloat">
                    <script src="https://apis.google.com/js/platform.js"></script>
                    <div class="g-ytsubscribe" data-channel="powerdriftofficial" data-layout="default" data-count="default"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </section>

    if (Model.ExpertReviewsWidgetData != null && Model.ExpertReviewsWidgetData.VideoList != null && Model.ExpertReviewsWidgetData.VideoList.Videos != null && Model.ExpertReviewsWidgetData.VideoList.Videos.Count() > 0)
    {
        <section class="bg-white">
            <div id="expertReviewsWrapper" class="container bottom-shadow margin-bottom25">
                <h2 class="text-center padding-top25 padding-bottom15">Expert Reviews</h2>
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        @foreach (var video in Model.ExpertReviewsWidgetData.VideoList.Videos)
                        {
                            <div class="swiper-slide reviews-carousel-content">
                                <div class="video-carousel-image rounded-corner2">
                                    <a href="@string.Format("/m{0}", @UrlFormatter.VideoDetailPageUrl(video.VideoTitleUrl, Convert.ToString(video.BasicId)))">
                                        <img class="swiper-lazy" data-src="@String.Format("https://img.youtube.com/vi/{0}/sddefault.jpg", video.VideoId)" alt="@video.VideoTitle" title="@video.VideoTitle" src="@String.Format("https://img.youtube.com/vi/{0}/sddefault.jpg", video.VideoId)" border="0" />
                                        <span class="swiper-lazy-preloader"></span>
                                    </a>
                                </div>
                                <div class="margin-top10">
                                    <a href="@string.Format("/m{0}", @UrlFormatter.VideoDetailPageUrl(video.VideoTitleUrl, Convert.ToString(video.BasicId)))" class="text-default font14 text-bold">@video.VideoTitle</a>
                                    <p class="font12 text-xlight-grey margin-top10 margin-bottom10">@FormatDate.GetFormatDate(Convert.ToString(video.DisplayDate), "dd MMMM yyyy")</p>
                                    <p class="font14 text-light-grey margin-bottom10 line-height17">@FormatDescription.TruncateDescription(video.Description, 75)</p>
                                    <div class="grid-6 alpha omega border-light-right font14">
                                        <span class="bwmsprite video-views-icon margin-right5"></span><span class="text-default">@Format.FormatPrice(Convert.ToString(video.Views))</span>
                                    </div>
                                    <div class="grid-6 omega padding-left10 font14">
                                        <span class="bwmsprite video-likes-icon margin-right5"></span><span class="text-default">@Format.FormatPrice(Convert.ToString(video.Likes))</span>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="padding-left10 view-all-btn-container margin-top10 padding-bottom20">
                    <a href="@string.Format("/m{0}", @UrlFormatter.VideoByCategoryPageUrl(Model.ExpertReviewsWidgetData.SectionTitle, Model.ExpertReviewsWidgetData.CategoryIdList))" title="@Model.ExpertReviewsWidgetData.SectionTitle Bike Videos" class="btn view-all-target-btn">View more videos<span class="bwmsprite teal-right"></span></a>
                </div>
            </div>
        </section>
    }

    if (Model.FirstRideWidgetData != null && Model.FirstRideWidgetData.VideoList != null && Model.FirstRideWidgetData.VideoList.Videos != null && Model.FirstRideWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.FirstRideWidgetData)
    }

    if (Model.LaunchAlertWidgetData != null && Model.LaunchAlertWidgetData.VideoList != null && Model.LaunchAlertWidgetData.VideoList.Videos != null && Model.LaunchAlertWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.LaunchAlertWidgetData)
    }

    if (Model.FirstLookWidgetData != null && Model.FirstLookWidgetData.VideoList != null && Model.FirstLookWidgetData.VideoList.Videos != null && Model.FirstLookWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.FirstLookWidgetData)
    }

    if (Model.Brands != null)
    {
        <h2 class="text-center padding-top10 padding-bottom15">Browse videos by brands</h2>
        <div class="container bg-white box-shadow card-bottom-margin padding-top25 padding-bottom20 collapsible-brand-content margin-bottom25">
            @Html.Partial("~/Views/Make/_Brands_Mobile.cshtml", Model.Brands)
        </div>
    }

    if (Model.PowerDriftBlockbusterWidgetData != null && Model.PowerDriftBlockbusterWidgetData.VideoList != null && Model.PowerDriftBlockbusterWidgetData.VideoList.Videos != null && Model.PowerDriftBlockbusterWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.PowerDriftBlockbusterWidgetData)
    }

    if (Model.MotorSportsWidgetData != null && Model.MotorSportsWidgetData.VideoList != null && Model.MotorSportsWidgetData.VideoList.Videos != null && Model.MotorSportsWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.MotorSportsWidgetData)
    }

    if (Model.PowerDriftSpecialsWidgetData != null && Model.PowerDriftSpecialsWidgetData.VideoList != null && Model.PowerDriftSpecialsWidgetData.VideoList.Videos != null && Model.PowerDriftSpecialsWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.PowerDriftSpecialsWidgetData)
    }

    if (Model.PowerDriftTopMusicWidgetData != null && Model.PowerDriftTopMusicWidgetData.VideoList != null && Model.PowerDriftTopMusicWidgetData.VideoList.Videos != null && Model.PowerDriftTopMusicWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.PowerDriftTopMusicWidgetData)
    }

    if (Model.MiscellaneousWidgetData != null && Model.MiscellaneousWidgetData.VideoList != null && Model.MiscellaneousWidgetData.VideoList.Videos != null && Model.MiscellaneousWidgetData.VideoList.Videos.Count() > 0)
    {
        @Html.Partial("~/Views/Videos/_VideosByCategory_Mobile.cshtml", Model.MiscellaneousWidgetData)
    }
}

<script type="text/javascript">
    docReady(function () {
        $("img.lazy").lazyload();
    });
</script>
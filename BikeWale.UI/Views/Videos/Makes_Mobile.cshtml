@model Bikewale.Models.MakeVideosPageVM
@using Bikewale.Utility;
@{
    Model.AdTags.AdPath = "/1017752/Bikewale_Mobile_NewBikes";
    Model.AdTags.AdId = "1398766302464";
    Model.AdTags.Ad_320x50 = true;
    Model.AdTags.Ad_Bot_320x50 = true;
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/videos/videos-by-make.css' />";
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
    Model.PageMetaTags.CanonicalUrl = string.Format("https://www.bikewale.com/{0}-bikes/videos/", Model.Make.MaskingName);
}
@if (Model != null && Model.Videos!=null && Model.Videos.Count() > 0)
{
    <section>
        <div class="container bg-white box-shadow margin-bottom10">
            <h1 class="padding-15-20 box-shadow">@Model.Make.MakeName Videos</h1>
            <ul class="bike-listing">
                @foreach (var bike in Model.Videos)
                {
                    string bikeName = string.Format("{0} {1}", bike.objMake.MakeName, bike.ModelName);
                    <li class="list-item">
                        <a href="@string.Format("/m{0}",UrlFormatter.FormatVideoPageUrl(bike.objMake.MaskingName, bike.MaskingName))" title="@string.Format("{0} Videos",bikeName)" class="block">
                            <div class="item-image-content">
                                <img class="lazy" data-original="@Image.GetPathToShowImages(bike.OriginalImagePath, bike.HostUrl, Bikewale.Utility.ImageSize._310x174, Bikewale.Utility.QualityFactor._60)" alt="@bikeName" src="" />
                                <span class="black-overlay">
                                    <span class="bwmsprite video-play-lg"></span>
                                </span>
                            </div>
                            <h2 class="margin-bottom5">@bikeName</h2>
                            <p class="font14 text-light-grey">@bike.VideoCount Video@(bike.VideoCount > 1 ? "s" : "")</p>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </section>
}
@{Html.RenderAction("PopularBikesMobile", "PopularBikes", new { topCount = 9,makeId=Model.Make.MakeId,cityId=Model.CityId });}
@model Bikewale.Models.Videos.ModelWiseVideoPageVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";    
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/video/videosByModel.css' />";
    Model.PageMetaTags.CanonicalUrl = String.Format("https://www.bikewale.com/{0}-bikes/{1}/videos/", Model.Make.MaskingName, Model.Model.MaskingName);
    Model.PageMetaTags.AlternateUrl = String.Format("https://www.bikewale.com/m/{0}-bikes/{1}/videos/", Model.Make.MaskingName, Model.Model.MaskingName);
    Model.IsHeaderFix = true;
}

@if (Model != null && Model.Make != null && Model.Model != null)
{
    <section>
        <div class="container">
            <div class="grid-12">
                <div class="breadcrumb margin-top15 margin-bottom10">
                    <ul>
                        <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><a href="/"><span itemprop="title" title="BikeWale">Home</span></a></li>
                        <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><span class="bwsprite fa-angle-right margin-right10"></span><a href="/@Model.Make.MaskingName-bikes/" title="@Model.Make.MakeName bikes"><span itemprop="title">@Model.Make.MakeName Bikes</span></a></li>
                        <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><span class="bwsprite fa-angle-right margin-right10"></span><a href="/@Model.Make.MaskingName-bikes/@Model.Model.MaskingName/" title="@String.Format("{0} {1} bikes", Model.Make.MakeName, Model.Model.ModelName)"><span itemprop="title">@String.Format("{0} {1}", Model.Make.MakeName, Model.Model.ModelName)</span></a></li>
                        <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><span class="bwsprite fa-angle-right margin-right10"></span><span itemprop="title">Videos</span></li>
                    </ul>
                </div>
                <h1 class="font26 margin-bottom5">@String.Format("{0} {1} Videos", @Model.Make.MakeName, @Model.Model.ModelName)</h1>
            </div>
            <div class="clear"></div>
        </div>
    </section>

    if (Model.VideosList != null)
    {

        <section id="section-videos-list">
            <div class="miscWrapper container">
                <ul id="listVideos1">
                    @foreach (var video in Model.VideosList)
                {
                <li>
                    <div class="video-image-wrapper rounded-corner2">
                        <a href="@string.Format("/bike-videos/{0}-{1}/", video.VideoTitleUrl, Convert.ToString(video.BasicId))">
                            <img class="lazy" data-original="@String.Format("https://img.youtube.com/vi/{0}/mqdefault.jpg", video.VideoId)"
                                 alt="@video.VideoTitle" title="@video.VideoTitle" src="" border="0" />
                        </a>
                    </div>
                    <div class="video-desc-wrapper">
                        <a href="@string.Format("/bike-videos/{0}-{1}/", video.VideoTitleUrl, Convert.ToString(video.BasicId))" class="font14 text-bold text-default" title="@video.VideoTitle">@video.VideoTitle</a>
                        <p class="font12 text-light-grey margin-top10 margin-bottom10">@Bikewale.Utility.FormatDate.GetFormatDate(Convert.ToString(video.DisplayDate), "MMMM dd, yyyy")</p>
                        <div class="grid-6 alpha omega border-light-right font14">
                            <span class="bwsprite video-views-icon margin-right5"></span><span class="text-light-grey margin-right5">Views:</span><span class="text-default">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(video.Views))</span>
                        </div>
                        <div class="grid-6 omega padding-left20 font14">
                            <span class="bwsprite video-likes-icon margin-right5"></span><span class="text-light-grey margin-right5">Likes:</span><span class="text-default">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(video.Likes))</span>
                        </div>
                        <div class="clear"></div>
                    </div>
                </li>
                }
                </ul>
                <div class="clear"></div>
            </div>
        </section>
    }

    if (Model.BikeInfoWidgetData != null)
    {
        @Html.Partial("~/Views/BikeModels/_BikeInfoCard.cshtml", Model.BikeInfoWidgetData)
    }

    if (Model.SimilarBikeVideoList != null && Model.SimilarBikeVideoList.Count() > 0)
    {
        <section>
            <div class="container margin-bottom20">
                <div class="grid-12">
                    <div class="content-box-shadow padding-bottom20">
                        <div class="padding-top20 font14">
                            <h2 class="padding-left20 padding-right20 margin-bottom15">Videos of bikes similar to @Model.Model.ModelName</h2>
                            <div class="jcarousel-wrapper inner-content-carousel overlay-carousel">
                                <div class="jcarousel">
                                    <ul>
                                        @foreach (var BikeInfo in Model.SimilarBikeVideoList)
                                        {
                                            string bikeName = string.Empty;
                                            if (BikeInfo.Make != null && BikeInfo.Model != null) { bikeName = string.Format("{0} {1}", BikeInfo.Make.MakeName, BikeInfo.Model.ModelName); }
                                            <li>
                                                <a href="/@BikeInfo.Make.MaskingName-bikes/@BikeInfo.Model.MaskingName/videos/" title="@bikeName videos" class="jcarousel-card">
                                                    <div class="model-jcarousel-image-preview">
                                                        <div class="card-image-block">
                                                            <img class="lazy" data-original="@Bikewale.Utility.Image.GetPathToShowImages(BikeInfo.OriginalImagePath,BikeInfo.HostUrl,Bikewale.Utility.ImageSize._310x174)" src="" border="0">
                                                            <div class="play-icon-wrapper">
                                                                <span class="bwsprite video-play-icon"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="card-desc-block">
                                                        <h3 class="bikeTitle">@bikeName</h3>
                                                        <p class="text-light-grey">@BikeInfo.VideoCount@(BikeInfo.VideoCount > 1 ? " videos" : " video")</p>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>

                                <span class="jcarousel-control-left"><a href="#" class="bwsprite jcarousel-control-prev inactive" rel="nofollow" data-jcarouselcontrol="true"></a></span>
                                <span class="jcarousel-control-right"> <a href="#" class="bwsprite jcarousel-control-next" rel="nofollow" data-jcarouselcontrol="true"></a></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </section>
    }
    { Html.RenderAction("PopularBodyStyleDesktop", "PopularBikes", new { modelId = Model.Model.ModelId, topCount = 9, cityId = Model.CityId }); }
}

@{

    var Model = ViewBag.DetailsPage;
    var videoModel = Model.VideoEntity;
    
    ViewBag.Ad_970x90 = false;
    ViewBag.Ad_970x90Bottom = false;
    ViewBag.Ad_300x250BTF = false;
    ViewBag.Ad_Mid_320x50 = false;
    ViewBag.Ad_300x250 = false;
    ViewBag.IsHeaderFix = false;
    Layout = "~/Views/Shared/_Layout_Desktop.cshtml";
    ViewBag.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/video/detail.css' />";
    ViewBag.staticUrl = Bikewale.Utility.BWConfiguration.Instance.StaticUrl;
    ViewBag.staticFileVersion = Bikewale.Utility.BWConfiguration.Instance.StaticFileVersion;    
}
@if (Model != null)
{
    <section>
        <div class="container">
            <div class="grid-12">
                <div class="breadcrumb margin-top15 margin-bottom10">
                    <ul>
                        <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><a href="/"><span itemprop="title">Home</span></a></li>
                        <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><span class="bwsprite fa-angle-right margin-right10"></span><a href="/bike-videos/"><span itemprop="title">Bike Videos</span></a></li>
                        @if (!String.IsNullOrEmpty(videoModel.SubCatName))
                        {
                            <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb"><span class="bwsprite fa-angle-right margin-right10"></span><a href="@Bikewale.Utility.UrlFormatter.VideoByCategoryPageUrl(videoModel.SubCatName, videoModel.SubCatId)"><span itemprop="title">@videoModel.SubCatName</span></a></li>
                        }
                        <li><span class="bwsprite fa-angle-right margin-right10"></span>@videoModel.VideoTitle </li>
                    </ul>
                </div>
                <h1 class="font26 margin-bottom5">@videoModel.VideoTitle</h1>
            </div>
            <div class="clear"></div>
        </div>
    </section>
    <section>
        <div class="container margin-bottom20">
            <div class="grid-12">
                <div class="content-box-shadow content-inner-block-20">
                    <div id="embedVideo" class="margin-bottom15">
                        <iframe width="934" height="527" src="@string.Format("{0}&autoplay=1", videoModel.VideoUrl)" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <div class="font14 text-light-grey margin-bottom10">@Html.Raw(videoModel.Description)</div>
                    <p class="video-views-counts border-light-right font14 leftfloat padding-right40">
                        <span class="bwsprite video-views-icon margin-right5"></span><span class="text-light-grey margin-right5">Views:</span><span class="text-default comma">@Bikewale.Utility.Format.FormatNumeric(videoModel.Views.ToString())</span>
                    </p>
                    <p class="video-views-counts padding-left30 font14 leftfloat border-light-right">
                        <span class="bwsprite video-likes-icon margin-right5"></span><span class="text-light-grey margin-right5">Likes:</span><span class="text-default comma">@Bikewale.Utility.Format.FormatNumeric(videoModel.Likes.ToString())</span>
                    </p>
                    <div class="leftfloat powerdrift-subscribe padding-left30">
                        <script src="https://apis.google.com/js/platform.js"></script>
                        <div class="g-ytsubscribe" data-channel="powerdriftofficial" data-layout="default" data-theme="dark" data-count="hidden"></div>
                    </div>
                    <p class="rightfloat text-light-grey font12">@Model.DisplayDate</p>
                    <p class="clear"></p>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>
}
@{Html.RenderAction("BikeInfoCard", "GenericBikeInfo", new Bikewale.Models.Mobile.Videos.GenericBikeInfoCard { ModelId = @ViewBag.ModelId, CityId = @ViewBag.CityId });}
@{Html.RenderAction("SimilarVideos", "Videos", new { videoId = videoModel.BasicId, modelId = @ViewBag.ModelId });}
@{Html.RenderAction("PopularBodyStyleDesktop", "PopularBikes", new { modelId=@ViewBag.ModelId, topCount=@ViewBag.TopCount, cityId = @ViewBag.CityId});}
<script type="text/javascript" src="@(!string.IsNullOrEmpty(ViewBag.staticUrl) ? ("https://st.aeplcdn.com" + @ViewBag.staticUrl) : "")/src/frameworks.js?@ViewBag.staticFileVersion"></script>
<script type="text/javascript" src="@(!string.IsNullOrEmpty(ViewBag.staticUrl) ? ("https://st.aeplcdn.com" + @ViewBag.staticUrl) : "")/src/frameworks.js?@ViewBag.staticFileVersion"></script>
<script type="text/javascript" src='https://st2.aeplcdn.com/bikewale/min/src/jquery.floating-social-share.min.js'></script>

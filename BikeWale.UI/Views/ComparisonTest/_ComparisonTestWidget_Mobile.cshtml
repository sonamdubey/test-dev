@model IEnumerable<Bikewale.Entities.CMS.Articles.ArticleSummary>
@using Bikewale.Utility
@if (Model != null)
{
    foreach (var review in Model)
    {
        <div class="margin-bottom20">
            <div class="review-image-wrapper">
                <a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(review.BasicId),review.ArticleUrl,Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.RoadTest)))">
                    <img alt="@review.Title" title="@review.Title" src="@Image.GetPathToShowImages(review.OriginalImgUrl, review.HostUrl, ImageSize._144x81, QualityFactor._70)">
                </a>
            </div>
            <div class="review-heading-wrapper">
                <a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(review.BasicId),review.ArticleUrl,Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.RoadTest)))" title="@review.Title" class="font14 target-link">@FormatDescription.TruncateDescription(review.Title, 50)</a>
                <div class="grid-7 alpha padding-right5">
                    <span class="bwmsprite calender-grey-sm-icon"></span>
                    <span class="article-stats-content">@FormatDate.GetFormatDate(Convert.ToString(review.DisplayDate), "dd MMM yyyy")</span>
                </div>
                <div class="grid-5 alpha omega">
                    <span class="bwmsprite author-grey-sm-icon"></span>
                    <span class="article-stats-content">@review.AuthorName</span>
                </div>
                <div class="clear"></div>
            </div>
            <p class="margin-top10">
                @FormatDescription.TruncateDescription(review.Description, 150)
            </p>
        </div>
    }
}

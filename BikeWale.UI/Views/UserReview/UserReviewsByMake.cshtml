@model Bikewale.Models.UserReviews.UserReviewByMakeVM

@{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/sass/review/make.css' inline>";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container card-bottom-margin">
        <div class="grid-12 content-box-shadow margin-bottom20 alpha omega">
            <h1 class="padding-15-20">Browse @Model.Make bike reviews</h1>

            <div class="padding-left15 padding-right15">
                <h2 class="padding-left5 font14 padding-bottom5">Popular models</h2>
                <ul class="card-container">
                    @foreach (var bike in Model.PopularBikes)
                    {
                        string bikeName = string.Format("{0} Reviews",bike.Model.ModelName);
                        <li class="model-card">
                            <a href="@Bikewale.Utility.UrlFormatter.FormatUserReviewUrl(bike.Make.MaskingName,bike.Model.MaskingName)" title="@bikeName" class="block">
                                <div class="model-card__image-preview">
                                    <img src="@Bikewale.Utility.Image.GetPathToShowImages(bike.OriginalImagePath,bike.HostUrl,Bikewale.Utility.ImageSize._310x174,Bikewale.Utility.QualityFactor._75)" title="@bikeName" alt="@bikeName">
                                </div>
                                <div class="card-desc-block">
                                    <h3 class="font15 text-black margin-bottom5">@bikeName</h3>
                                    <div class="rating-container">
                                        <div class="grid-6-inline rate-count-@Math.Round(bike.OverallRating)" data-rate-bg="@Math.Round(bike.OverallRating)">
                                            <span class="star-icon star-size-14"></span>
                                            <span class="inline-block">@bike.OverallRating.ToString("0.0").TrimEnd('0', '.')</span>
                                            <span class="font11 text-xt-light inline-block margin-left5">(@bike.RatingsCount ratings)</span>
                                        </div>
                                        <div class="grid-6-inline font12 text-default divider-left">Read @bike.ReviewCount reviews</div>
                                        <span class="bwsprite next-grey-icon-listing"></span>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                    
                </ul>

            </div>
            @if (Model.OtherBikes != null && Model.OtherBikes.Any())
            {
                <div class="other-model-block">
                    <h2 class="padding-left5 font14">Other models</h2>
                    <ul class="card-container">
                        @foreach (var bike in Model.OtherBikes)
                        {
                            string bikeName = string.Format("{0} Reviews",bike.Model.ModelName);
                            <li>
                                <a href="@Bikewale.Utility.UrlFormatter.FormatUserReviewUrl(bike.Make.MaskingName,bike.Model.MaskingName)" title="@bikeName">
                                    @bikeName (@bike.ReviewCount)
                                </a>
                            </li>
                        }
                       
                    </ul>
                </div>
            }
            
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</section>


@{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/user-review/write-review.css' />";
    Model.Page_JS_Path = "/m/src/user-review/write-review.js";
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
}

<section>
    <div id="write-review-form">
        <div class="container content-box-shadow card-bottom-margin font14">
            <div class="padding-15-20 content-box-shadow">
                <div class="model-image-grid inline-block">
                    <img src="https://imgd.aeplcdn.com//110x61//bw/models/bajaj-pulsar-rs200.jpg" alt="" />
                </div>
                <div class="model-details-grid inline-block">
                    <h1 class="text-truncate margin-bottom5">Bajaj Pulsar RS200</h1>
                    <div>
                        <span class="font12 text-slate-grey">You rated:</span><span class="bwmsprite star-one"></span><span class="text-bold">2.8</span><span class="font12 text-xx-light">/5</span>
                    </div>
                </div>
            </div>
            <div class="padding-top15 padding-right20 padding-bottom5 padding-left20">
                <h2 class="margin-bottom10" data-bind="text: headingText"></h2>
                <p class="text-slate-grey margin-bottom10">Tell us more about it. You may consider writing about:</p>
                <ol class="numeric-list margin-bottom15">
                    <li>Buying experience</li>
                    <li>Riding experience</li>
                    <li>Details about looks, performance etc.</li>
                    <li>Servicing and maintenance</li>
                    <li>Pros and Cons</li>
                </ol>
                <div class="textarea-box margin-bottom15">
                    <textarea data-bind="textInput: detailedReview" id="getDetailedReview" rows="9" cols="42" placeholder="The more detailed your review, the more useful it will be. Write your review."></textarea>

                    <div data-bind="visible: !detailedReviewFlag()" class="review-char-count position-abt font12">
                        <span data-bind="visible: detailedReview().length > 0"><span data-bind="text: detailedReview().length"></span>/</span><span data-bind="text: reviewCharLimit"></span>&nbsp;min
                    </div>

                    <div data-bind="visible: detailedReviewFlag" class="textarea-error position-abt">
                        <span class="error-text" data-bind="text: detailedReviewError"></span>
                    </div>
                </div>

                <h3 class="font15 margin-bottom10">Give a title to your review</h3>
                <p class="text-slate-grey margin-bottom20">A catchy title will grab eyeballs, and more people will read your review.</p>

                <div class="input-box form-control-box" data-bind="css: reviewTitle().length > 0 ? 'not-empty' : ''">
                    <input type="text" id="getReviewTitle" data-bind="textInput: reviewTitle" />
                    <label for="getReviewTitle">Your title</label>
                    <span class="boundary"></span>
                    <span class="error-text"></span>
                </div>

            </div>
        </div>

        <div class="container content-box-shadow content-inner-block-20 card-bottom-margin font14">
            <h2 class="padding-bottom5">Can you share a little more about this bike?<span class="text-light-grey text-unbold font14">&nbsp;(Optional)</span></h2>
            <ul class="detailed-question-list margin-bottom20">
                <li class="list-item">
                    <p class="item-title">Visual appeal</p>
                    <p class="item-subtitle">Remember, what others thought when they first saw this bike!</p>

                    <ul class="item-rating-list" data-list-type="0" data-bind="css: visualAppealCount() > 0 ? 'opacity-active' : ''">
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 1}, css: visualAppealCount() > 0 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 2}, css: visualAppealCount() > 1 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 3}, css: visualAppealCount() > 2 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 4}, css: visualAppealCount() > 3 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 5}, css: visualAppealCount() > 4 ? 'star-one' : 'star-zero'"></li>
                    </ul>
                </li>

                <li class="list-item">
                    <p class="item-title">Comfort</p>
                    <p class="item-subtitle">Tell us how comfortable do you feel while riding this bike in traffic, long drives etc.</p>

                    <ul class="item-rating-list" data-list-type="1" data-bind="css: comfortCount() > 0 ? 'opacity-active' : ''">
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 1}, css: comfortCount() > 0 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 2}, css: comfortCount() > 1 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 3}, css: comfortCount() > 2 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 4}, css: comfortCount() > 3 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 5}, css: comfortCount() > 4 ? 'star-one' : 'star-zero'"></li>
                    </ul>
                </li>

                <li class="list-item">
                    <p class="item-title">Service experience</p>
                    <p class="item-subtitle">Tell us how comfortable do you feel while riding this bike in traffic, long drives etc.</p>

                    <ul class="item-rating-list" data-list-type="2" data-bind="css: serviceExperienceCount() > 0 ? 'opacity-active' : ''">
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 1}, css: serviceExperienceCount() > 0 ? 'star-one' : ' star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 2}, css: serviceExperienceCount() > 1 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 3}, css: serviceExperienceCount() > 2 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 4}, css: serviceExperienceCount() > 3 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 5}, css: serviceExperienceCount() > 4 ? 'star-one' : 'star-zero'"></li>
                    </ul>
                </li>

                <li class="list-item">
                    <p class="item-title">Value for money</p>
                    <p class="item-subtitle">How satisfied are you with your motorcycle? Did you get a bike worth the money?</p>

                    <ul class="item-rating-list" data-list-type="3" data-bind="css: valueForMoneyCount() > 0 ? 'opacity-active' : ''">
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 1}, css: valueForMoneyCount() > 0 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 2}, css: valueForMoneyCount() > 1 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 3}, css: valueForMoneyCount() > 2 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 4}, css: valueForMoneyCount() > 3 ? 'star-one' : 'star-zero'"></li>
                        <li class="bwmsprite" data-bind="click: setRating, attr: {'data-count': 5}, css: valueForMoneyCount() > 4 ? 'star-one' : 'star-zero'"></li>
                    </ul>
                </li>
            </ul>

            <h3 class="font15 margin-bottom10">Tips for prospective buyers</h3>
            <p class="text-light-grey margin-bottom10">Share key tips which you think were useful while owning/riding this bike. Helps others with your key advice.</p>
            <div class="textarea-box margin-bottom15">
                <textarea rows="4" cols="42" placeholder="Your tips"></textarea>
            </div>

            <input type="button" class="btn btn-orange" value="Submit review" data-bind="click: submitReview" />

            <ul class="user-rated-list">
                <li class="list-item">
                    <p class="inline-grid-6">Visual appeal</p>
                    <ul class="inline-grid-6 text-right">
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-zero"></li>
                    </ul>
                </li>
                <li class="list-item">
                    <p class="inline-grid-6">Comfort</p>
                    <ul class="inline-grid-6 text-right">
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-zero"></li>
                    </ul>
                </li>
                <li class="list-item">
                    <p class="inline-grid-6">Service experience</p>
                    <ul class="inline-grid-6 text-right">
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-zero"></li>
                    </ul>
                </li>
                <li class="list-item">
                    <p class="inline-grid-6">Value for money</p>
                    <ul class="inline-grid-6 text-right">
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-one"></li>
                        <li class="bwmsprite star-zero"></li>
                    </ul>
                </li>
            </ul>

        </div>
    </div>
</section>

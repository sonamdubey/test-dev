@model Bikewale.Models.UserReviews.UserReviewLandingVM

@{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/sass/review/landing.css' inline>";
    Model.Page_JS_Path = "/src/review/landing.js";
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.IsPageTypeLanding = true;
    Model.IsTransparentHeader = true;
    Model.PageMetaTags.AlternateUrl = "https://www.bikewale.com/m/review/";
}
<div class="bw-tabs-panel">
    <div class="banner-review" data-bg-image="0">
        <div class="container banner-container text-center top-campaign-banner-container">
            <h1 class="banner-head">BIKE REVIEWS</h1>
            <div class="bw-tabs-content">
                <ul class="bw-tabs tabs-type-switch">
                    <li data-tabs="userReviewContent" class="active">User Reviews</li>
                    <li data-tabs="expertReviewContent" class="">Expert Reviews</li>
                </ul>
            </div>
            @Html.Partial("~/views/UserReview/_SearchUserReviewExpertReviewModel.cshtml")
        </div>
    </div>

    <div id="userReviewContent" class="bw-tabs-data user-review">
        <section class="content-box-shadow  padding-bottom20">
            <div class="container">
                <div class="grid-12">
                    <div class="jcarousel-wrapper inner-content-carousel banner-swiper padding-top20">
                        <div class="jcarousel">
                            <ul>
                                <li class="jcarousel-card">

                                    <div class="carousel-image-preview">
                                        <span class="white-user-icon">
                                        </span>
                                    </div>
                                    <div class="carousel-details-block font12">
                                        <h3 class="margin-bottom10">5000+ user reviews</h3>
                                        <div class="font14 text-slate-grey">
                                            Verified, unbiased & detailed reviews from real owners
                                        </div>
                                    </div>

                                </li>
                                <li class="jcarousel-card">

                                    <div class="carousel-image-preview">
                                        <span class="white-like-disklike-icon">
                                        </span>
                                    </div>
                                    <div class="carousel-details-block font12">
                                        <h3 class="margin-bottom10">Pros & cons</h3>
                                        <div class="font14 text-slate-grey">
                                            Pros and cons & maintenance tips from users
                                        </div>
                                    </div>

                                </li>
                                <li class="jcarousel-card">

                                    <div class="carousel-image-preview">
                                        <span class="white-bike-icon">
                                        </span>
                                    </div>
                                    <div class="carousel-details-block font12">
                                        <h3 class="margin-bottom10">200+ Bike Models</h3>
                                        <div class="font14 text-slate-grey">
                                            Reviews for over 200 models available on BikeWale
                                        </div>
                                    </div>

                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>

        </section>

        @if (Model.TopRatedBikesWidget != null)
        {
            <section>
                @Html.Partial("~/views/UserReview/_TopRatedBikes.cshtml", Model.TopRatedBikesWidget)
            </section>
        }

        <section class="container">
            <h2 class="text-bold text-center margin-bottom20 font22 margin-top30">Bike Review Contest</h2>
            <div class="grid-12">
                <div class="contest-banner">
                    <span class="contest-banner__icon margin-bottom20"></span>
                    <p class="font18 text-white text-bold margin-bottom10">Help fellow bikers make the right choice</p>
                    <p class="font13 text-white margin-top5 margin-bottom30">Stand a chance to win Amazon voucher worth Rs. 2,000</p>
                    <div class="locator-search-container">
                        <div class="locator-search-make form-control-box">
                            <select id="reviewSelectMake" class="form-control make-model-chosen chosen-select">
                                <option value="0">Select a Make</option>
                                @foreach (var make in Model.Makes)
                                {
                                    <option maskingname="@make.MaskingName" value="@make.MakeId">@make.MakeName</option>
                                }
                            </select>
                            <div class="clear"></div>
                            <span class="bwsprite error-icon errorIcon hide"></span>
                            <div class="bw-blackbg-tooltip errorText hide"></div>
                        </div>
                        <div class="locator-search-model form-control-box">
                            <select id="reviewSelectModel" class="make-model-chosen form-control  chosen-select">
                                <option value="0">Select a Model</option>
                            </select>
                            <div class="clear"></div>
                            <span class="bwsprite error-icon errorIcon hide"></span>
                            <div class="bw-blackbg-tooltip errorText hide"></div>
                        </div>
                        <input type="button" id="applyFiltersBtn" class="btn btn-orange btn-lg locator-search-btn margin-bottom5" value="Write and win &#x20b9; 2,000" />
                        <span id="querystring" data-query="v5EINN8tC9Z6yeYD2azFxQ==">

                            <input type="hidden" id="makeId" value="0">
                            <input type="hidden" id="modelId" value="0">
                        </span>
                    </div>
                </div>

            </div>
            <div class="grid-12">
                @if (Model.RecentUserReviewsList != null)
                {
                    <h2 class="font22 text-center margin-bottom20 padding-top30 text-bold">Recently uploaded reviews</h2>
                    <div class="jcarousel-wrapper inner-content-carousel user-review__swiper section-bottom-margin content-box-shadow padding-bottom20 padding-top20">
                        @Html.Partial("~/views/UserReview/_RecentUploadedReviews.cshtml", Model.RecentUserReviewsList)
                    </div>
                }
            </div>
        </section>
    </div>

    <div id="expertReviewContent" class="bw-tabs-data" style="display: none">
        <section class="content-box-shadow  padding-bottom20">
            <div class="container">
                <div class="grid-12">
                    <div class="jcarousel-wrapper inner-content-carousel banner-swiper padding-top20">
                        <div class="jcarousel">
                            <ul>
                                <li class="jcarousel-card">

                                    <div class="carousel-image-preview">
                                        <span class="white-expert-icon">
                                        </span>
                                    </div>
                                    <div class="carousel-details-block font12">
                                        <h3 class="margin-bottom10">500+ expert reviews</h3>
                                        <div class="font14 text-slate-grey">
                                            Unbiased & detailed reviews from BikeWale expert
                                        </div>
                                    </div>

                                </li>
                                <li class="jcarousel-card">

                                    <div class="carousel-image-preview">
                                        <span class="comparison-icon">
                                        </span>
                                    </div>
                                    <div class="carousel-details-block font12">
                                        <h3 class="margin-bottom10">100+ comparison tests</h3>
                                        <div class="font14 text-slate-grey">
                                            Detailed comparison test of bikes on 10 parameters
                                        </div>
                                    </div>

                                </li>
                                <li class="jcarousel-card">

                                    <div class="carousel-image-preview">
                                        <span class="white-first-ride-icon">
                                        </span>
                                    </div>
                                    <div class="carousel-details-block font12">
                                        <h3 class="margin-bottom10">First ride reviews</h3>
                                        <div class="font14 text-slate-grey">
                                            Know the expert opinion on recently launched biked
                                        </div>
                                    </div>

                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>

        </section>

        @if (Model.BikesWithExpertReviews != null)
        {

            @Html.Partial("~/views/UserReview/_PopularBikesWithExpertReviews.cshtml", Model.BikesWithExpertReviews)

        }
        <section>
            <div class="container section-bottom-margin">
                <h2 class="text-bold text-center margin-bottom20 font22 margin-top20 margin-top30">Recently uploaded reviews</h2>
                <div class="grid-12">
                    <div class="content-box-shadow padding-bottom20">
                        @Html.Partial("~/views/ExpertReviews/_ExpertReviewHorizontalListByModel.cshtml", Model.ExpertReviews)
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="container section-bottom-margin">
                <h2 class="text-bold text-center margin-bottom20 font22 margin-top20 margin-top30">Know our Experts</h2>
                <div class="grid-12">
                    <div class="author-block">
                        <span class="author-block__title">WHO ARE THEY?</span>
                        <p class="author-block__description">A bunch of petrolheads with a never-ending appetite for mopeds, superbikes and everything in between.</p>
                        @Html.Partial("~/Views/Author/_AuthorsListCarousel.cshtml", Model.Authors)
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

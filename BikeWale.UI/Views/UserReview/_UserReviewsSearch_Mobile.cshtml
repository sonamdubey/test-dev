@model Bikewale.Entities.UserReviews.BikeReviewsInfo

@if (Model!=null)
{
    <section>
        <div id="modelReviewsListing" class="container content-box-shadow card-bottom-margin">
            <h2 class="h2-heading padding-top15 padding-right20 padding-left20">Reviews on @Model.BikeName</h2>
            <div id="overallSpecsTopContent" class="bg-white position-rel user-review-tabs">
                <div id="overallSpecsTab" class="overall-specs-tabs-container">
                    <ul class="overall-specs-tabs-wrapper">
                        <li data-category="1" data-page-num="1" data-count="@Model.MostHelpfulReviews" data-bind="click: toggleReviewList" class="active">Most Helpful (@Model.MostHelpfulReviews)</li>
                        <li data-category="2" data-page-num="1" data-count="@Model.MostRecentReviews" data-bind="click: toggleReviewList">Most Recent (@Model.MostRecentReviews)</li>
                        <li data-category="3" data-page-num="1" data-count="@Model.PostiveReviews" data-bind="click: toggleReviewList">Positive (@Model.PostiveReviews)</li>
                        <li data-category="4" data-page-num="1" data-count="@Model.NegativeReviews" data-bind="click: toggleReviewList">Negative (@Model.NegativeReviews)</li>
                        <li data-category="5" data-page-num="1" data-count="@Model.NeutralReviews" data-bind="click: toggleReviewList">Neutral (@Model.NeutralReviews)</li>
                    </ul>
                </div>
            </div>

            <div class="padding-top15 padding-bottom15 margin-right20 margin-left20 border-solid-bottom" data-bind="visible: (activeReviewCategory() == 3 || activeReviewCategory() == 4) && reviewsAvailable()">
                <span class="bwmsprite info-sm"></span>
                <span class="grid-11-inline font14 text-light-grey">Reviews are sorted on the basis of upvotes</span>
            </div>

            <div data-bind="visible: reviewsAvailable()">
                <ul class="user-review-list" data-bind="template: { name: 'review-listing-template', foreach: activeReviewList }"></ul>

                <div class="margin-right10 margin-left10 padding-top15 padding-bottom15 border-solid-top">
                    <div class="grid-5 omega text-light-grey font13">
                        <div>
                            <span class="text-bold">1</span>-<span class="text-bold">8</span>&nbsp;of&nbsp;<span class="text-bold">100</span>&nbsp;reviews
                        </div>
                    </div>
                    <div id="pagination-list-content" class="grid-7 alpha omega position-rel rightfloat pagination-list-content">
                        <ul id="pagination-list" class="pagination-list">
                            <li class="page-url active">
                                <a href="">1</a>
                            </li>
                            <li class="page-url">
                                <a href="">2</a>
                            </li>
                            <li class="page-url">
                                <a href="">3</a>
                            </li>
                            <li class="page-url">
                                <a href="">4</a>
                            </li>
                            <li class="page-url">
                                <a href="">5</a>
                            </li>
                        </ul>

                        <span class="pagination-control-prev inactive">
                            <a href="javascript:void(0)" class="bwmsprite prev-page-icon"></a>
                        </span>
                        <span class="pagination-control-next">
                            <a href="javascript:void(0)" class="bwmsprite next-page-icon"></a>
                        </span>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>

            <div class="content-inner-block-20 text-center" data-bind="visible: !reviewsAvailable()">
                <div class="circle-placeholder">
                    <span class="bwmsprite review-lg margin-top25"></span>
                </div>
                <p class="font14 text-light-grey">There are no <span data-bind="text: categoryName"></span> reviews for this bike</p>
            </div>

            <div id="listingFooter"></div>
        </div>
    </section>

    <script type="text/html" id="review-listing-template">
        <li>
            <a href="" class="item-target">
                <div class="margin-bottom10">
                    <span class="rating-badge" data-bind="css: 'bg-rate-' + rating">
                        <span class="bwmsprite star-white"></span>
                        <span data-bind="text: rating"></span>
                    </span>
                    <div class="grid-10-inline font15 text-black text-bold text-truncate">
                        <span class="review-title position-rel" data-bind="text: title"></span>
                    </div>
                </div>

                <div class="margin-bottom10">
                    <div class="grid-4 alpha padding-right5">
                        <span class="bwmsprite calender-grey-sm-icon"></span>
                        <span class="article-stats-content" data-bind="text: submittedOn"></span>
                    </div>
                    <div class="grid-8 alpha omega">
                        <span class="bwmsprite author-grey-sm-icon"></span>
                        <span class="article-stats-content" data-bind="text: author"></span>
                    </div>
                    <div class="clear"></div>
                </div>

                <div class="font14 text-slate-grey margin-bottom10">
                    <p class="inline" data-bind="text: description"></p>
                    <span class="inline text-link">Read more</span>
                </div>

                <div class="grid-7 alpha">
                    <div class="item-stats-grid">
                        <span class="bwmsprite like-sm"></span>
                        <span data-bind="text: likesCount"></span>
                    </div>
                    <div class="item-stats-grid">
                        <span class="bwmsprite dislike-sm"></span>
                        <span data-bind="text: disLikesCount"></span>
                    </div>
                </div>
                <div class="grid-5 omega text-right" data-bind="visible: viewsCount > 0">
                    <div class="item-views-grid">
                        <span class="bwmsprite views-sm"></span>
                        <span data-bind="text: viewsCount"></span><span>&nbsp;Views</span>
                    </div>
                </div>
                <div class="clear"></div>
            </a>
        </li>
    </script>
}
else
{
    <section>
        <div class="container content-box-shadow card-bottom-margin">
            <h2 class="h2-heading padding-15-20 content-box-shadow">Reviews on Honda CB Shine</h2>
            <div class="content-inner-block-20 text-center">
                <div class="circle-placeholder">
                    <span class="bwmsprite write-icon margin-top25"></span>
                </div>
                <p class="font14 text-light-grey margin-bottom15">There are no reviews for this bike. Be the first one to share your experience.</p>
                <a href="" class="btn btn-white btn-auto-32">Write a review</a>
            </div>
        </div>
    </section>
}

@{
    Model.IsHeaderFix = false;
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/user-review/write-review.css' />";
    Model.Page_JS_Path = "/src/user-review/write-review.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container padding-top10">
        <div class="grid-12">
            <div class="breadcrumb margin-bottom15">
                <!-- breadcrumb code starts here -->
                <ul>
                    <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <a itemprop="url" href="/"><span itemprop="title">Home</span></a>
                    </li>
                    <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <span class="bwsprite fa-angle-right margin-right10"></span>
                        <a itemprop="url" href="" title=""><span itemprop="title">User reviews</span></a>
                    </li>
                    <li><span class="bwsprite fa-angle-right margin-right10"></span>Write a review</li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>

<section>
    <div id="rate-bike-form" class="container section-bottom-margin font14">
        <div class="grid-12">
            <div class="content-box-shadow">
                <h1 class="content-box-shadow padding-15-20">Bajaj Dominar 400</h1>
                <div class="padding-15-20">
                    <div class="grid-8 alpha">
                        <h2 class="font18 margin-bottom10">How much do you like this bike?</h2>
                        <p class="text-slate-grey">Consider looks & styling, performance, servicing experience, mileage etc. before you rate.</p>

                        <div id="bike-rating-box">
                            <div class="circle-placeholder">
                                <span class="bwsprite" data-bind="css: ratingCount() > 0 ? 'feedback-' + ratingCount() : 'star-one'"></span>
                            </div>
                            <div class="rating-placeholder">
                                <h3 class="font20 font-bold" data-bind="text: feedbackTitle">Rate your bike</h3>
                                <p class="margin-top5" data-bind="text: feedbackSubtitle"></p>
                                <p class="error-text" data-bind="slideIn: validateRatingCountFlag() && ratingCount() == 0" style="display: none">Please rate the bike before submitting!</p>

                                <ul class="rating-box-star-list item-rating-list hover-effect" data-bind="css: ratingCount() > 0 ? 'opacity-active' : ''">
                                    <li data-bind="click: setRating, hoverRating: clickEventRatingCount, attr: {'data-count': 5}, css: ratingCount() > 4 ? 'star-one-active' : ''">
                                        <span class="bwsprite star-zero"></span>
                                    </li>
                                    <li data-bind="click: setRating, hoverRating: clickEventRatingCount, attr: {'data-count': 4}, css: ratingCount() > 3 ? 'star-one-active' : ''">
                                        <span class="bwsprite star-zero"></span>
                                    </li>
                                    <li data-bind="click: setRating, hoverRating: clickEventRatingCount, attr: {'data-count': 3}, css: ratingCount() > 2 ? 'star-one-active' : ''">
                                        <span class="bwsprite star-zero"></span>
                                    </li>
                                    <li data-bind="click: setRating, hoverRating: clickEventRatingCount, attr: {'data-count': 2}, css: ratingCount() > 1 ? 'star-one-active' : ''">
                                        <span class="bwsprite star-zero"></span>
                                    </li>
                                    <li data-bind="click: setRating, hoverRating: clickEventRatingCount, attr: {'data-count': 1}, css: ratingCount() > 0 ? 'star-one-active' : ''">
                                        <span class="bwsprite star-zero"></span>
                                    </li>
                                </ul>
                                <div class="clear"></div>

                            </div>
                        </div>

                        <div id="rate-bike-questions" class="margin-bottom20 border-solid-bottom">
                            <div class="question-field">
                                <h3 class="question-item">What do you use this bike for?</h3>
                                <p class="error-text" data-bind="slideIn: validationFlag() && bikeUseType() == 0" style="display: none">This is a compulsory field.</p>
                                <ul class="answer-list">
                                    <li data-value="1" data-bind="click: setBikeUseType">Daily Commute</li>
                                    <li data-value="2" data-bind="click: setBikeUseType">Occasional Commute</li>
                                    <li data-value="3" data-bind="click: setBikeUseType">Leisure Rides</li>
                                    <li data-value="4" data-bind="click: setBikeUseType">Tours</li>
                                    <li data-value="5" data-bind="click: setBikeUseType">All</li>
                                </ul>
                                <div class="clear"></div>
                            </div>

                            <div class="question-field">
                                <h3 class="question-item">How long have you owned this bike for?</h3>
                                <p class="error-text" data-bind="slideIn: validationFlag() && bikeTimeSpan() == 0" style="display: none">This is a compulsory field.</p>
                                <ul class="answer-list">
                                    <li data-value="1" data-bind="click: setBikeTimeSpan">Don't own</li>
                                    <li data-value="2" data-bind="click: setBikeTimeSpan">< 3 months</li>
                                    <li data-value="3" data-bind="click: setBikeTimeSpan">3-6 months</li>
                                    <li data-value="4" data-bind="click: setBikeTimeSpan">6 months-1 yr</li>
                                    <li data-value="5" data-bind="click: setBikeTimeSpan">> 1 yr</li>
                                </ul>
                                <div class="clear"></div>
                            </div>

                            <div id="question-bike-distance" class="question-field" data-bind="slideIn: bikeTimeSpan() > 1">
                                <h3 class="question-item">How much have you ridden this bike?</h3>
                                <p class="error-text" data-bind="slideIn: validateDistanceFlag()" style="display: none">This is a compulsory field.</p>
                                <ul class="answer-list">
                                    <li data-value="1" data-bind="click: setBikeDistance">< 5000 kms</li>
                                    <li data-value="2" data-bind="click: setBikeDistance">5000-10000 kms</li>
                                    <li data-value="3" data-bind="click: setBikeDistance">10000-15000 kms</li>
                                    <li data-value="4" data-bind="click: setBikeDistance">> 15000 kms</li>
                                </ul>
                                <div class="clear"></div>
                            </div>
                        </div>

                        <div class="margin-bottom5">
                            <div class="margin-bottom20">
                                <h2 class="font18 margin-bottom10">Personal details</h2>
                                <p class="text-slate-grey">We wish to credit this rating to you. We will never spam your inbox.</p>
                            </div>

                            <div class="grid-6 alpha">
                                <div class="input-box" data-bind="css: personalDetails().userName().length > 0 ? 'not-empty' : ''">
                                    <input type="text" id="getUserName" data-bind="textInput: personalDetails().userName" />
                                    <label for="getUserName">Name<sup>*</sup></label>
                                    <span class="boundary"></span>
                                    <span class="error-text"></span>
                                </div>
                            </div>
                            <div class="grid-6 omega">
                                <div class="input-box" data-bind="css: personalDetails().emailId().length > 0 ? 'not-empty' : ''">
                                    <input type="text" id="getEmailID" data-bind="textInput: personalDetails().emailId" />
                                    <label for="getEmailID">Email ID<sup>*</sup></label>
                                    <span class="boundary"></span>
                                    <span class="error-text"></span>
                                </div>
                            </div>
                            <div class="clear"></div>

                            <input type="button" class="btn btn-orange btn-220-40" value="Submit rating" data-bind="click: submitRating" />
                        </div>
                    </div>
                    <div class="grid-4 omega">

                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>

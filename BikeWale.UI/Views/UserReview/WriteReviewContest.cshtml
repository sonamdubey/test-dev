@{
    //Model.IsTransparentHeader = true;
	Model.IsHeaderFix = false;
	Model.IsPageTypeLanding = true;
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/user-review/review-contest.css' />";
    Model.Page_JS_Path = "/src/user-review/review-contest.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css?family=Oxygen:300,400,700" rel="stylesheet">

<section>
    <div class="contest-banner font-oxygen">
        <div class="container">
			<div class="contest__welcome-box">
				<h1 class="contest__box-heading">Help fellow bikers make the right choice.</h1>
				<button type="button" id="bannerTargetBtn" class="btn btn-orange btn-190-40 text-uppercase">Write a review</button>
			</div>
        </div>
    </div>
</section>

<section>
	<div class="container font-oxygen">
		<div class="rewards-banner">
			<p>Best review wins</p>
			<p class="font-bold">Amazon voucher worth&nbsp;<span class="text-unbold">&#x20b9;</span>&nbsp;1,000 every week</p>
		</div>
	</div>
</section>

<section>
	<div id="specsTabsContentWrapper" class="font-oxygen">
		<div class="container padding-right10 padding-left10">
			<div id="overallTabsWrapper" class="overall-tabs position-rel">
				<div id="overallSpecsTab" class="overall-specs-tabs-container">
					<div class="overall-specs-tabs-wrapper">
						<a href="#overviewContent" class="active" rel="nofollow">Overview</a>
						<a href="#cheatsheetContent" rel="nofollow">Cheatsheet</a>
						<a href="#winnersContent" rel="nofollow">Winners' reviews</a>
						<a href="#tncContent" rel="nofollow">T&amp;C</a>
					</div>
				</div>
			</div>

			<div id="overviewContent" class="bw-model-tabs-data card-shadow">
				<div class="overview__top-card">
					<h2 class="h2-heading">Write it right</h2>
					<ul class="guideline-list">
						<li class="list-item">
							<span class="guideline-sprite truth-icon"></span>
							<p class="guideline-item-title">Tell the truth</p>
						</li>
						<li class="list-item">
							<span class="guideline-sprite details-icon"></span>
							<p class="guideline-item-title">Put in details</p>
						</li>
						<li class="list-item">
							<span class="guideline-sprite original-icon"></span>
							<p class="guideline-item-title">Be original</p>
						</li>
					</ul>
					<p class="font14 text-center">Write a review of your bike - new or old, owned or sold - and help fellow riders make the right choice</p>
				</div>

				<div id="selectBikeForm" class="overview__review-form">
					<p class="review-form__title">Start writing your review</p>

					<div class="select-box review-form-field">
						<p class="select-label">Make<sup>*</sup></p>
						<select id="reviewSelectMake" class="chosen-select bike-select-field" data-placeholder="Select make">
							<option value></option>
							<option value="2">Aprilia</option>
							<option value="1">Bajaj</option>
							<option value="40">Benelli</option>
							<option value="3">BMW</option>
							<option value="4">Ducati</option>
							<option value="5">Harley Davidson</option>
							<option value="6">Hero</option>
							<option value="39">Hero Electric</option>
							<option value="37">Hero Honda</option>
						</select>
						<span class="boundary"></span>
						<span class="error-text"></span>
					</div>

					<div class="select-box review-form-field">
						<p class="select-label">Model<sup>*</sup></p>
						<select id="reviewSelectModel" class="chosen-select bike-select-field" data-placeholder="Select model" disabled>
							<option value></option>
						</select>
						<span class="boundary"></span>
						<span class="error-text"></span>
					</div>

					<input id="reviewBikeSubmitBtn" type="button" class="btn btn-orange btn-215-34 text-uppercase" value="Write your review">
				</div>

			</div>

			<div id="cheatsheetContent" class="bw-model-tabs-data card-shadow card-spacing">
				<h2 class="h2-heading">Cheatsheet to win</h2>
				<div class="collapsible-list font-light">
					<ul class="main-content bullet-list">
						<li>Be original. Our examiners get a stroke on seeing copied text. Be kind to them.</li>
						<li>Write no less than 150 words. We are sure you have more to tell.</li>
						<li>Spill all the beans. Write all the pros and cons. The more the details, the more your chances of winning.</li>
					</ul>
					<ul class="more-content bullet-list more-list-content">
						<li>Be the early bird. While the contest is open till 19 June 2017, don't wait till the last minute to write the winning review.</li>
						<li>Keep calm and be good. The contest judges are incorruptible.</li>
						<li>Be patient. Winners will be announced on 22 June 2017. The winners will be notified via e-mail.</li>
					</ul>
					<a href="javascript:void(0)" class="read-more-list rightfloat margin-top10" rel="nofollow">Read more&nbsp;[+]</a>
					<div class="clear"></div>
				</div>
			</div>
		</div>

		<div id="winnersContent" class="bw-model-tabs-data card-shadow">
			<h2 class="h2-heading text-white">Previous Winners' Reviews</h2>
			<div class="swiper-container winner-review-swiper">
				<ul class="swiper-wrapper">
					<li class="swiper-slide">
						<span class="review-author john-doe"></span>
						<p class="card-title">Pravar</p>
						<span class="rating-badge" data-rate-bg="3">
							<span class="bwsprite star-white"></span>3
						</span>
						<p class="review-card-subtitle">Royal Enfield Thunderbird 350</p>
						<p class="review-card-desc">"The buying experience was a bliss.as it's no surprise that at this price range.."</p>
						<a href="/royalenfield-bikes/thunderbird/reviews/1933/" class="swiper-card-target text-underline">Read full review</a>
					</li>
					<li class="swiper-slide">
						<span class="review-author john-doe"></span>
						<p class="card-title">Shrikanth</p>
						<span class="rating-badge" data-rate-bg="4">
							<span class="bwsprite star-white"></span>4
						</span>
						<p class="review-card-subtitle">Hero Passion PRO i3s</p>
						<p class="review-card-desc">"Hero passion pro is a budget bike which is available at a reasonable price.."</p>
						<a href="/hero-bikes/passion-pro/reviews/2934/" class="swiper-card-target text-underline">Read full review</a>
					</li>
					<li class="swiper-slide">
						<span class="review-author john-doe"></span>
						<p class="card-title">B Lava Kumar</p>
						<span class="rating-badge" data-rate-bg="1">
							<span class="bwsprite star-white"></span>1
						</span>
						<p class="review-card-subtitle">Royal Enfield Classic 350</p>
						<p class="review-card-desc">"I have been hearing some weird noises from engine since day.."</p>
						<a href="/royalenfield-bikes/classic/reviews/452/" class="swiper-card-target text-underline">Read full review</a>
					</li>
				</ul>
				<div class="swiper-pagination"></div>
				<div class="swiper-button-next swiper-button-white"></div>
				<div class="swiper-button-prev swiper-button-white"></div>
			</div>
		</div>


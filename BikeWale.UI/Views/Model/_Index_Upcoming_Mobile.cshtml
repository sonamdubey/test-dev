@model Bikewale.Models.BikeModels.ModelPageVM

<section>
	<a href="/m/bike-review-contest/?csrc=@((int)Bikewale.Entities.UserReviews.UserReviewPageSourceEnum.Mobile_ModelPage)" class="contest-slug-sm slug-teal-target">
		<span class="trophy-white"></span>
		<p class="contest-slug__label">Write a review and win Amazon vouchers worth &#x20B9;1000</p>
		<span class="bwmsprite arrow-white-right"></span>
	</a>
</section>

<section>
    <div class="contaniner clearfix">
        <span itemprop="name" class="hide">@Model.BikeName</span>
        <div class="padding-top10 padding-left20 padding-right20 bg-white">
            <h1 class="padding-bottom5">@Model.BikeName</h1>
        </div>

        <div id="modelSpecsTabsContentWrapper">
            <div id="modelOverallSpecsTopContent" class="bg-white position-rel">
                <div id="overallSpecsTab" class="overall-specs-tabs-container">
                    @Html.Partial("~/Views/Model/_Index_Tabs_Mobile.cshtml", Model)
                </div>
            </div>

            <div id="overviewContent" class="bw-model-tabs-data card-bottom-margin content-details-wrapper">
                <div class="content-box-shadow card-bottom-margin">
                    @Html.Partial("~/Views/Model/_Index_ModelGallery_Mobile.cshtml", Model)
                    @if (Model.ModelPageEntity != null && Model.ModelPageEntity.UpcomingBike != null)
                        {
                        <div class="elevated-shadow-top padding-15-20">
                            <p class="font12 text-light-grey">Expected price</p>
                            @if (Model.ModelPageEntity.UpcomingBike.EstimatedPriceMin != 0 && Model.ModelPageEntity.UpcomingBike.EstimatedPriceMax != 0)
                            {
                                <div itemprop="offers" itemscope itemtype="http://schema.org/AggregateOffer">
                                    <meta itemprop="priceCurrency" content="INR">
                                    <meta itemprop="lowPrice" content="@Model.ModelPageEntity.UpcomingBike.EstimatedPriceMin">
                                    <meta itemprop="highPrice" content="@Model.ModelPageEntity.UpcomingBike.EstimatedPriceMax">
                                    <span class="font24 text-bold">
                                        @Html.Raw("<span >&#x20B9;</span>")
                                        @Bikewale.Utility.Format.FormatNumeric(Convert.ToString(Model.ModelPageEntity.UpcomingBike.EstimatedPriceMin)) -
                                        &nbsp;@Html.Raw("<span>&#x20B9;</span>")&nbsp;@Bikewale.Utility.Format.FormatNumeric(Convert.ToString(Model.ModelPageEntity.UpcomingBike.EstimatedPriceMax))
                                    </span>
                                </div>
                            }
                            else
                            {
                                <p class="font26 default-showroom-text text-light-grey margin-bottom5">Price Unavailable</p>
                                }
                            @if (!string.IsNullOrEmpty(Model.ModelPageEntity.UpcomingBike.ExpectedLaunchDate))
                                {
                                <div class="border-solid-bottom margin-top10 margin-bottom10"></div>
                                <p class="font12 text-light-grey">Expected launch date</p>
                                <p class="font18 margin-bottom5 text-bold">@Model.ModelPageEntity.UpcomingBike.ExpectedLaunchDate</p>

                                <p class="font14 text-grey">@Model.BikeName is not launched in India yet. Information on this page is tentative.</p>
                                }
                        </div>
                        }
                </div>
                @if (Model.ModelPageEntity.ModelVersionSpecs != null)
                    {
                    @Html.Partial("~/Views/Model/_Index_ModelSummary_Mobile.cshtml", Model)
                    }
            </div>

            @Html.Partial("~/Views/Model/_Index_DetailsCard_Mobile.cshtml", Model)
        </div>
    </div>
</section>

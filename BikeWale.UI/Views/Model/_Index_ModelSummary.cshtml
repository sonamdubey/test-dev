@model Bikewale.Models.BikeModels.ModelPageVM

<div id="modelSummaryContent" class="bw-model-tabs-data content-box-shadow content-inner-block-20 card-bottom-margin">
    @if (!Model.IsUpcomingBike)
    {        
        <div class="grid-8 alpha margin-bottom10">
            <table id="model-key-highlights" cellspacing="0" cellpadding="0" width="100%" border="0" class="font14 text-left">
                <thead>
                    <tr>
                        <th colspan="2"><h2 class="h2-heading padding-bottom5">@Model.BikeName Summary</h2></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ModelPageEntity.ModelDetails.MinPrice > 0)
                    {
                    <tr>
                        <td width="36%">Price</td>
                        <td width="64%">
                            <span class="bwsprite inr-sm-dark"></span>
                            <span class="text-bold">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(Model.ModelPageEntity.ModelDetails.MinPrice))</span>
                            <span class="font12 text-light-grey">(Ex-showroom @Bikewale.Utility.BWConfiguration.Instance.DefaultName)</span>
                        </td>
                    </tr>
                    }
                    @if (Model.ModelPageEntity != null && Model.ModelPageEntity.ModelVersionSpecs != null && Model.ModelPageEntity.ModelVersionSpecs.TopSpeed > 0)
                    {
                    <tr>
                        <td>Top speed</td>
                        <td class="text-bold"> @Model.ModelPageEntity.ModelVersionSpecs.TopSpeed kmph</td>
                    </tr>
                    }
                    @if (Model.ModelPageEntity != null && Model.ModelPageEntity.ModelVersionSpecs != null && Model.ModelPageEntity.ModelVersionSpecs.FuelEfficiencyOverall > 0)
                    {
                    <tr>
                        <td>Mileage</td>
                        <td class="text-bold"> @Model.ModelPageEntity.ModelVersionSpecs.FuelEfficiencyOverall kmpl</td>
                    </tr>
                    }
                    @if (Model.IsModelColorsAvailable)
                    {
                    <tr>
                        <td valign="top">Colours</td>
                        <td valign="top" class="text-bold">
                            <ul class="model-color-list">
                                @foreach (var colorName in Model.ModelPageEntity.ModelColors)
                                    {
                                    <li class="leftfloat">@colorName.ColorName</li>
                                    }
                            </ul>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="grid-4 text-center alpha omega margin-bottom10">
            @{Html.RenderPartial("/Views/Shared/Ads/Desktop/Ad300x250.cshtml", new { AdId = Model.AdTags.AdId });}
        </div>
        <div class="clear"></div>
        
        <div class="@(Model.BikeRanking != null && Model.BikeRanking.Rank > 0 ? "grid-8 " : "grid-12 omega ") alpha">
            <!-- add class - grid-12 and omega, if no slug instead of grid-8 -->
            <p class="font14 text-slate-grey line-height17">@Model.ModelSummary</p>
        </div>
        if (Model.BikeRanking != null && Model.BikeRanking.Rank > 0)
        {
        <div class="grid-4 omega">
            <a href="@Bikewale.Utility.UrlFormatter.FormatGenericPageUrl(Model.BikeRanking.BodyStyle)" title="Best @Model.BikeRanking.StyleName in India" class="model-rank-slug">
                <div class="inline-block icon-red-bg">
                    <span class="bwsprite rank-graph"></span>
                </div>
                <div class="rank-slug-label inline-block text-bold text-default">
                    <p class="font14">@Html.Raw(Model.BikeRanking.Rank > 1 ? Model.BikeRanking.RankText : "") Most Popular @Model.BikeRanking.BikeType</p>
                    <p class="font11">Check out the complete list.</p>
                </div>
                <span class="trend-arrow"></span>
                <span class="bwsprite right-arrow"></span>
            </a>
        </div>
        }
        <div class="clear"></div>
    }
</div>

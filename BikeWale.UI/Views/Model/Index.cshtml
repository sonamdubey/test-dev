@model Bikewale.Models.BikeModels.ModelPageVM
@{


    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/model-atf.css' />";
    Model.Page_BTF_CSS_Path = "/css/model-btf.css";
    Model.Page_JS_Path = "/src/model.js";
    Model.AdTags.AdPath = "/1017752/Bikewale_Model";
    Model.AdTags.AdId = "1442913773076";
    Model.AdTags.Ad_Model_BTF_970x90 = true;
    Model.AdTags.Ad_Model_ATF_970x90 = true;
    Model.AdTags.Ad_Model_ATF_300x250 = !Model.IsUpcomingBike && Model.IsModelDescriptionAvailable;
    Model.AdTags.Ad_Model_BTF_300x250 = Model.ModelPageEntity!=null && Model.ModelPageEntity.ModelDesc != null && !string.IsNullOrEmpty(Model.ModelPageEntity.ModelDesc.SmallDescription);
    Model.AdTags.Ad_976x400_Middle = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.AdTags.Ad_Model_ATF_970x90)
{
    <div class="bg-white ">
        <div class="container">
            <div class="grid-12">
                <div>
                    @{Html.RenderPartial("/Views/Shared/Ads/Desktop/Model_ATF_970x90.cshtml", new { AdId = Model.AdTags.AdId });}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
}
<div itemscope itemtype="http://schema.org/Product">
    @if (Model.IsModelDetails)
    {
        if (Model.ModelPageEntity.ModelDesc != null)
        {
            <meta itemprop="description" itemtype="https://schema.org/description" content="@Model.ModelPageEntity.ModelDesc.SmallDescription" />
        }
        <meta itemprop="name" content="@Model.BikeName " />
        <meta itemprop="image" content="@Bikewale.Utility.Image.GetPathToShowImages(Model.ModelPageEntity.ModelDetails.OriginalImagePath, Model.ModelPageEntity.ModelDetails.HostUrl, Bikewale.Utility.ImageSize._210x118)" />
        <meta itemprop="manufacturer" name="manufacturer" content="@Model.ModelPageEntity.ModelDetails.MakeBase.MakeName">
        <meta itemprop="model" content="@Model.ModelPageEntity.ModelDetails.ModelName" />
        <meta itemprop="brand" content="@Model.ModelPageEntity.ModelDetails.MakeBase.MakeName" />
    }

    <section class="bg-light-grey padding-top10" id="breadcrumb">
        <div class="container">
            <div class="grid-12">
                <div class="breadcrumb margin-bottom15">
                    <ul>
                        <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                            <a href="/" itemprop="url">
                                <span itemprop="title">Home</span>
                            </a>
                        </li>
                        @if (Model.IsModelDetails && Model.ModelPageEntity.ModelDetails.MakeBase != null)
                        {
                            <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                                <span class="bwsprite fa-angle-right margin-right10"></span>
                                <a href="/@Model.ModelPageEntity.ModelDetails.MakeBase.MaskingName-bikes/" itemprop="url">
                                    <span itemprop="title">@Model.ModelPageEntity.ModelDetails.MakeBase.MakeName Bikes</span>
                                </a>
                            </li>
                        }
                        <li>
                            <span class="bwsprite fa-angle-right margin-right10"></span>
                            <span>@Model.Page_H1</span>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>


    @if (Model.IsNewBike)
    {
        @Html.Partial("~/Views/Model/_Index_New.cshtml", Model)
    }
    else if (Model.IsDiscontinuedBike)
    {
        @Html.Partial("~/Views/Model/_Index_Discontinued.cshtml", Model)
    }
    else if (Model.IsUpcomingBike)
    {
        @Html.Partial("~/Views/Model/_Index_Upcoming.cshtml", Model)
    }

    <script type="text/javascript">
        ga_pg_id = '2';
        var dealerId = '@Model.DealerId';
        var pqId = '@Model.PQId';
        var versionId = '@Model.VersionId';
        var cityId = '@Model.CityId';
        var bikeVersionLocation = '';
        var bikeVersion = '';
        var isBikeWalePq = "@Model.IsBPQAvailable";
        var areaId = "@Model.AreaId";
        var isDealerPriceAvailable = "@Model.IsDPQAvailable";
        var campaignId = "@Model.CampaignId";        
        var myBikeName = "@Model.BikeName";
        var clientIP = "@Model.ClientIP";
        var pageUrl = window.location.href;
        var leadSourceId, getCityArea, bikeModelId = '@Model.ModelId';

    </script>
    <script defer src="@String.Format("{0}/src/ads.js?{1}", Bikewale.Utility.BWConfiguration.Instance.StaticUrl,Bikewale.Utility.BWConfiguration.Instance.StaticFileVersion)"></script>


</div>
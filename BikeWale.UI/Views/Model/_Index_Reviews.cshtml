@model Bikewale.Models.BikeModels.ModelPageVM
@{
            var ModelDetails = Model.ModelPageEntity.ModelDetails;
            var MakeDetails = Model.ModelPageEntity.ModelDetails.MakeBase;
            string q = Bikewale.Utility.EncodingDecodingHelper.EncodeTo64(string.Format("csrc=24&makeId={0}&modelId={1}&makeName={2}&modelName={3}&makeMaskingName={4}&modelMaskingName={5}", MakeDetails.MakeId, ModelDetails.ModelId, MakeDetails.MakeName, ModelDetails.ModelName, MakeDetails.MaskingName, ModelDetails.MaskingName));
}
@if (Model.ModelPageEntity != null && Model.ModelPageEntity.ModelDetails != null && Model.ModelPageEntity.ModelDetails.ReviewRate > 0 && Model.ModelPageEntity.ModelDetails.RatingCount > 0)
{

    <span class="inline-block rate-count-@Math.Round(Convert.ToDouble(Model.ModelPageEntity.ModelDetails.ReviewUIRating))">
        <span class="bwsprite star-icon star-size-16"></span>
        <span class="font14 text-bold inline-block">@Model.ModelPageEntity.ModelDetails.ReviewUIRating.TrimEnd('0', '.')</span> 
    </span>
    <div class="review-box font14 inline-block">
        <span>
            @if (@Model.ModelPageEntity.ModelDetails.ReviewCount > 0)
            {
                <a href="@Bikewale.Utility.UrlFormatter.FormatShowReviewLink(Model.ModelPageEntity.ModelDetails.MakeBase.MaskingName, Model.ModelPageEntity.ModelDetails.MaskingName)" class="review-count-target left-divider">
                    <span>@Model.ModelPageEntity.ModelDetails.ReviewCount</span> Reviews
                </a>
            }
        </span>
       
        <a rel="nofollow"  href="@String.Format("/bike-review-contest/?q={0}", q)" class="left-divider bw-ga" l='@string.Format("{0}_{1}", Model.ModelPageEntity.ModelDetails.MakeBase.MakeName, Model.ModelPageEntity.ModelDetails.ModelName)' a="Clicked_RateThisBike" c="Model_Page">Rate & Win </a>
    </div>
    
}
else
{
    <div class="rating-box inline-block">
        <span class="bwsprite star-zero"></span>
    </div>

    <div class="review-box font14 inline-block">
        <span class="no-rating text-light-grey">Not rated yet</span>
        <a href="@String.Format("/bike-review-contest/?q={0}", q)" class="left-divider bw-ga" l='@string.Format("{0}_{1}", Model.ModelPageEntity.ModelDetails.MakeBase.MakeName, Model.ModelPageEntity.ModelDetails.ModelName)' a="Clicked_RateThisBike" c="Model_Page">Rate & Win</a>
    </div>
}
@model Bikewale.Models.BikeModels.ModelPageVM

<div id="modelPricesContent" class="bw-model-tabs-data content-box-shadow content-inner-block-20 card-bottom-margin">
    <h2 class="h2-heading margin-bottom20">@Model.BikeName Price List</h2>
    <div id="version-prices-grid" class="grid-6 alpha padding-right20">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th colspan="2" align="left" class="padding-bottom10">
                        <h3>@Model.BikeName Price (versions)</h3>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td align="left" width="72%" class="font12 text-light-grey padding-bottom10 divider-bottom">Versions</td>
                    <td align="left" width="28%" class="font12 text-light-grey padding-bottom10 divider-bottom">Price</td>
                </tr>
                @foreach (var version in Model.ModelPageEntity.ModelVersions)
                {                                        
                    <tr>
                        <td valign="top" class="padding-top10 padding-bottom10 divider-bottom font14">@string.Format("{0} {1}", Model.ModelPageEntity.ModelDetails.ModelName, version.VersionName)</td>
                        <td valign="top" class="padding-top10 padding-bottom10 divider-bottom font14 text-bold">
                            <span class="bwsprite inr-sm-dark"></span>@Bikewale.Utility.Format.FormatPrice(version.Price.ToString())
                        </td>
                    </tr>
                    @*<tr class="version-prices-tr">
                        <td width="70%" class="padding-bottom15 padding-top10 padding-right10 font14" valign="top">
                            <p class="margin-bottom5">@string.Format("{0} {1}", Model.ModelPageEntity.ModelDetails.ModelName, version.VersionName)</p>
                            <p class="font12 text-xt-light-grey">@Bikewale.Utility.FormatMinSpecs.GetMinVersionSpecs(version.AlloyWheels, version.ElectricStart, version.AntilockBrakingSystem, version.BrakeType)</p>
                        </td>
                        <td width="30%" class="padding-bottom10 padding-top10 font14 divider-bottom" valign="top">
                            <p class="font16 text-bold text-default">
                                <span class="bwsprite inr-md"></span>
                                <span>@Bikewale.Utility.Format.FormatPrice(version.Price.ToString())</span>
                            </p>
                            <p class="font12 text-xt-dark-grey">
                                <span>@(Model.IsLocationSelected ? "On-road price" : "Ex-showroom"),&nbsp;@(!String.IsNullOrEmpty(Model.LocationCookie.City) ? Model.LocationCookie.City : Bikewale.Utility.BWConfiguration.Instance.DefaultName)</span>
                            </p>
                        </td>
                    </tr>*@
                }
                <tr>
                    <td colspan="2" class="padding-top10 font12 text-light-grey">Above mentioned prices are @(Model.IsLocationSelected ? "On-road price" : "Ex-showroom"),&nbsp;@(!String.IsNullOrEmpty(Model.LocationCookie.City) ? Model.LocationCookie.City : Bikewale.Utility.BWConfiguration.Instance.DefaultName)</td>
                </tr>
            </tbody>
        </table>
    </div>
    @if (Model.IsPriceInTopCitiesAvailable)
    {       
        <div id="nearby-prices-grid" class="grid-6 omega padding-left20">
            <h3 class="margin-bottom20">Price by cities&nbsp;<span class="text-light-grey text-unbold">(@(Model.IsLocationSelected ? "On-road price" : "Ex-showroom price"))</span></h3>            
            <table id="prices-top-cities" width="100%" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                    @Html.Partial("~/Views/PriceInCity/_PriceInTopCities.cshtml", Model.PriceInTopCities)
                </tbody>
            </table>
        </div>
    }
    <div class="clear"></div>
</div>

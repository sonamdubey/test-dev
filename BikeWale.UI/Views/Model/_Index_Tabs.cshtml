@model Bikewale.Models.BikeModels.ModelPageVM

@{ string bikeName = string.Format("{0}_{1}", Model.ModelPageEntity.ModelDetails.MakeBase.MakeName, Model.ModelPageEntity.ModelDetails.ModelName);}

<span  class="bw-ga navtab"  c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Overview" data-href="#modelSummaryContent" >Overview</span>

@if (Model.ModelPageEntity.ModelVersions != null && Model.ModelPageEntity.ModelVersions.Count > 0)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Price"  data-href="#modelPricesContent">Price</span>
}
@if (Model.IsModelColorsAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Colours"  data-href="#modelColorsContent">Colours</span>
}

@if (Model.IsSimilarBikesAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Similar Bikes"  data-href="#modelSimilarContent">Similar @Model.BodyStyleText </span>
}
else if (Model.IsPopularBodyStyleAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Popular Bikes"  data-href="#modelPopularContent">Popular @Model.BodyStyleText</span>
}
@if (Model.IsVersionSpecsAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Specs"  data-href="#modelSpecsFeaturesContent">Specs</span>
}
@if (Model.IsUserReviewsAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;UserReviews"  data-href="#modelReviewsContent">User Reviews</span>
}

@if (Model.IsReviewsAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;ExpertReviews"  data-href="#modelExpertReviewsContent"  >Expert Reviews</span>
}

@if (Model.IsNewsAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Dealers&News" data-href="#modelNewsContent">News</span>
}
@if (Model.IsVideosAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Videos" data-href="#videosAndServicecCenterContent">Videos</span>
}
@if (Model.IsUsedBikesAvailable)
{
    <span class="bw-ga navtab" c="Model_Page" a="Floating_Navigation_Clicked" l="@bikeName&#95;Used" data-href="#makeUsedBikeContent" >Used</span>
}



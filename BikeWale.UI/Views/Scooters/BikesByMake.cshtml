@using Bikewale.Utility;
@{
    ViewBag.IsHeaderFix = false;
    ViewBag.IsTransparentHeader = false;
    ViewBag.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/scooters/listing.css' />";
    ViewBag.Page_JS_Path = "/src/scooters.js";
    Layout = "~/Views/Shared/_Layout_Desktop.cshtml";
    IEnumerable<Bikewale.Entities.BikeData.MostPopularBikesBase> ScootersList = ViewBag.ScootersList;
    ICollection<Bikewale.Entities.BikeData.SimilarCompareBikeEntity> similarBikeList = ViewBag.similarBikeList;
    IEnumerable<Bikewale.Entities.BikeData.UpcomingBikeEntity> upcomingScooters = ViewBag.UpcomingBikes;
    Bikewale.Models.Shared.Showrooms dealerShowrooms = ViewBag.objShowrooms;
    IEnumerable<Bikewale.Entities.ServiceCenters.ServiceCenterDetails> serviceCenters = ViewBag.serviceCenters;
    bool showServiceWidget = ViewBag.showServiceWidget;
    bool showDealerWidget = ViewBag.showDealerWidget;
    bool showServiceCenter = ViewBag.showServiceCenter;
}

<section>
    <div class="container padding-top10">
        <div class="grid-12">
            <div class="breadcrumb margin-bottom15">
                <ul>
                    <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <a href="/" itemprop="url" title="Home">
                            <span itemprop="title">Home</span>
                        </a>
                    </li>
                    <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <span class="bwsprite fa-angle-right margin-right10"></span>
                        <span itemprop="title">Honda Scooters</span>
                    </li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>

    <section>
    <div class="container section-bottom-margin">
        <div class="grid-12">
            <div class="content-box-shadow">
                <h1 class="padding-15-20 content-box-shadow">@ViewBag.MakeName Scooters</h1>
                @if (ScootersList != null && ScootersList.Count() > 0)
                { <ul class="bike-listing">
                   @foreach (var bikedetails in ScootersList)
                   { 
                     <li class="list-item">
                         <a href="@Bikewale.Utility.UrlFormatter.BikePageUrl(bikedetails.objMake.MaskingName, bikedetails.objModel.MaskingName)" title="@bikedetails.BikeName" class="block">
                             <div class="model-jcarousel-image-preview">
                                 <img class="lazy" data-original="@Bikewale.Utility.Image.GetPathToShowImages(bikedetails.OriginalImagePath, bikedetails.HostURL, Bikewale.Utility.ImageSize._310x174)" src="" alt="@bikedetails.BikeName" />
                             </div>
                             <div class="card-desc-block">
                                 <h2 class="bikeTitle">@bikedetails.BikeName</h2>
                                @if (bikedetails.Specs != null)
                                  { <div class="text-xt-light-grey font14 margin-bottom15">

                                  
                                     @Html.Raw(Bikewale.Utility.FormatMinSpecs.GetMinSpecs(Convert.ToString(bikedetails.Specs.Displacement), Convert.ToString(bikedetails.Specs.FuelEfficiencyOverall), Convert.ToString(bikedetails.Specs.MaxPower), Convert.ToString(bikedetails.Specs.KerbWeight)))
                                 </div>}
                   
                                 <p class="key-size-14 margin-bottom5">Ex Showroom, @Bikewale.Utility.BWConfiguration.Instance.DefaultName</p>
                                 <span class="bwsprite inr-lg"></span>
                                 <span class="value-size-18">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikedetails.VersionPrice))</span>
                                 <span class="value-size-14"> onwards</span>
                             </div>
                         </a>
                        <div class="margin-left20 margin-bottom10">
                            <a href="javascript:void(0)" data-pagecatid="@ViewBag.PageCatId" data-makename="@bikedetails.objMake.MakeName" data-modelname="@bikedetails.objModel.ModelName" data-pqsourceid="@Convert.ToUInt32(Bikewale.Entities.PriceQuote.PQSourceEnum.Desktop_Scooters_Landing_Check_on_road_price)" data-modelid="@bikedetails.objModel.ModelId" class=" btn btn-sm btn-grey font14 getquotation" rel="nofollow">Check on-road price</a>
                        </div>
                    </li>
                   }
                </ul>
                }
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>
@if (similarBikeList != null && similarBikeList.Count() > 0) { 
<section>
    @Html.Partial("~/Views/Shared/_similarComparisions.cshtml", similarBikeList)
</section>
}
<section>
    <div class="container section-bottom-margin">
        <div class="grid-12">
            <div class="content-box-shadow padding-top20 padding-bottom20">
                <h2 class="font18 padding-bottom20 padding-left20">Scooters of Other Brands</h2>
                @{ Html.RenderAction("OtherBrands", "Scooters",new{ makeId = @ViewBag.MakeId  }); }
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>

@if (upcomingScooters != null && upcomingScooters.Count() > 0)
{
   <section>
    <div class="container section-bottom-margin">
        <div class="grid-12">
            <div class="content-box-shadow padding-top20 padding-bottom20">
                <h2 class="font18 padding-bottom20 padding-left20">Upcoming @ViewBag.MakeName Scooters</h2>
           @Html.Partial("~/Views/Shared/_UpcomingBikes.cshtml", upcomingScooters)
     </div>
            </div>
        <div class="clear"></div>   
     </div>
       </section>    
}

@if ((ViewBag.Synopsis != null && ViewBag.Synopsis.FullDescription.Length>0) || showDealerWidget || (showServiceWidget && ViewBag.CityId>0))
{
<section>
    <div class="container section-bottom-margin">
        <div id="makeTabsContentWrapper" class="grid-12">
            <div class="content-box-shadow">
                <div id="makeOverallTabsWrapper">
                    <div id="makeOverallTabs" class="overall-floating-tabs">
                        <div class="overall-specs-tabs-wrapper">
                            @if(ViewBag.Synopsis!=null && ViewBag.Synopsis.FullDescription.Length > 0) {
                            <a href="#makeAboutContent" rel="nofollow" class="active">About</a>
                            }
                            @if (showDealerWidget || (showServiceWidget && ViewBag.CityId > 0))
                            {
                            <a href="#dealerAndServiceContent" rel="nofollow">
                                @(showDealerWidget?"Dealers":"") 
                                @((showServiceCenter || (showServiceWidget && ViewBag.CityId > 0))?((showDealerWidget)?" & Service Centers":""):"")
                            </a>
                            }
                        </div>
                    </div>
                </div>
                @if (ViewBag.Synopsis != null && ViewBag.Synopsis.FullDescription.Length > 0)
                { 
                <div id="makeAboutContent" class="bw-model-tabs-data margin-right10 margin-left10 padding-top20 padding-right10 padding-bottom20 padding-left10 border-solid-bottom">
                    <div class="grid-8 alpha">
                        <h2>@ViewBag.MakeName Scooters Summary</h2>
                        <div class="font14 text-light-grey line-height17 collapsible-content">
                            <p class="main-content">
                                @FormatDescription.TruncateDescription(ViewBag.Synopsis.FullDescription, 700)
                            </p>
                            <p class="more-content">
                                @ViewBag.Synopsis.FullDescription
                            </p>
                            @if(ViewBag.Synopsis.FullDescription.Length > 700){
                            <a href="javascript:void(0)" class="read-more-target" rel="nofollow">Read more</a>
                            }
                        </div>
                    </div>
                    <div class="grid-4 text-center alpha omega">
                    </div>
                    <div class="clear"></div>
                </div>
                }
                <div id="dealerAndServiceContent" class="bw-model-tabs-data">
                    
                    @Html.Partial("~/Views/Shared/_showrooms.cshtml", dealerShowrooms)

                    @if(serviceCenters!=null && serviceCenters.Count()>0){
                        
                    <div class="margin-right10 margin-left10 border-solid-bottom"></div>
                        <h2 class="padding-top15 padding-right20 margin-bottom15 padding-left20">@ViewBag.MakeName Service Centers in @ViewBag.CityName</h2>
                    <ul class="bw-horizontal-cards font14">
                        @Html.Partial("~/Views/Shared/_ServiceCenters.cshtml", serviceCenters)
                    </ul>
                    <div class="clear"></div>
                    <div class="padding-left20 font14 padding-bottom20">
                        <a href="@UrlFormatter.GetServiceCenterUrl(ViewBag.MakeMaskingName, ViewBag.CityMaskingName)" title="@ViewBag.MakeName service centers in @ViewBag.cityName">View all @ViewBag.MakeName service centers<span class="bwsprite blue-right-arrow-icon"></span></a>
                    </div>
                    }

                </div>
                <div id="overallMakeDetailsFooter"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>
}

<script type="text/javascript" src="@(!String.IsNullOrEmpty(ViewBag.staticUrl) ? ("https://st.aeplcdn.com" + @ViewBag.staticUrl) : "")/src/frameworks.js?@ViewBag.staticFileVersion"></script>
<section>
    <div class="container section-bottom-margin">
        <h2 class="section-heading">Featured scooters</h2>
        <div class="grid-12">
            <div class="bw-tabs-panel newbike-discover-bike-container content-box-shadow padding-bottom15">
                <div class="bw-tabs bw-tabs-flex">
                    <ul>
                    @if (popularScooters.PopularScooters != null && popularScooters.PopularScooters.Count() > 0)
                    { 
                         <li class="active" data-tabs="ctrlMostPopularBikes">
                          <h3>Most Popular</h3>
                        </li>
                    }
                        @if (NewLaunchesList != null && NewLaunchesList.Bikes != null && NewLaunchesList.Bikes.Count() > 0)
                        {
                            <li data-tabs="ctrlNewLaunchedBikes">
                                <h3>New launches</h3>
                            </li>
                        }
                        @if (objUpcoming != null && objUpcoming.Count() > 0)
                        {
                            <li data-tabs="ctrlUpcomingBikes">
                                <h3>Upcoming</h3>
                            </li>
                        }
                    </ul>
                </div>
                @Html.Partial("~/Views/Shared/_popularBikesScooters.cshtml", popularScooters)
                @if (NewLaunchesList != null && NewLaunchesList.Bikes != null && NewLaunchesList.Bikes.Count() > 0)
                {
                    <div class="bw-tabs-data hide" id="ctrlNewLaunchedBikes">
                        @Html.Partial("~/Views/Shared/_newLaunches.cshtml", NewLaunchesList)
                    </div>
                }
                @if (objUpcoming != null && objUpcoming.Count() > 0)
                {
                    <div class="bw-tabs-data hide" id="ctrlUpcomingBikes">
                        @Html.Partial("~/Views/Shared/_UpcomingBikes.cshtml", objUpcoming)
                    </div>
                }
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>

@model Bikewale.Models.BikeSeries.BikeSeriesCompareVM
@if (Model != null && Model.BikeMake != null)
{
	<div class="model-specs-tabs">
		<div class="find-specs__tabs-container">
			<ul class="find-specs-tabs-wrapper">
				<li>
					<span class="specs-btn" data-swipe="@Model.ObjBikeSpecs.MaxPower">Max Power</span>
				</li>
				<li>
					<span class="specs-btn" data-swipe="@Model.ObjBikeSpecs.Mileage">Mileage</span>
				</li>
				<li>
					<span class="specs-btn" data-swipe="@Model.ObjBikeSpecs.Price">Price</span>
				</li>
				<li>
					<span class="specs-btn" data-swipe="@Model.ObjBikeSpecs.Weight">Weight</span>
				</li>
				<li>
					<span class="specs-btn" data-swipe="@Model.ObjBikeSpecs.Displacement">Displacement</span>
				</li>
				<li>
					<span class="specs-btn" data-swipe="@Model.ObjBikeSpecs.FuelCapacity">Fuel Tank Capacity</span>
				</li>
			</ul>
		</div>
	</div>

	<div id="rightBikeSwiper" class="right-bike-swiper padding-bottom15">
		<div class="rightbike__swiper-card right-bike__swiper-keys">
			<div class="rightbike-carousel__model-card">
			</div>
			<div class="right-bike__desc">
				@foreach (var bike in Model.BikeCompareSegments)
				{
					<span class="right-bike__label">
						@bike
					</span>
				}
			</div>
		</div>
		<div class="right-bike-swiper swiper-container card-container">
			<div class="swiper-ribbon">
				<span class="swiper-left-arrow">
					<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="18px" height="11px" viewBox="0 0 18 11" version="1.1">
						<g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
							<g id="review-copy-6" transform="translate(-260.000000, -3098.000000)" stroke="#FFFFFF">
								<g id="Group-27" transform="translate(24.000000, 2717.000000)">
									<g id="Group-15" transform="translate(236.000000, 382.000000)">
										<polyline id="Page-1" transform="translate(2.500000, 4.500000) scale(-1, -1) translate(-2.500000, -4.500000) " points="0 0 5 4.5 0 9" />
										<path d="M0.5,4.5 L17.5,4.5" id="Line-3" />
									</g>
								</g>
							</g>
						</g>
					</svg>
				</span>
				Swipe
			</div>
			<div class="swiper-wrapper">
				@{uint index = 1;}
				@foreach (var bike in Model.BikeSeriesCompareBikeWithSpecs)
				{
					<div class="swiper-slide">
						<div class="rightbike__swiper-card @string.Format("{0}",index==1?"featured-card":"")" data-model-index="@index">
							<a href="@string.Format("/m/{0}-bikes/{1}/", Model.BikeMake.MakeMaskingName,  bike.ModelMaskingName)" title="@string.Format("{0} {1}", Model.BikeMake.MakeName, bike.ModelName)" class="rightbike-carousel__model-card">
								<div class="rightbike-carousel__image">
									<img class="swiper-lazy" alt="@bike.ModelName" title="@bike.ModelName" data-src="@Bikewale.Utility.Image.GetPathToShowImages(bike.OriginalImagePath,bike.HostUrl,Bikewale.Utility.ImageSize._144x81,Bikewale.Utility.QualityFactor._70)" src="" />
								</div>
								<p class="rightbike-caraousel__label">
									@bike.ModelName
								</p>
								@if (index == 1)
								{
									<span class="popular-tag recommended-tag">Most Popular</span>}
								else
								{
									<span class="recommended-tag"></span>}
							</a>
							<div class="right-bike__desc">
								<span class="right-bike__label">
									@string.Format("{0}", bike.Price > 0 ? string.Format("₹ {0}", Bikewale.Utility.Format.FormatPrice(Convert.ToString(bike.Price))) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", bike.Displacement > 0 ? string.Format("{0} cc", bike.Displacement) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", bike.Weight > 0 ? string.Format("{0} kg", bike.Weight) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", bike.FuelCapacity > 0 ? string.Format("{0} litres", bike.FuelCapacity) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", bike.Mileage > 0 ? string.Format("{0} kmpl", bike.Mileage) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", bike.SeatHeight > 0 ? string.Format("{0} mm", bike.SeatHeight) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", !string.IsNullOrEmpty(bike.BrakeType) ? bike.BrakeType : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0}", bike.Gears > 0 ? Convert.ToString(bike.Gears) : "--")
								</span>
								<span class="right-bike__label">
									@string.Format("{0} bhp", Bikewale.Utility.FormatMinSpecs.ShowAvailable((float)bike.MaxPower))
									<span class="right-bike__sub-label">@string.Format("{0}", bike.MaxPowerRpm > 0 ? string.Format("@{0} rpm", Bikewale.Utility.Format.FormatPrice(Convert.ToString(bike.MaxPowerRpm))) : "--")</span>
								</span>
							</div>
						</div>
					</div>index++;
				}
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
					}

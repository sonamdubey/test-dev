@model Bikewale.Models.QuestionAndAnswers.QuestionAnswerSlugVM


<div class="question-answer-slug question-answer-slug__link">
    <span class="question-answer-slug__icon"></span>
    <div class="question-answer-slug__detail">
        <span class="question-answer-slug__title">
            Have specific question?
        </span>
        <span class="question-answer-slug__description">
            Get answers from fellow riders!
        </span>
        @if (Model.IsQAAvailable)
        {
            <a id="viewAllQnASlug" href="@(Model.ViewAllUrl)" title="@(Model.BikeName) Questions and Answers" class="question-answer-slug__button qna-redirection-link" data-cat="@Model.GAPageType" data-act="View_All_Button_Clicked" data-lab="@String.Format("{0}_{1}_Slug", Model.MakeName, Model.ModelName)">
                View all Q&As
            </a>
        }
        else
        {
            <span id="askQuestionQnASlug" class="ask-question__link question-answer-slug__button" data-platform="@((int)Model.Platform)" data-source="@((int)Bikewale.Entities.QuestionAndAnswers.Sources.ModelPage_Ask_Question_Slug)" data-modelid="@Model.ModelId" data-tags="@Model.Tags" data-lab-suffix="_Slug">
                Ask a Question
            </span>
        }
    </div>
</div>
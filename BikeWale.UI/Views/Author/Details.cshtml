@model Bikewale.Models.Authors.AuthorDetailsPageVM
@using Bikewale.Utility
@if(Model != null && Model.Author != null)
{
    
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/authors.css' />";
    Model.Page_JS_Path = "/src/authors.js";
    Model.AdTags.AdPath = "/1017752/BikeWale_News_";
    Model.AdTags.AdId = "1395995626568";
    Model.AdTags.Ad_300x250 = true;
    Model.AdTags.Ad_970x90 = true;
    Model.AdTags.Ad_970x90Bottom = true;
    Model.IsHeaderFix = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
    

    <section class="container padding-top10">
        <div class="grid-12">
            <div class="breadcrumb margin-bottom10 margin-top20">
                <ul>
                    <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <a href="/" itemprop="url">
                            <span itemprop="title">Home</span>
                        </a>
                    </li>
                    <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <span class="bwsprite fa-angle-right margin-right10"></span>
                        <a href="/authors/" itemprop="url">
                            <span itemprop="title">Authors</span>
                        </a>
                    </li>
                    <li><span class="bwsprite fa-angle-right margin-right10"></span>@Model.Author.AuthorName</li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </section>
    <section class="container padding-top10">
        <div class="grid-12">
            <div class="author grid-8 alpha omega">
                <div class="content-box-shadow margin-bottom10">
                    <div class="detail-author__head">
                        <h1 class="detail-author__name">@Model.Author.AuthorName</h1>
                        <span class="padding-left10 text-light-grey font14">@Model.Author.Designation</span>
                    </div>
                    <div class="detail-author__body">
                        <div class="detail-author__image">
                            <img src="@string.Format("https://{0}/{1}/{2}", Model.Author.HostUrl, Model.Author.ProfileImage, Model.Author.ImageName)" alt="@Model.Author.AuthorName" title="@Model.Author.AuthorName" border="0">
                        </div>
                        <div class="detail-author__detail">
                            <p class="detail-author__description">
                                @Model.Author.FullDescription
                            </p>
                            <div class="padding-top15">Get in touch with @Model.Author.AuthorFirstName: <a href="mailto:@Model.Author.EmailId" title="_blank">@Model.Author.EmailId</a></div>
                            <div class="padding-top10 ">Follow him on</div>
                        </div>
                    </div>
                </div>
                <div class="content-box-shadow margin-bottom10 padding-bottom10">
                    @if (Model.NewsList != null && Model.NewsList.Any())
                    {
                        <div class="border-after-bottom padding-top20 padding-left20 padding-right20 padding-bottom20">
                            <h2 class="list-head">News by @Model.Author.AuthorFirstName</h2>
                            <ul class="disk-list">
                                @foreach (var news in Model.NewsList)
                                {
                                    string articleUrl = UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(news.CategoryId));
                                    <li>
                                        <a href="@articleUrl">@news.Title</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    @if (Model.ExpertReviewsList != null && Model.ExpertReviewsList.Any())
                    {
                        <div class="@(Model.NewsList.Any()?"": "padding-top20") padding-left20 padding-right20 padding-bottom20">
                            <h2 class="list-head">Expert Reviews by @Model.Author.AuthorFirstName</h2>
                            <ul class="disk-list">
                                @foreach (var reviews in Model.ExpertReviewsList)
                                {
                                    string articleUrl = UrlFormatter.GetArticleUrl(Convert.ToString(reviews.BasicId), reviews.ArticleUrl, Convert.ToString(reviews.CategoryId));
                                    <li>
                                        <a href="@articleUrl">@reviews.Title</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                @if(Model.OtherAuthors != null && Model.OtherAuthors.Any())
                {
                    @Html.Partial("~/Views/Author/_AuthorsListCarousel.cshtml", Model.OtherAuthors)
                }
            </div>

            <div class="grid-4 omega">
                @if (Model.ArticlesList != null)
                {
                    @Html.Partial("~/Views/News/_PopularNewsWidget.cshtml", Model.ArticlesList)
                }
                <div class="margin-bottom20">
                    @Html.Partial("~/Views/Shared/Ads/Desktop/Ad300x250.cshtml", Model.AdTags)
                </div>
            </div>
        </div>
    </section>
}







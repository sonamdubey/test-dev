@model Bikewale.Models.Authors.AuthorsListVM
@{ 
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/authors.css' />";
    Model.AdTags.AdPath = "/1017752/BikeWale_News_";
    Model.AdTags.AdId = "1395995626568";
    Model.AdTags.Ad_300x250 = true;
    Model.AdTags.Ad_970x90 = true;
    Model.AdTags.Ad_970x90Bottom = true;
    Model.IsHeaderFix = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{

    <section class="container padding-top10">
        <div class="grid-12">
            <div class="breadcrumb margin-bottom10 margin-top20">
                <ul itemscope itemtype="http://schema.org/BreadcrumbList">
                    <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                        <a href="/" itemprop="item">
                            <span itemprop="name">Home</span>
                        </a>
                    </li>
                    <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                        <span class="bwsprite fa-angle-right margin-right10"></span>
                        <span itemprop="name">Authors</span>
                    </li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </section>
    <section class="container padding-top10">
        <div class="grid-12">
            <div class="author grid-8 alpha content-box-shadow">
                <h1 class="author__title">All authors</h1>
                <ul class="author__list">
                    @foreach (var item in Model.AuthorsList)
                    {
                        if (!string.IsNullOrEmpty(item.ShortDescription))
                        {
                            <li>
                                <div class="author__body">
                                    <div class="author__image">
                                        <a href="@string.Format("/authors/{0}/", item.MaskingName)" title="@item.AuthorName">
                                            <img src="@string.Format("https://{0}/{1}/{2}", item.HostUrl, item.ProfileImage, item.ImageName)" alt="" title="" border="0">
                                        </a>
                                    </div>
                                    <div class="author__detail">
                                        <h2>
                                            <a href="/authors/@item.MaskingName" title="" class="author__name">@item.AuthorName</a>
                                        </h2>
                                        <span class="author__designation">@item.Designation</span>
                                        <div class="author__description">
                                            @item.ShortDescription
                                        </div>
                                        <a href="/authors/@item.MaskingName" title="Read more about @item.AuthorName">Read more</a>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div class="grid-4 omega">
                <div class="content-box-shadow padding-15-20-10 margin-bottom20">
                    <h2>Popular News</h2>
                    <ul class="sidebar-bike-list">
                        <li>
                            <a href="/harleydavidson-bikes/street/" title="Harley Davidson Street 750 " class="bike-target-link">
                                <div class="bike-target-image inline-block">
                                    <img src="https://imgd.aeplcdn.com//110x61//bw/models/harleydavidson-street.jpg?20160911142112&amp;q=70" alt="Harley Davidson Street 750">
                                </div>
                                <div class="bike-target-content inline-block padding-left10">
                                    <h3 class="text-black">First Ride: Yamaha R25: PowerDrift</h3>
                                    <p class="font12 text-light-grey">8 days ago by Prince guru</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="/harleydavidson-bikes/street/" title="Harley Davidson Street 750 " class="bike-target-link">
                                <div class="bike-target-image inline-block">
                                    <img src="https://imgd.aeplcdn.com//110x61//bw/models/harleydavidson-street.jpg?20160911142112&amp;q=70" alt="Harley Davidson Street 750">
                                </div>
                                <div class="bike-target-content inline-block padding-left10">
                                    <h3 class="text-black">First Ride: Yamaha R25: PowerDrift</h3>
                                    <p class="font12 text-light-grey">8 days ago by Prince guru</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="/harleydavidson-bikes/street/" title="Harley Davidson Street 750 " class="bike-target-link">
                                <div class="bike-target-image inline-block">
                                    <img src="https://imgd.aeplcdn.com//110x61//bw/models/harleydavidson-street.jpg?20160911142112&amp;q=70" alt="Harley Davidson Street 750">
                                </div>
                                <div class="bike-target-content inline-block padding-left10">
                                    <h3 class="text-black">First Ride: Yamaha R25: PowerDrift</h3>
                                    <p class="font12 text-light-grey">8 days ago by Prince guru</p>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <div class="view-all-btn-container padding-top10 padding-bottom10">
                        <a href="/harleydavidson-bikes/" title="Harley Davidson Bikes" class="btn view-all-target-btn">Read all news<span class="bwsprite teal-right"></span></a>
                    </div>
                </div>

                <div class="margin-bottom20">
                    @Html.Partial("~/Views/Shared/Ads/Desktop/Ad300x250.cshtml", Model.AdTags)
                </div>
            </div>
        </div>
    </section>
}





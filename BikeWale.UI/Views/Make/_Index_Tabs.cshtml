@model Bikewale.Models.MakePageVM
<div id="makeOverallTabsWrapper">
    <div id="makeOverallTabs" class="overall-floating-tabs">
        <div class="overall-specs-tabs-wrapper">
            @if (Model.BikeDescription != null && Model.BikeDescription.FullDescription.Length > 0)
            {   
                <span class="navtab" data-href="#makeAboutContent" data-lab="@string.Format("{0}_About", Model.MakeName)">About</span>
            }
            @if (Model.Bikes != null && Model.Bikes.Count() > 0)
            {
                <span class="navtab" data-href="#bikeMakeList" data-lab="@string.Format("{0}_Models", Model.MakeName)">Bike Models</span>
            }
            @*@if (Model.IsUpComingBikesAvailable)
            {
                <span class="navtab" data-href="#makeUpcomingBikesContent" data-lab="@string.Format("{0}_UpcomingBikes", Model.MakeName)">Upcoming</span>
            }*@
            @if (Model.IsCompareBikesAvailable)
            {
                <span class="navtab" data-href="#popularComparisonAndOtherBrands" data-lab="@string.Format("{0}_TopComparisons", Model.MakeName)">Top Comparisons</span>
            }
			@*
			@if (Model.IsDealerServiceDataAvailable || (Model.DealersServiceCenterPopularCities != null && Model.DealersServiceCenterPopularCities.DealerServiceCenters != null && Model.DealersServiceCenterPopularCities.DealerServiceCenters.TotalDealerCount > 0))
			{
				 <span class="navtab" data-href="#dealerAndServiceContent" data-lab="@string.Format("{0}_Showrooms", Model.MakeName)">Dealers</span>
			 }*@
            @if (Model.IsNewsAvailable)
            {
                <span class="navtab" data-href="#modelNewsContent" data-lab="@string.Format("{0}_News", Model.MakeName)">News</span>
            }
            @if (Model.IsExpertReviewsAvailable || Model.IsUserReviewsAvailable)
            {
                <span class="navtab" data-href="#makeReviewsContent" data-lab="@string.Format("{0}_Reviews", Model.MakeName)" >Reviews</span>
            }
            @if (Model.IsVideosAvailable)
            {
                <span class="navtab" data-href="#makeVideosContent" data-lab="@string.Format("{0}_Videos", Model.MakeName)" >Videos</span>
            }
			@*
            @if (Model.IsUsedModelsBikeAvailable)
            {
                <span class="navtab" data-href="#makeUsedBikeContent" data-lab="@string.Format("{0}_UsedBikes", Model.MakeName)" >Used Bikes</span>
            }*@
        </div>
    </div>
</div>
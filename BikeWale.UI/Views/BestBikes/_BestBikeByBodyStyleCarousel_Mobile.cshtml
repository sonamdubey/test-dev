@model IEnumerable<Bikewale.Entities.GenericBikes.BestBikeEntityBase>
@using Bikewale.Utility;
<div class="swiper-container card-container swiper-small">
    <div class="swiper-wrapper discover-bike-carousel">
        @foreach (var bike in Model)
        {
            var bikeName = String.Format("{0} {1}", bike.Make.MakeName, bike.Model.ModelName);
            <div class="swiper-slide">
                <div class="swiper-card">
                    <a href="@string.Format("/m{0}",UrlFormatter.BikePageUrl(bike.Make.MaskingName,bike.Model.MaskingName))" title="@bikeName" class="block">
                        <div class="swiper-image-preview">
                            <img class="swiper-lazy" data-src="@Image.GetPathToShowImages(bike.OriginalImagePath, bike.HostUrl, ImageSize._174x98, QualityFactor._70)" title="@bikeName" alt="@bikeName" src="" />
                            <span class="swiper-lazy-preloader"></span>
                        </div>
                        <div class="swiper-details-block">
                            <h3 class="target-link font12 text-truncate margin-bottom5">@bikeName</h3>
                            @if (bike.Price > 0)
                            {
                                <p class="text-truncate text-light-grey font11">Ex-showroom, @BWConfiguration.Instance.GetDefaultCityName</p>
                                <p class="text-default font16">
                                    @Html.Raw("<span>&#x20B9;</span>")&nbsp;<span class="text-bold">@Format.FormatPrice(Convert.ToString(bike.Price))</span><span class="font14 text-bold"> onwards</span>
                                </p>
                            }
                            else
                            {
                                <p class="text-default">
                                    <span class="font14 text-light-grey">Price not available </span>
                                </p>
                            }
                        </div>
                    </a>
                    
                        <div class="swiper-btn-block">
                            <a href="javascript:void(0)" data-pagecatid="0" data-pqsourceid="@((int)Bikewale.Entities.PriceQuote.PQSourceEnum.Mobile_HomePage_BestBikes)" data-makename="@bike.Make.MakeName" data-modelname="@bike.Model.ModelName" data-modelid="@bike.Model.ModelId" class="btn btn-card btn-full-width btn-white getquotation">Check on-road price</a>
                        </div>
                    
                  
                </div>
            </div>
        }
    </div>
</div>
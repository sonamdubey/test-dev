@model Bikewale.Models.BikeCareIndexPageVM
@using Bikewale.Utility
@{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/content/listing.css' inline /> <link rel='stylesheet' type='text/css' href='/css/components/m-brand-logo.css' inline />";
    Model.AdTags.AdId = "1517812803381";
    Model.AdTags.AdPath = "/1017752/Bikewale_Mobile_EditorialList";
    Model.AdTags.Ad_320x50 = true;
    Model.AdTags.Ad_Bot_320x50 = true;
    Model.AdTags.Ad_300x250BTF = true;
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
}
<section>
    <div class="container box-shadow bg-white section-bottom-margin">
        <div class="box-shadow padding-15-20">
            <h1 class="margin-bottom5">Bike Care</h1>
            <h2 class="font14 text-unbold">BikeWale brings you maintenance tips from experts to rescue you from common problems</h2>
        </div>
        <ul id="divListing" class="article-list">
            @foreach (var article in Model.Articles.Articles)
            {
                <li>
                    <a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(article.BasicId),article.ArticleUrl,Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.TipsAndAdvices)))" title="@article.Title">

                        <div class="article-item-content">
                            <div class="article-wrapper">
                                <div class="article-image-wrapper">
                                    <img class="lazy" alt='Bike Care:@article.Title' title="Bike Care: @article.Title" data-original="@Image.GetPathToShowImages(article.OriginalImgUrl,article.HostUrl,ImageSize._110x61,QualityFactor._70)" width="100%" border="0" src="">
                                </div>
                                <div class="padding-left10 article-desc-wrapper">
                                    <h2 class="font14">Bike Care: @article.Title</h2>
                                </div>
                            </div>
                            <div class="article-stats-wrapper font12 leftfloat text-light-grey">
                                <span class="bwmsprite calender-grey-icon inline-block"></span><span class="inline-block">@FormatDate.GetFormatDate(Convert.ToString(article.DisplayDate), "dd MMMM yyyy")</span>
                            </div>
                            <div class="article-stats-wrapper font12 leftfloat text-light-grey">
                                <span class="bwmsprite author-grey-icon inline-block"></span><span class="inline-block">@article.AuthorName</span>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </a>
                </li>
            }
        </ul>
        <div class="margin-right10 margin-left10 padding-top15 padding-bottom15 border-solid-top font14">
            <div class="grid-5 omega text-light-grey font13">
                <span class="text-bold text-default">@string.Format("{0}-{1}", Model.StartIndex, Model.EndIndex)</span> of <span class="text-bold text-default">@Model.Articles.RecordCount</span> articles
            </div>
            @if (Model.Articles.RecordCount > 10)
            {
                Html.RenderAction("Index", "Pager", new { objPager = @Model.PagerEntity });
            }
            <div class="clear"></div>
        </div>

    </div>
</section>
@if (Model.AdTags.Ad_300x250BTF)
{
    <div class="margin-bottom20 text-center">
        @{Html.RenderPartial("/Views/Shared/Ads/Mobile/Ad300x250BTF.cshtml", Model.AdTags);}
    </div>
}
@if (Model.MostPopularBikes != null && Model.MostPopularBikes.Bikes != null && Model.MostPopularBikes.Bikes.Count() > 0)
{
    <section>
        <div class="container box-shadow bg-white section-bottom-margin padding-bottom20 padding-top15">
            <div class="carousel-heading-content">
                <div class="swiper-heading-left-grid inline-block">
                    <h2>@Model.MostPopularBikes.WidgetHeading</h2>
                </div>
                <div class="swiper-heading-right-grid inline-block text-right">
                    <a href="@string.Format("/m{0}",Model.MostPopularBikes.WidgetHref)" title="@Model.MostPopularBikes.WidgetLinkTitle" class="btn view-all-target-btn">View all</a>
                </div>
                <div class="clear"></div>
            </div>
            @Html.Partial("~/Views/BikeModels/_MostPopularBikes_Mobile.cshtml", Model.MostPopularBikes)
        </div>
    </section>
}
@if (Model.UpcomingBikes != null && Model.UpcomingBikes.UpcomingBikes != null && Model.UpcomingBikes.UpcomingBikes.Count() > 0)
{
    <section>
        <div class="container box-shadow bg-white section-bottom-margin padding-bottom20 padding-top15">
            <div class="carousel-heading-content">
                <div class="swiper-heading-left-grid inline-block">
                    <h2>@Model.UpcomingBikes.WidgetHeading</h2>
                </div>
                <div class="swiper-heading-right-grid inline-block text-right">
                    <a href="@string.Format("/m{0}", Model.UpcomingBikes.WidgetHref)" title="@Model.UpcomingBikes.WidgetLinkTitle" class="btn view-all-target-btn">View all</a>
                </div>
                <div class="clear"></div>
            </div>
            @Html.Partial("~/Views/Upcoming/_UpcomingBikes_Editorial_Mobile.cshtml", Model.UpcomingBikes)
        </div>
    </section>
}

@using Bikewale.Entities.BikeData;
﻿@{
    ViewBag.AdPath = "/1017752/Bikewale_Mobile_NewBikes";
    ViewBag.AdId = "1398766302464";
    ViewBag.Ad_320x50 = true;    

    ViewBag.Page_JS_Path = "/m/src/new-launch.js";
    ViewBag.staticUrl = Bikewale.Utility.BWConfiguration.Instance.StaticUrl;
    ViewBag.staticFileVersion = Bikewale.Utility.BWConfiguration.Instance.StaticFileVersion;
    ViewBag.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/new-launch/new-launch.css' />";
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
    IEnumerable<UpcomingBikeEntity> objUpcoming = ViewBag.UpcomingBikes;
}
<section>
    <div class="container bg-white card-bottom-margin">
        <h1 class="card-header">New Bike Launches in @ViewBag.launchYear</h1>
        <div class="card-inner-padding font14 text-light-grey collapsible-content">
            <p class="main-content">Every year, more than 15 million two-wheelers are sold in India across dozens of brands. To keep up with the changing trends in lifestyle, roads, and requirements, two-</p>            
            <p class="more-content">wheeler brands launch dozens of model every year. Check out the latest bikes launched in @ViewBag.launchYear. Know more about prices, mileage, colors, specifications, and dealers of new bikes launched in @ViewBag.launchYear.</p><a href="javascript:void(0)" class="read-more-target" rel="nofollow">...Read more</a>
        </div>
    </div>
</section>

<section id="newlaunched-bikes" data-year-filter="@ViewBag.launchYear" data-city="@ViewBag.location.CityId">
    <div class="container bg-white box-shadow card-bottom-margin">
        <h2 class="padding-15-20 border-solid-bottom">Latest bikes in India - @ViewBag.launchYear</h2>
        @Html.Partial("~/Views/m/NewLaunches/_NewLaunchedBikes.cshtml")
    </div>
</section>

<section>
    <div class="container bg-white box-shadow padding-top15 padding-bottom15 card-bottom-margin">
        <h2 class="padding-right20 padding-bottom15 padding-left20">Explore year-wise bike launches</h2>
        @{Html.RenderAction("Years", "NewLaunches", new { year = ViewBag.launchYear });}
        </div>
</section>

@if (objUpcoming != null && objUpcoming.Count() > 0)
{
    <section>
        <div class="container bg-white box-shadow padding-top15 padding-bottom15 card-bottom-margin">
            <h2 class="padding-right20 padding-bottom15 padding-left20">Upcoming bikes in India</h2>
            @Html.Partial("~/Views/m/Shared/_UpcomingBikes.cshtml", objUpcoming)
            <div class="padding-left10 view-all-btn-container margin-top10 text-center">
                <a href="/m/upcoming-bikes/" title="Upcoming Bikes in India" class="btn view-all-target-btn">View all bikes<span class="bwmsprite teal-right"></span></a>
            </div>
        </div>
    </section>
}
<section>
    <div class="container bg-white box-shadow padding-top15 padding-bottom15 card-bottom-margin">
        <div class="carousel-heading-content">
            <div class="swiper-heading-left-grid inline-block">
                <h2>Explore new launches by brands</h2>
            </div>
            <div class="swiper-heading-right-grid inline-block text-right">
                <a href="/m/new-bike-launches/" title="New Bike Launches in India" class="btn view-all-target-btn">View all</a>
            </div>
            <div class="clear"></div>
        </div>
        @{Html.RenderAction("Makes", "NewLaunches");}
    </div>
</section>
<script type="text/javascript" src="@(!string.IsNullOrEmpty(ViewBag.staticUrl) ? ("https://st.aeplcdn.com" + @ViewBag.staticUrl) : "")/m/src/frameworks.js?@ViewBag.staticFileVersion"></script>
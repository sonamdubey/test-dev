@using Bikewale.Utility;
@{
    ViewBag.Ad_320x50 = true;
    ViewBag.Ad_Bot_320x50 = true;
    ViewBag.Ad_300x250 = false;
    ViewBag.Ad320x150_Top = false;
    ViewBag.Ad320x150_Bottom = false;
    ViewBag.AdPath = "/1017752/Bikewale_Mobile_Make";
    ViewBag.AdId = "1444028878952";
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
    ViewBag.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/scooters/listing.css' />";
    ViewBag.Page_JS_Path = "/m/src/scooters-by-make.js";
    ICollection<Bikewale.Entities.BikeData.SimilarCompareBikeEntity> similarBikeList = ViewBag.similarBikeList;
    IEnumerable<Bikewale.Entities.BikeData.MostPopularBikesBase> ScootersList = ViewBag.ScootersList;
    IEnumerable<Bikewale.Entities.BikeData.UpcomingBikeEntity> upcomingScooters = ViewBag.UpcomingBikes;
    Bikewale.Models.Shared.Showrooms dealerShowrooms = ViewBag.objShowrooms;
    IEnumerable<Bikewale.Entities.ServiceCenters.ServiceCenterDetails> serviceCenters = ViewBag.serviceCenters;
    bool showServiceWidget = ViewBag.showServiceWidget;
    bool showDealerWidget = ViewBag.showDealerWidget;
    bool showServiceCenter = ViewBag.showServiceCenter;
}

<section>
    <div class="container content-box-shadow card-bottom-margin">
        <h1 class="padding-15-20 content-box-shadow">@ViewBag.MakeName Scooters</h1>
       @if (ScootersList != null && ScootersList.Count() > 0)
       { <ul class="bike-listing">
           @foreach (var bikedetails in ScootersList)
                   {
             <li class="list-item">
                 <a href="@string.Format("m/{0}", Bikewale.Utility.UrlFormatter.BikePageUrl(bikedetails.objMake.MaskingName, bikedetails.objModel.MaskingName))" title="@bikedetails.BikeName" class="block">
                     <div class="item-image-content">
                         <img class="lazy" data-original="@Bikewale.Utility.Image.GetPathToShowImages(bikedetails.OriginalImagePath, bikedetails.HostURL, Bikewale.Utility.ImageSize._310x174)" alt="@bikedetails.BikeName" src="" />
                     </div>
                     <h2 class="margin-bottom10">@bikedetails.BikeName</h2>
                    @if (bikedetails.Specs != null)
                                  { <div class="font14 text-x-light margin-bottom10">
                                        @Html.Raw(Bikewale.Utility.FormatMinSpecs.GetMinSpecs(Convert.ToString(bikedetails.Specs.Displacement), Convert.ToString(bikedetails.Specs.FuelEfficiencyOverall), Convert.ToString(bikedetails.Specs.MaxPower), Convert.ToString(bikedetails.Specs.KerbWeight)))
                     </div>
                    }
                     <p class="key-size-14 margin-bottom5">Ex-showroom price, @Bikewale.Utility.BWConfiguration.Instance.DefaultName</p>
                     <span class="bwmsprite inr-sm-icon"></span>
                     <span class="value-size-18">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikedetails.VersionPrice))</span>
                     <span class="value-size-14"> onwards</span>
                 </a>
                <div class="margin-top15">
                    <a href="javascript:void(0)" data-pagecatid="@ViewBag.PageCatId" data-makename="@bikedetails.objMake.MakeName" data-modelname="@bikedetails.objModel.ModelName" data-pqsourceid="@Convert.ToUInt32(Bikewale.Entities.PriceQuote.PQSourceEnum.Desktop_Scooters_Landing_Check_on_road_price)" data-modelid="@bikedetails.objModel.ModelId" class="btn btn-white btn-180-32 getquotation" rel="nofollow">Check on-road price</a>
                </div>
            </li>
           }
        </ul>
       }
    </div>
</section>
@if (similarBikeList != null && similarBikeList.Count() > 0)
{
    <section>
        @Html.Partial("~/Views/m/Shared/_similarComparisions.cshtml", similarBikeList)
    </section>
}
<section>
    <div class="container content-box-shadow padding-top15 padding-bottom15 card-bottom-margin">
        <h2 class="padding-right20 padding-bottom15 padding-left20">Scooters of Other Brands</h2>

            @{ Html.RenderAction("OtherBrandsMobile", "Scooters", new { makeId = @ViewBag.MakeId }); }

    </div>
</section>

@if (upcomingScooters != null && upcomingScooters.Count() > 0)
{
    
<section>
    <div class="container content-box-shadow padding-top15 padding-bottom15 card-bottom-margin">
        <h2 class="padding-right20 padding-bottom15 padding-left20">Upcoming Scooters</h2>
        @Html.Partial("~/Views/m/Shared/_UpcomingBikes.cshtml", upcomingScooters)
      </div>
    </section>     
}

@if ((ViewBag.Synopsis != null && !string.IsNullOrEmpty(ViewBag.Synopsis.FullDescription) && ViewBag.Synopsis.FullDescription.Length > 0) || showDealerWidget || (showServiceWidget && ViewBag.CityId > 0))
{
<section>
    <div id="makeTabsContentWrapper" class="container content-box-shadow card-bottom-margin">
        <div id="makeOverallTabsWrapper">
            <div class="overall-specs-tabs-container">
                <ul class="overall-specs-tabs-wrapper">
                    @if (ViewBag.Synopsis != null && ViewBag.Synopsis.FullDescription.Length > 0) { 
                     <li class="active" data-tabs="#makeAboutContent">About</li>
                    }
                    @if (showDealerWidget || (showServiceWidget && ViewBag.CityId > 0))
                     {
                    <li data-tabs="#dealerAndServiceContent">
                    @(showDealerWidget ? "Dealers" : "")
                    @((showServiceCenter || (showServiceWidget && ViewBag.CityId > 0)) ? ((showDealerWidget) ? " & Service Centers" : "") : "")
                    </li>
                    }
                </ul>
            </div>
        </div>
        @if (ViewBag.Synopsis != null && !string.IsNullOrEmpty(ViewBag.Synopsis.FullDescription) && ViewBag.Synopsis.FullDescription.Length > 0)
        {
        <div id="makeAboutContent" class="bw-model-tabs-data padding-top15 padding-bottom15 active">
            <div class="padding-right20 padding-left20">
                <h2 class="text-bold">About @ViewBag.MakeName Scooters</h2>
                <div class="font14 text-light-grey collapsible-content">
                    <p class="main-content">@Html.Raw(FormatDescription.TruncateDescription(ViewBag.Synopsis.FullDescription, 700))</p>
                    <p class="more-content hide">@Html.Raw(ViewBag.Synopsis.FullDescription)</p>
                     @if (ViewBag.Synopsis.FullDescription.Length > 700)
                    {                        
                      <a href="javascript:void(0)" class="read-more-target" rel="nofollow">...Read more</a>}
                </div>
            </div>
        </div>
        <div class="margin-right20 margin-left20 border-solid-bottom"></div>
        }
        <div id="dealerAndServiceContent" class="bw-model-tabs-data">

            @Html.Partial("~/Views/m/Shared/_showrooms.cshtml", dealerShowrooms)

@if (serviceCenters != null && serviceCenters.Count() > 0)
{
    <div class="container card-bottom-margin padding-bottom20">
        <div class="carousel-heading-content">
            <div class="swiper-heading-left-grid inline-block">
                <h2>@ViewBag.MakeName Service Centers in @ViewBag.CityName</h2>
            </div>
            <div class="swiper-heading-right-grid inline-block text-right">
                <a href="@string.Format("/m{0}", UrlFormatter.GetServiceCenterUrl(ViewBag.MakeMaskingName, ViewBag.CityMaskingName))" title="@ViewBag.MakeName Service Centers in @ViewBag.CityName" class="btn view-all-target-btn">View all</a>
            </div>
            <div class="clear"></div>
        </div>
         @if(!string.IsNullOrEmpty(ViewBag.biLineText)) {
            <p class="margin-top5 margin-left20 margin-bottom15">@ViewBag.biLineText</p>
    }
        @Html.Partial("~/Views/m/Shared/_ServiceCenters.cshtml", serviceCenters)
        </div>
        }
        
    </div>
        <div id="makeSpecsFooter"></div>
    </div>
</section>
}

<script type="text/javascript" src="@(!string.IsNullOrEmpty(ViewBag.staticUrl) ? ("https://st.aeplcdn.com" + @ViewBag.staticUrl) : "")/m/src/frameworks.js?@ViewBag.staticFileVersion"></script>
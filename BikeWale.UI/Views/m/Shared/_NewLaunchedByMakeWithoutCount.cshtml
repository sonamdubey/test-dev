@if (ViewBag.TopMakes != null)
{ 
<div class="container bg-white box-shadow section-bottom-margin padding-top25 padding-bottom20 text-center collapsible-brand-content">
    <div id="brand-type-container" class="brand-type-container">
        <ul>
            @foreach (var makeDetails in ViewBag.TopMakes)
            {
                <li>
                    <a href="@string.Format("/m{0}", Bikewale.Utility.UrlFormatter.FormatMakeWiseBikeLaunchedUrl(makeDetails.Make.MaskingName))" title="Newly launched @makeDetails.Make.MakeName bikes">
                        <span class="brand-type">
                            <span class="lazy brandlogosprite brand-@makeDetails.Make.MakeId"></span>
                        </span>
                        <span class="brand-type-title">@makeDetails.Make.MakeName</span>
                    </a>
                </li>
            }
        </ul>
       @if (ViewBag.OtherMakes != null)
       {
        <ul class="brand-style-moreBtn brandTypeMore border-top1 padding-top25 hide">
            @foreach (var makeDetails in ViewBag.OtherMakes)
            {
                <li>
                    <a href="@string.Format("/m{0}", Bikewale.Utility.UrlFormatter.FormatMakeWiseBikeLaunchedUrl(makeDetails.Make.MaskingName))" title="Newly launched @makeDetails.Make.MakeName bikes">
                        <span class="brand-type">
                            <span class="lazy brandlogosprite brand-@makeDetails.Make.MakeId"></span>
                        </span>
                        <span class="brand-type-title">@makeDetails.Make.MakeName</span>
                    </a>
                </li>
            }
        </ul>
       
       }
       
    </div>
    <div class="view-all-btn-container">
        <a href="javascript:void(0)" class="view-brandType view-more-btn btn view-all-target-btn rotate-arrow" rel="nofollow"><span class="btn-label">View more brands</span><span class="bwmsprite teal-right"></span></a>
    </div>
</div>
}
<amp-carousel height="225" layout="fixed-height" type="carousel" class="upcoming-model-carousel">
    @foreach (var bike in Model.objUpcomingBikes.UpcomingBikes)
    {
        string bikeName = string.Format("{0} {1}", bike.MakeBase.MakeName, bike.ModelBase.ModelName);
        <div class="swiper-card">
            <a href="@string.Format("/m{0}",Bikewale.Utility.UrlFormatter.BikePageUrl(bike.MakeBase.MaskingName,bike.ModelBase.MaskingName))" title="@bikeName">
                <div class="swiper-image-preview">
                    <amp-img width="160" height="90" src="@Bikewale.Utility.Image.GetPathToShowImages(bike.OriginalImagePath,bike.HostUrl,Bikewale.Utility.ImageSize._174x98,Bikewale.Utility.QualityFactor._70)" alt=" @bikeName "></amp-img>
                </div>
                <div class="swiper-details-block">
                    <h3 class="upcoming-model__name font-semibold font12 text-truncate">@bikeName</h3>
                    @if (bike.ExpectedLaunchDate != null)
                    {
                        <div class="upcoming-model__expected-launch text-light-grey">
                            <p class="font11">Expected launch</p>
                            <p class="upcoming-expected-launch__date text-default font16">@Bikewale.Utility.FormatDate.GetFormatDate(bike.ExpectedLaunchDate, "MMMM yyyy")</p>
                        </div>
                    }
                    @if (bike.EstimatedPriceMin > 0)
                    {
                        <div>
                            <div class="font11">Expected Price</div>
                            <div class="text-default font-semibold font16">
                                @Html.Raw("<span class='font16'> &#x20B9;</span>")
                                &nbsp;<span>@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bike.EstimatedPriceMin))</span>
                                <span class="upcoming-expected-launch__onward-text">&nbsp;onwards</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-default">
                            <span class="font14 text-light-grey">Price not available</span>
                        </div>
                    }
                </div>
            </a>
        </div>
    }
</amp-carousel>
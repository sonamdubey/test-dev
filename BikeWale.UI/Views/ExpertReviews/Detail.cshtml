@model Bikewale.Models.ExpertReviewsDetailPageVM
@using Bikewale.Utility
@using Bikewale.Entities.GenericBikes
@{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/css/content/details.css' inline />";
    Model.Page_BTF_CSS_Path = "/css/jquery.floating-social-share.min.css";
    Model.Page_JS_Path = "/src/content/details.js";
    Model.PageMetaTags.FBTitle = Model.ArticleDetails.Title;
    Model.AdTags.AdId = "1395986297721";
    Model.AdTags.AdPath = "/1017752/Bikewale_Reviews_";
    Model.AdTags.Ad_300x250 = true;
    Model.AdTags.Ad_300x250BTF = true;
    Model.AdTags.Ad_970x90 = true;
    Model.AdTags.Ad_970x90Bottom = true;
    Model.IsHeaderFix = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="container padding-top10">
    <div class="grid-12">
        <div class="breadcrumb margin-bottom15">
            <ul>
                <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                    <a href="/" itemprop="url">
                        <span itemprop="title">Home</span>
                    </a>
                </li>
                <li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                    <span class="bwsprite fa-angle-right margin-right10"></span>
                    <a href="/expert-reviews/" itemprop="url">
                        <span itemprop="title">Expert Reviews</span>
                    </a>
                </li>
                <li><span class="bwsprite fa-angle-right margin-right10"></span>@Model.ArticleDetails.Title</li>
            </ul>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</section>

<section>
    <div class="container margin-bottom20">
        <div class="grid-12">
            <div id="content" class="grid-8 alpha">
                <div class="bg-white">
                    <div class="section-header">
                        <h1 class="margin-bottom5">@Model.ArticleDetails.Title</h1>
                        <div>
                            <span class="bwsprite calender-grey-sm-icon"></span>
                            <span class="article-stats-content margin-right20">@FormatDate.GetFormatDate(Convert.ToString(Model.ArticleDetails.DisplayDate), "dd MMMM yyyy, hh:mm tt")</span>
                            <span class="bwsprite author-grey-sm-icon"></span>
                            <span class="article-stats-content margin-right20">@Model.ArticleDetails.AuthorName</span>
                            <span class="font12 inline-block text-light-grey">
                                @if(Model.BikeTested!=null && !string.IsNullOrEmpty(Model.BikeTested.ToString())){
                                    @Html.Raw(Model.BikeTested)}
                            </span>
                        </div>
                    </div>
                    <div class="section-inner-padding">
                        <div id="topNav" class="margin-bottom10">
                            @if(Model.ArticleDetails.PageList!=null && Model.ArticleDetails.PageList.Count()>0){
                                <ul>
                                    @foreach (var page in Model.ArticleDetails.PageList) {
                                        <li>
                                            <a href="#@page.pageId">@page.PageName</a>
                                        </li>
                                       }
                                    <li>
                                        <a href="#divPhotos">Images</a>
                                    </li>
                                </ul>
                                      }
                        </div>
                        <div class="clear"></div>
                        @if(Model.ArticleDetails.PageList!=null && Model.ArticleDetails.PageList.Count()>0){
                           foreach (var page in Model.ArticleDetails.PageList) {
                            <div class="margin-top10 margin-bottom10">
                                <h3 class="article-content-title">@page.PageName</h3>
                                <div id='@page.pageId' class="margin-top10 article-content">
                                    @Html.Raw(page.Content)
                                </div>
                            </div>
                            }}
                        @if(Model.BikeInfo != null) {
                            @Html.Partial("~/Views/BikeModels/_minBikeInfoCard.cshtml", Model.BikeInfo)
                                }

                        @if (Model.PhotoGallery!=null && Model.PhotoGallery.Images != null && Model.PhotoGallery.ImageCount > 0)
                        {
                            <div id="divPhotos">
                                @Html.Partial("~/Views/Shared/_EditCMSPhotoGallery.cshtml",Model.PhotoGallery.Images)
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="grid-4 omega">
                @if (Model.MostPopularBikes != null && Model.MostPopularBikes.Bikes != null && Model.MostPopularBikes.Bikes.Count() > 0)
                {
                    <div class="content-box-shadow padding-15-20-10 margin-bottom20">
                        <h2>@Model.MostPopularBikes.WidgetHeading</h2>
                        @Html.Partial("~/Views/BikeModels/_MostPopularBikesSideBar.cshtml", Model.MostPopularBikes)

                        <div class="view-all-btn-container padding-top10 padding-bottom10">
                            <a href="@Model.MostPopularBikes.WidgetHref" title="@Model.MostPopularBikes.WidgetLinkTitle" class="btn view-all-target-btn">@Model.MostPopularBikes.CtaText<span class="bwsprite teal-right"></span></a>
                        </div>
                    </div>
                }
                <div class="margin-bottom20">
                    @Html.Partial("~/Views/Shared/Ads/Desktop/Ad300x250.cshtml", Model.AdTags)
                </div>

                @if ( Model.PopularScooterMakesWidget != null && Model.PopularScooterMakesWidget.Count() > 0)
                {
                    <div class="content-box-shadow padding-15-20-10 margin-bottom20">
                        <h2>Popular scooter brands</h2>
                        @Html.Partial("~/Views/Scooters/_PopularScooterBrandsVerticalWidget.cshtml", Model.PopularScooterMakesWidget)
                        <div class="view-all-btn-container padding-top10 padding-bottom10">
                            <a href="/scooters/" title="Scooters" class="btn view-all-target-btn">
                                View all scooters<span class="bwsprite teal-right"></span>
                            </a>
                        </div>
                    </div>
                }
                else if (Model.Model != null && Model.Model.ModelId > 0)
                {
                    if (Model.PopularBodyStyle != null && Model.PopularBodyStyle.PopularBikes != null && Model.PopularBodyStyle.PopularBikes.Count() > 0)
                    {
                        <div class="content-box-shadow padding-15-20-10 margin-bottom20">
                            <h2>@Model.PopularBodyStyle.WidgetHeading</h2>
                            @Html.Partial("~/Views/BestBikes/_PopularBodyStyle_Vertical.cshtml", Model.PopularBodyStyle)
                            <div class="view-all-btn-container padding-top10 padding-bottom10">
                                <a href="@Model.PopularBodyStyle.WidgetHref" title="@Model.PopularBodyStyle.WidgetLinkTitle" class="btn view-all-target-btn">View all bikes<span class="bwsprite teal-right"></span></a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    if (Model.UpcomingBikes != null && Model.UpcomingBikes.UpcomingBikes != null && Model.UpcomingBikes.UpcomingBikes.Count() > 0)
                    {
                        <div class="content-box-shadow padding-15-20-10 margin-bottom20">
                            <h2>@Model.UpcomingBikes.WidgetHeading</h2>
                            @Html.Partial("~/Views/Upcoming/_UpcomingBikes_Vertical.cshtml", Model.UpcomingBikes)
                            <div class="view-all-btn-container padding-top10 padding-bottom10">
                                <a href="@Model.UpcomingBikes.WidgetHref" title="@Model.UpcomingBikes.WidgetLinkTitle" class="btn view-all-target-btn">View all bikes<span class="bwsprite teal-right"></span></a>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</section>
<div class="back-to-top" id="back-to-top"></div>
@if (Model.PhotoGallery!=null && Model.PhotoGallery.Images != null && Model.PhotoGallery.ImageCount > 0)
{
    <section>
        <div class="model-gallery-container">
            <div class="blackOut-window-model"></div>
            <div class="modelgallery-close-btn position-abt pos-top20 pos-right20 bwsprite cross-lg-white cur-pointer hide"></div>
            <div class="bw-tabs-panel bike-gallery-popup hide" id="bike-gallery-popup">

                <div class="bike-gallery-heading margin-bottom20 margin-left30 margin-top90">
                    <p class="font18 text-bold text-white">@Model.ArticleDetails.Title</p>
                </div>
                @Html.Partial("~/Views/Shared/_EditCMSModelGallery.cshtml", Model.PhotoGallery)
            </div>
        </div>
    </section>
}
<script defer type="text/javascript" src="@String.Format("{0}/src/jquery.floating-social-share.min.js?{1}", Bikewale.Utility.BWConfiguration.Instance.StaticUrl,Bikewale.Utility.BWConfiguration.Instance.StaticPluginFileVersion)"></script>

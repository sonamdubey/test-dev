@model Bikewale.Models.RecentExpertReviewsVM
@using Bikewale.Utility
@if (Model != null && Model.ArticlesList != null && Model.ArticlesList.Any())
{
	<ul class="overalltab__section-list">
		@foreach (var review in Model.ArticlesList)
		{
			<li class="news-card-container">
				<div class="margin-bottom10">
					<a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(review.BasicId),review.ArticleUrl,Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.RoadTest)))" title="@review.Title" class="news-section__img">
						<img class="lazy" data-original="@Image.GetPathToShowImages(review.OriginalImgUrl, review.HostUrl, ImageSize._144x81, QualityFactor._70)" alt="@review.Title" src="" border="0">
					</a>
					<div class="news-section__title-block">
						<a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(review.BasicId),review.ArticleUrl,Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.RoadTest)))" title="@review.Title" class="swiper-card__label">@review.Title.Truncate(25) ...</a>
						<p class="news-section__sub-title">@FormatDate.GetFormatDate(Convert.ToString(review.DisplayDate), "dd MMM yyyy")</p>
						<p class="model-card__sub-title">@review.AuthorName</p>
					</div>
				</div>
				<div class="news-section__desc">@FormatDescription.TruncateDescription(review.Description, 120)<a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(review.BasicId),review.ArticleUrl,Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.RoadTest)))" title="@review.Title" class="read-more">...Read more</a>
				</div>
			</li>
		}
	</ul>
}

@model Bikewale.Models.PopularComparisonsVM
@if (Model != null && Model.IsDataAvailable)
{
   <div id="comparisonCarousel" class="jcarousel-wrapper inner-content-carousel margin-bottom15 comparison-type-carousel">
                    <div class="jcarousel">
                        <ul class="model-comparison-list">
                            @foreach (var bikedetails in Model.CompareBikes)
                            {
                                string bike1 = string.Format("{0} {1}", bikedetails.Make1, bikedetails.Model1);
                                string bike2 = string.Format("{0} {1}", bikedetails.Make2, bikedetails.Model2);
                                <li>
                             <a href="/@Bikewale.Utility.UrlFormatter.CreateCompareUrl(bikedetails.MakeMasking1, bikedetails.ModelMasking1, bikedetails.MakeMasking2, bikedetails.ModelMasking2, Convert.ToString(bikedetails.VersionId1), Convert.ToString(bikedetails.VersionId2),bikedetails.ModelId1,bikedetails.ModelId2, Model.CompareSource)" title="@string.Format("{0} {1} vs {2} {3}",bikedetails.Make1,bikedetails.Model1,bikedetails.Make2,bikedetails.Model2)">
                                 <span class="text-light-grey position-abt pos-top5 pos-right5 font11">@(bikedetails.IsSponsored ? "Sponsored" : "")</span>
                                 <h3 class="text-black text-center margin-bottom10">@string.Format("{0} vs {1}", bikedetails.Model1, bikedetails.Model2)</h3>
                                        <div class="grid-6 alpha omega border-light-right padding-bottom20">
                                            <div class="imageWrapper margin-bottom10">
                                                <div class="comparison-image">
                                                    <img src="@Bikewale.Utility.Image.GetPathToShowImages(bikedetails.OriginalImagePath1, bikedetails.HostUrl1, Bikewale.Utility.ImageSize._174x98,Bikewale.Utility.QualityFactor._70)" alt="@bike1" title="@bike1">
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(bikedetails.City1))
                                            {<p class="text-light-grey block text-truncate">Ex-showroom, @bikedetails.City1</p> }
                                            else
                                            {<p class="text-light-grey block text-truncate">Ex-showroom, @Bikewale.Utility.BWConfiguration.Instance.DefaultName</p> }

                                            <span class="bwsprite inr-md-lg"></span>&nbsp;<span class="font20 text-default text-bold">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikedetails.Price1))</span>
                                        </div>
                                        <div class="grid-6 padding-left30 omega">
                                            <div class="imageWrapper margin-bottom10">
                                                <div class="comparison-image">
                                                    <img src="@Bikewale.Utility.Image.GetPathToShowImages(bikedetails.OriginalImagePath2, bikedetails.HostUrl2, Bikewale.Utility.ImageSize._174x98, Bikewale.Utility.QualityFactor._70)" alt="@bike2" title="@bike2">
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(bikedetails.City2))
                                            {<p class="text-light-grey block text-truncate">Ex-showroom, @bikedetails.City2</p> }
                                            else
                                            {<p class="text-light-grey block text-truncate">Ex-showroom, @Bikewale.Utility.BWConfiguration.Instance.DefaultName</p> }
                                            <span class="bwsprite inr-md-lg"></span>&nbsp;<span class="font20 text-default text-bold">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikedetails.Price2))</span>
                                        </div>
                                        <div class="clear"></div>
                                        <div class="margin-top10 text-center">
                                            <span class="btn btn-white btn-size-1">Compare now</span>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <span class="jcarousel-control-left"><a href="#" class="bwsprite jcarousel-control-prev" rel="nofollow"></a></span>
                    <span class="jcarousel-control-right"><a href="#" class="bwsprite jcarousel-control-next" rel="nofollow"></a></span>
                </div>
}
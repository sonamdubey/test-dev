@model ICollection<Bikewale.Entities.BikeData.SimilarCompareBikeEntity>
           @if (Model != null) { 
<div class="container section-bottom-margin">
    <div class="grid-12">
        <div class="content-box-shadow padding-top20 padding-bottom20">
            <h2 class="font18 padding-bottom20 padding-left20">Popular comparison of @ViewBag.MakeName scooters</h2>
            <div id="comparisonCarousel" class="jcarousel-wrapper inner-content-carousel margin-bottom15 comparison-type-carousel">
                <div class="jcarousel">
                    <ul class="model-comparison-list">
                       @foreach (var bikedetails in Model) {
                           string bike1 = string.Format("{0} {1}", bikedetails.Make1, bikedetails.Model1);
                           string bike2=string.Format("{0} {1}",bikedetails.Make2,bikedetails.Model2);
                         <li>
                             <a href="@Bikewale.Utility.UrlFormatter.CreateCompareUrl(bikedetails.MakeMasking1, bikedetails.ModelMaskingName1, bikedetails.MakeMasking2, bikedetails.ModelMaskingName2, Convert.ToString(bikedetails.VersionId1), Convert.ToString(bikedetails.VersionId2), Bikewale.Entities.Compare.CompareSources.Mobile_Scooter_Listing_Compare)" title="@string.Format("{0} {1} vs {2} {3}",bikedetails.Make1,bikedetails.Model1,bikedetails.Make2,bikedetails.Model2)">
                                 <h3 class="text-black text-center margin-bottom10">@string.Format("{0} vs {1}", bikedetails.Model1, bikedetails.Model2)</h3>
                                 <div class="grid-6 alpha omega border-light-right padding-bottom20">
                                     <div class="imageWrapper margin-bottom10">
                                         <div class="comparison-image">
                                             <img src="@Bikewale.Utility.Image.GetPathToShowImages(bikedetails.OriginalImagePath1, bikedetails.HostUrl1, Bikewale.Utility.ImageSize._174x98)" alt="@bike1" title="@bike1">
                                         </div>
                                     </div>
                                     <p class="text-light-grey block text-truncate">Ex-showroom, @Bikewale.Utility.BWConfiguration.Instance.DefaultName</p>
                                     <span class="bwsprite inr-md-lg"></span>&nbsp;<span class="font20 text-default text-bold">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikedetails.Price1))</span>
                                 </div>
                                 <div class="grid-6 padding-left30 omega">
                                     <div class="imageWrapper margin-bottom10">
                                         <div class="comparison-image">
                                             <img src="@Bikewale.Utility.Image.GetPathToShowImages(bikedetails.OriginalImagePath2, bikedetails.HostUrl2, Bikewale.Utility.ImageSize._174x98)" alt="@bike2" title="@bike2">
                                         </div>
                                     </div>
                                     <p class="text-light-grey block text-truncate">Ex-showroom, @Bikewale.Utility.BWConfiguration.Instance.DefaultName</p>
                                     <span class="bwsprite inr-md-lg"></span>&nbsp;<span class="font20 text-default text-bold">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikedetails.Price2))</span>
                                 </div>
                                 <div class="clear"></div>
                                 <div class="margin-top10 text-center">
                                     <span class="btn btn-white btn-size-1">Compare now</span>
                                 </div>
                             </a>
                        </li>
                       }
                    </ul>
                </div>

                <span class="jcarousel-control-left"><a href="#" class="bwsprite jcarousel-control-prev" rel="nofollow"></a></span>
                <span class="jcarousel-control-right"><a href="#" class="bwsprite jcarousel-control-next" rel="nofollow"></a></span>
            </div>
            <div class="margin-left20 font14">
                <a href="">View more comparisons<span class="bwsprite blue-right-arrow-icon"></span></a>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>
           }
@model Bikewale.Models.RecentNewsVM
@using Bikewale.Utility
@if (Model != null && Model.ArticlesList != null && Model.ArticlesList.Any())
{
	<ul class="overalltab__section-list">
		@foreach (var news in Model.ArticlesList)
		{
			<li class="news-card-container">
				<div class="margin-bottom10">
					<a href="@string.Format("/m{0}", UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.News)))" title="@news.Title" class="news-section__img">
						<img class="lazy" data-original="@Image.GetPathToShowImages(news.OriginalImgUrl, news.HostUrl, ImageSize._144x81, QualityFactor._70)" alt="@news.Title" src="" border="0">
					</a>
					<div class="news-section__title-block">
						<a href="@string.Format("/m{0}", UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.News)))" title="@news.Title" class="swiper-card__label">@news.Title</a>
						<p class="news-section__sub-title">@FormatDate.GetFormatDate(Convert.ToString(news.DisplayDate), "dd MMM yyyy")</p>
						<p class="model-card__sub-title">@news.AuthorName</p>
					</div>
				</div>
				<div class="news-section__desc">
					@FormatDescription.TruncateDescription(@news.Description, 180)
					<a href="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.News)))" class="read-more">...Read more</a>
				</div>
			</li>
		}
	</ul>
}

@model Bikewale.Models.RecentNewsVM
@using Bikewale.Utility
@if (Model != null && Model.ArticlesList != null && Model.ArticlesList.Count() > 0)
{
    <ul>
        @foreach (var news in Model.ArticlesList)
        {
            <li class="margin-bottom20">
                <div class="review-image-wrapper">
					<span data-url="@string.Format("/m{0}", @UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.News)))" class="article-target-image redirect-url">
						<img class="lazy" data-original="@Image.GetPathToShowImages(news.OriginalImgUrl, news.HostUrl, ImageSize._144x81, QualityFactor._70)" title="@news.Title" alt="@news.Title" />
					</span>
                </div>
                <div class="review-heading-wrapper">
                    <span data-url="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.News)))" title="@news.Title" class="font14 target-link redirect-url">@FormatDescription.TruncateDescription(news.Title, 44)</span>
                    <div class="grid-7 alpha padding-right5">
                        <span class="bwmsprite calender-grey-sm-icon"></span>
                        <span class="article-stats-content">@FormatDate.GetFormatDate(Convert.ToString(news.DisplayDate), "dd MMM yyyy")</span>
                    </div>
                    <div class="grid-5 alpha omega">
                        <span class="bwmsprite author-grey-sm-icon"></span>
                        <span class="article-stats-content">@news.AuthorName</span>
                    </div>
                    <div class="clear"></div>
                </div>
                <p class="font14 margin-top10">
                    @FormatDescription.TruncateDescription(@news.Description, 180)
                </p>
                
				<span data-url="@string.Format("/m{0}",UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId), news.ArticleUrl, Convert.ToString(Bikewale.Entities.CMS.EnumCMSContentType.News)))" title="@news.Title" rel="nofollow" class="article-target-read-more redirect-url">Read more</span>
          
            </li> }
    </ul>
}
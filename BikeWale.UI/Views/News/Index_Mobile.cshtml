@model Bikewale.Models.NewsIndexPageVM
@using Bikewale.Utility
@using System.Text.RegularExpressions
@{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/m/css/content/listing.css' />";
    Model.AdTags.AdPath = "/1017752/Bikewale_Mobile_NewBikes";
    Model.AdTags.AdId = "1398766302464";
    Model.AdTags.Ad_320x50 = true;
    Model.AdTags.Ad_Mid_320x50=true;
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
}
<section>
    <div class="container box-shadow bg-white section-bottom-margin">
        <h1 class="box-shadow padding-15-20">@Model.PageH1</h1>

        <div id="divListing" class="article-list">
            @foreach (var news in Model.Articles.Articles)
            {
                <a href="@string.Format("/m{0}", UrlFormatter.GetArticleUrl(Convert.ToString(news.BasicId),news.ArticleUrl,Convert.ToString(news.CategoryId)))" title="@news.Title">
                    <div class="article-item-content @(news.AuthorName.ToLower().Contains(" sponsored") ? "sponsored-content":"")">
                        @(Regex.Match(news.AuthorName, @"\b(sponsored)\b",RegexOptions.IgnoreCase).Success ? "<div class=\"sponsored-tag-wrapper position-rel\"><span>Sponsored</span><span class=\"sponsored-left-tag\"></span></div>" : "")
                        <div class="article-wrapper">
                            <div class="article-image-wrapper">
                                <img class="lazy" alt='@news.Title' title="@news.Title" data-original='@Image.GetPathToShowImages(news.OriginalImgUrl, news.HostUrl,ImageSize._110x61)' width="100%" border="0" src="">
                            </div>
                            <div class="padding-left10 article-desc-wrapper">
                                <div class="article-category">
                                    <span class="text-uppercase font12 text-bold">@EditorialsFormatter.GetContentCategory(Convert.ToString(news.CategoryId))</span>
                                </div>
                                <h2 class="font14">@news.Title</h2>
                            </div>
                        </div>

                        <div class="article-stats-wrapper font12 leftfloat text-light-grey">
                            <span class="bwmsprite calender-grey-icon inline-block"></span><span class="inline-block">@FormatDate.GetFormatDate(Convert.ToString(news.DisplayDate),"MMM dd, yyyy")</span>
                        </div>

                        <div class="article-stats-wrapper font12 leftfloat text-light-grey">
                            <span class="bwmsprite author-grey-icon inline-block"></span><span class="inline-block">@news.AuthorName</span>
                        </div>
                        <div class="clear"></div>
                    </div>
                </a>
            }
        </div>
        <div class="margin-right10 margin-left10 padding-top15 padding-bottom15 border-solid-top font14">
            <div class="grid-5 omega text-light-grey font13">
                <span class="text-bold text-default">@Model.StartIndex-@Model.EndIndex</span> of <span class="text-bold text-default">@Model.Articles.RecordCount</span> articles
            </div>
            @if (Model.Articles.RecordCount > 10)
            {
                Html.RenderAction("Index", "Pager", new { objPager = @Model.PagerEntity });
            }
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</section>

<div class="margin-bottom15">
        @Html.Partial("~/Views/Shared/Ads/Mobile/Ad320x50_Middle.cshtml",Model.AdTags)
    </div>

@if (Model.MostPopularBikes != null && Model.MostPopularBikes.Bikes != null && Model.MostPopularBikes.Bikes.Count() > 0)
{
    <section>
        <div class="container box-shadow bg-white section-bottom-margin padding-bottom20 padding-top15">
            <div class="carousel-heading-content">
                <div class="swiper-heading-left-grid inline-block">
                    <h2>@Model.MostPopularBikes.WidgetHeading</h2>
                </div>
                <div class="swiper-heading-right-grid inline-block text-right">
                    <a href="@string.Format("/m{0}",Model.MostPopularBikes.WidgetHref)" title="@Model.MostPopularBikes.WidgetLinkTitle" class="btn view-all-target-btn">View all</a>
                </div>
                <div class="clear"></div>
            </div>
            @Html.Partial("~/Views/BikeModels/_MostPopularBikes_Mobile.cshtml", Model.MostPopularBikes)
           </div>
        </section>
   }

            @if (Model.Model != null && Model.Model.ModelId > 0)
{
    if (Model.PopularBodyStyle != null && Model.PopularBodyStyle.PopularBikes != null && Model.PopularBodyStyle.PopularBikes.Count() > 0)
    {
        <section>
            <div class="container box-shadow bg-white section-bottom-margin padding-bottom20">
                <div class="carousel-heading-content padding-top15">
                    <div class="swiper-heading-left-grid inline-block">
                        <h2>@Model.PopularBodyStyle.WidgetHeading</h2>
                    </div>
                    <div class="swiper-heading-right-grid inline-block text-right">
                        <a href="@string.Format("/m{0}",Model.PopularBodyStyle.WidgetHref)" title="@Model.PopularBodyStyle.WidgetLinkTitle" class="btn view-all-target-btn">View all</a>
                    </div>
                    <div class="clear"></div>
                </div>
                @Html.Partial("~/Views/BestBikes/_PopularBodyStyleCarousel_Mobile.cshtml", Model.PopularBodyStyle)
            </div>
        </section>
    }
}
else
{
    if (Model.UpcomingBikes != null && Model.UpcomingBikes.UpcomingBikes != null && Model.UpcomingBikes.UpcomingBikes.Count() > 0)
    {
        <section>
            <div class="container box-shadow bg-white section-bottom-margin padding-bottom20 padding-top15">
                <div class="carousel-heading-content">
                    <div class="swiper-heading-left-grid inline-block">
                        <h2>@Model.UpcomingBikes.WidgetHeading</h2>
                    </div>
                    <div class="swiper-heading-right-grid inline-block text-right">
                        <a href="@string.Format("/m{0}",Model.UpcomingBikes.WidgetHref)" title="@Model.UpcomingBikes.WidgetLinkTitle" class="btn view-all-target-btn">View all</a>
                    </div>
                    <div class="clear"></div>
                </div>
                @Html.Partial("~/Views/Upcoming/_UpcomingBikes_Mobile.cshtml", Model.UpcomingBikes)
            </div>
        </section>
           }
    }

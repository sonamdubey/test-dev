@model Bikewale.Models.UsedBikeModelsWidgetVM
@if (Model != null ) { 
<div class="jcarousel-wrapper inner-content-carousel">
    <div class="jcarousel">
        <ul>
            @foreach (var bikeDetails in Model.UsedBikeModelList)
            {
            <li>
                <a href="@Bikewale.Utility.UrlFormatter.UsedBikesUrlNoCity(bikeDetails.MakeMaskingName, bikeDetails.ModelMaskingName, Model.CityDetails != null ? Model.CityDetails.CityMaskingName : "india")" title="@string.Format("Used {0} {1} bikes in {2}",bikeDetails.MakeName,bikeDetails.ModelName,Model.CityDetails !=null?Model.CityDetails.CityName:"India")" class="jcarousel-card">
                    <div class="model-jcarousel-image-preview">
                        <div class="card-image-block">
                            <img class="lazy" src="" data-original="@Bikewale.Utility.Image.GetPathToShowImages(bikeDetails.UsedOriginalImagePath,bikeDetails.UsedHostUrl,Bikewale.Utility.ImageSize._310x174,Bikewale.Utility.QualityFactor._75)" alt="@string.Format(" used {0} {1} bikes in {2}",bikeDetails.MakeName,bikeDetails.ModelName,Model.CityDetails !=null?Model.CityDetails.CityName:"India")">
                        </div>
                    </div>
                    <div class="card-desc-block">
                        <h3 class="bikeTitle text-truncate">@string.Format("Used {0} {1}",bikeDetails.MakeName,bikeDetails.ModelName)</h3>
                        <p class="text-light-grey margin-bottom5">
                            @Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikeDetails.AvailableBikes)) Used bikes available
                        </p>
                        <div class="text-default">
                            @Html.Raw("<span class='font18'>&#x20B9;</span>")&nbsp;
                            <span class="text-bold font18">@Bikewale.Utility.Format.FormatPrice(Convert.ToString(bikeDetails.BikePrice))</span>&nbsp;
                            <span class="text-bold font14">onwards</span>
                        </div>
                    </div>
                </a>
            </li>
            } 
        </ul>
    </div>
    <span class="jcarousel-control-left"><a href="#" class="bwsprite jcarousel-control-prev" rel="nofollow"></a></span>
    <span class="jcarousel-control-right"><a href="#" class="bwsprite jcarousel-control-next" rel="nofollow"></a></span>
</div>
}

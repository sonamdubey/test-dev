@model Bikewale.Models.NewLaunchedIndexVM
@if(Model != null) {
{
    Model.Page_ATF_CSS = "<link rel='stylesheet' type='text/css' href='/sass/new-launch/new-launch.css' inline />";
    Model.Page_JS_Path = "/src/new-launch.js";
    Model.AdTags.Ad_970x90Top = true;
    Model.AdTags.Ad_970x90Bottom = true;
    Model.AdTags.AdId = "1517814992282";
    Model.AdTags.AdPath = "/1017752/Bikewale_NewBikeLaunches_";
    Model.IsPageTypeLanding = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.IsHeaderFix = true;
}

<section>
    <div class="container">
        <div class="grid-12">
			<div class="content-box-shadow">
				<h1 class="content-box-shadow padding-15-20">@Model.Page_H1</h1>
				<div class="padding-15-20 font14 text-light-grey collapsible-content">
					<p class="main-content">India is one of the largest two-wheeler market in the world. The Indian market of two-wheelers has some noteworthy diversity. In order to thrive in this massive competition, manufacturers try to keep up with fast changing trends. Every year there are plenty of bike models that hit the market. BikeWale brings you an exhaustive list of newly launched bikes in India. Explore the list of latest bikes.</p>
				</div>
			</div>
        </div>
        <div class="clear"></div>
    </div>
</section>
<section>
    <div id="newlaunched-bikes" data-city="@Model.CityId" class="container section-bottom-margin">
        <div class="grid-12">
            <h2 class="section-heading">New bike launches in India</h2>
            @Html.Partial("~/Views/NewLaunches/_NewLaunchedBikes.cshtml",Model.NewLaunched)
        </div>
        <div class="clear"></div>
    </div>
</section>

if (Model.HasUpcoming)
{
<section>
    <div class="container section-bottom-margin">
        <h2 class="section-heading">Upcoming bikes in India</h2>
        <div class="grid-12">
            <div class="bg-white content-box-shadow padding-top20">
                @Html.Partial("~/Views/Upcoming/_UpcomingBikes.cshtml", Model.Upcoming)
                <div class="view-all-btn-container padding-top15 padding-bottom20">
                    <a href="/upcoming-bikes/" class="btn view-all-target-btn" title="Upcoming Bikes in India">View all bikes<span class="bwsprite teal-right"></span></a>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</section>
}

if (Model.News != null)
{
    <section>
        <div class="container section-bottom-margin">
            <h2 class="section-heading">More about newly launched bikes</h2>
            <div class="grid-12">
                <div class="content-box-shadow content-inner-block-20 card-bottom-margin font14 ">
                    @Html.Partial("~/Views/News/_RecentNews.cshtml", Model.News)
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>
    }
}
@model BikewaleOpr.Models.ManagePrices.MakesAndStatesVM
<form method="get" data-bind="attr: {action: computedUrl}, submit: checkValidation" id="operationSection">
    <ul class="collapsible margin-top10" data-collapsible="accordion">
        <li>
            <div class="collapsible-header active">
                <strong>
                    Price Operation
                </strong>
            </div>
            <div class="collapsible-body">
                    <div class="container-fluid">
                    <div class=" row ">
                        <div class="col m12 input-field materialize-select">
                            <select class="chosen-select" id="selectOperation" data-bind="value: selectedOperation">
                                <option value="" disabled selected>Select Operation</option>
                                <option value="uploadprices">Upload Price</option>
                                <option value="mappedbikes">Show Mapped Bikes</option>
                                <option value="mappedcities">Show Mapped Cities</option>
                            </select>
                            <span class="red-text text-darken-2" data-bind="visible:shouldShowOperationMsg">*operation is required</span>
                        </div>
                    </div>
                    <div class=" row " data-bind="visible: selectedOperation() == 'mappedbikes' || selectedOperation() == 'uploadprices'">
                        <div class="col m12  materialize-select">
                            <select class="chosen-select " id="selectMake" data-bind="value: selectedMake">
                                <option value="" selected disabled>Select a Make</option>
                                   @if (Model.BikeMakes != null)
                                    {
                                        foreach (var make in Model.BikeMakes)
                                        {
                                            <option value="@make.MakeId"> @make.MakeName </option>
                                        }
                                    }


                            </select>
                        </div>
                        <span class="red-text text-darken-2" data-bind="visible: shouldShowMakeMsg">*Make name is required</span>
                        <input id="maketext" name="makeName" hidden />
                    </div>
                    <div class=" row " data-bind="visible: selectedOperation() == 'mappedcities' ">
                        <div class="col m12  materialize-select">
                            <select class="chosen-select " id="selectState" data-bind="value: selectedState">
                                <option value="" disabled selected>Select a state</option>
                                @if (Model.States != null)
                                {
                                    foreach (var state in Model.States)
                                    {
                                        <option value="@state.StateId"> @state.StateName </option>
                                    }
                                }
                            </select>
                        </div>
                        <span class="red-text text-darken-2" data-bind="visible: shouldShowStateMsg">*State name is required</span>
                        <input id="statetext"  name="stateName" hidden />
                    </div>
                        

                    <div class="input-field row m12 center">
                        <button id="submit" class="btn waves-effect waves-light" type="submit">
                            submit
                        </button>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</form>


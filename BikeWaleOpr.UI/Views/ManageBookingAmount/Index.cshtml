@model BikewaleOpr.Entity.ManageBookingAmountData
@{
    ViewBag.Title = "Manage Booking Amount";
    ViewBag.PageTitle = "Manage Booking Amount";
}
@if(Model != null)
{
    <div class="row">
        <div class="col m10">
            @if(Model.BookingAmountList != null && Model.BookingAmountList.Count() > 0)
            {
                <table id="bookingAmountList" class="bordered highlight z-depth-3 responsive-table">
                    <tr class="center-align">
                        <th>Id</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Version</th>
                        <th>Updated By</th>
                        <th>Updated On</th>
                        <th>Amount</th>
                        <th>Active</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    @foreach (var obj in Model.BookingAmountList)
                    {
                        <tr class="@(obj.BookingAmountBase.IsActive? "teal lighten-4" : "red lighten-4")" data-id="@obj.BookingAmountBase.Id">
                            <td>@obj.BookingAmountBase.Id</td>
                            <td>@obj.BikeMake.MakeName</td>
                            <td>@obj.BikeModel.ModelName</td>
                            <td>@obj.BikeVersion.VersionName</td>
                            <td>@obj.LastUpdatedBy</td>
                            <td>@obj.UpdatedOn.ToString("dd/MM/yyyy")</td>
                            <td>@obj.BookingAmountBase.Amount</td>
                            <td>@obj.BookingAmountBase.IsActive.ToString()</td>
                            <td><a href="javascript:void(0)" rel="nofollow"><i class="material-icons icon-blue">mode_edit</i></a></td>
                            <td><a href="javascript:void(0)" rel="nofollow"><i class="material-icons icon-red">delete</i></a></td>
                        </tr>
                    }
                </table>
            }
        </div>
        @using (Html.BeginForm("Add", "ManageBookingAmount", FormMethod.Post))
        {
            <div class="col m2">
                <ul class="collapsible" data-collapsible="accordian">
                    <li>
                        <div class="collapsible-header">
                            <strong>
                                Add New Booking Amount
                            </strong>
                        </div>
                        <div class="collapsible-body">
                            <div class="container">
                                <div class="row">
                                    <div class="input-field col m12">
                                        <select id = "makeName" name="MakeName" data-bind="value: selectedMakeId, event: {change: getModels}">
                                            <option value="" disabled selected>Select Make</option>
                                            @if (Model.BikeMakeList != null && Model.BikeMakeList.Count() > 0)
                                            {
                                                foreach(var state in Model.BikeMakeList)
                                                {
                                                    <option value="@state.MakeId">@state.MakeName</option>
                                                }
                                            }
                                        </select>
                                        <label for="makeName" data-error data-bind="attr:{'data-error': makeMsg}">Make</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col m12">
                                        <select id="modelName" name="ModelName" data-bind="options: models, optionsText: 'modelName', optionsValue: 'modelId', value: selectedModelId, optionsCaption: 'Select Model', event: {change: getVersions}">
                                            <option value="" disabled selected>Select Model</option>
                                        </select>
                                        <label for="modelName" data-error data-bind="attr:{'data-error': modelMsg}">Model</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col m12">
                                        <select id="versionName" name="versionName" data-bind="options: versions, optionsText: 'versionName', optionsValue: 'versionId', value: selectedVersionId, optionsCaption: 'Select Version'">
                                            <option value="" disabled selected>Select Version</option>
                                        </select>
                                        <label for="versionName" data-error data-bind="attr:{'data-error': modelMsg}">Version</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col m12">
                                        <input id="bookingAmount" name="BookingAmount" type="number" class="validate" data-bind="value: bookingAmount"/>
                                        <label for="BookingAmount" data-error data-bind="attr:{'data-error': bookingMsg}">Enter Booking Amount</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col m12">
                                        <button id="btnSave" class="btn waves-effect waves-light" type="submit" name="save" data-bind="event : { click : function() { return validateBookingSubmit();}}">
                                            Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        }
    </div>
    <script defer src="~/src/manageBookingAmount.js" type="text/javascript"></script>
}



@{
    ViewBag.Title = "Configure Campaign";
    ViewBag.PageTitle = "Configure Campaign for Dealer";
}

@Html.Partial("~/Views/ManufacturerCampaign/_NavigationBreadcrumbs.cshtml", 1)

<div class="col">
    <div class="row">
        <div class="col s5 offset-s3">
            <span class="flow-text">Dealer name</span>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6 offset-s3">
            <input id="txtCampaignDescription" type="text" class="validate" maxlength="100">
            <label for="txtCampaignDescription">Campaign Description</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s2 offset-s3">
            <input id="txtMaskingNumber" type="text" class="validate" disabled>
            <label for="txtMaskingNumber">Masking Number</label>
        </div>


        <div class="input-field col s2">
            <select>
                <option value="" disabled selected>Select Masking Number</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
            </select>
        </div>

        <div class="input-field col s2">
            <a href='#'>Release Masking Number</a>
        </div>
    </div>


    <div class="row">
        <div class="input-field col s2 offset-s3">
            <input id="txtDailyLeadLimit" type="number" class="validate">
            <label for="txtDailyLeadLimit">Daily Lead Limit</label>
        </div>

        <div class="input-field col s2">
            <input id="txtTotalLeadLimit" type="number" class="validate">
            <label for="txtTotalLeadLimit">Total Lead Limit</label>
        </div>
    </div>

    <div class="row">
        <div class="col s3 offset-s3">
            <select multiple>
                <option value="" disabled selected>Campaign Pages</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col s2 offset-s3">
            <div class="input-field">
                <i class="material-icons prefix margin-top15">date_range</i>
                <input type="date" id="startDateEle" class="datepicker margin-left5" value="" />
                <label for="startDateEle">Campaign Start Date</label>
            </div>
        </div>

        <div class="col s1">
            <div class="input-field">
                <input type="time" id="startTimeEle" value="00:00:00" />
            </div>
        </div>

        <div class="col s2">
            <div class="input-field">
                <i class="material-icons prefix margin-top15">date_range</i>
                <input type="date" id="endDateEle" class="datepicker margin-left5" value="" />
                <label for="endDateEle">Campaign End Date</label>
            </div>
        </div>

        <div class="col s1">
            <div class="input-field">
                <input type="time" id="endTimeEle" value="00:00:00" />
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col offset-s3">
            <input type="checkbox" class="filled-in" id="chkShowCampaign" />
            <label for="chkShowCampaign">Show Campaign On Exshoroom Price</label>
        </div>
    </div>

    <div class="row">
        <div class="col offset-s3">
            <button id="btnConfigureCampaign" class="btn waves-effect waves-light" type="submit" name="action">
                Configure Campaign
            </button>
        </div>
    </div>
    <div class="clear"></div>
</div>

<script src="/src/ManufactureCampaign/ConfigureCampign.js"></script>

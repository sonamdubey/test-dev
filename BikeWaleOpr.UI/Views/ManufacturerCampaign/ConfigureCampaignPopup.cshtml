@{
    ViewBag.Title = "Configure Campaign Popup";
    ViewBag.PageTitle = "Configure Campaign Popup for Dealer";
}

@Html.Partial("~/Views/ManufacturerCampaign/_NavigationBreadcrumbs.cshtml", 3)

<div class="row">
    <div class="input-field col s3 offset-s4">
        <input id="txtPopupHeading" type="text" class="validate" maxlength="100">
        <label for="txtPopupHeading">Popup Heading</label>
    </div>
</div>

<div class="row">
    <div class="input-field col s3 offset-s4">
        <input id="txtPopupDescription" type="text" class="validate" maxlength="100">
        <label for="txtPopupDescription">Popup Description</label>
    </div>
</div>

<div class="row">
    <div class="input-field col s3 offset-s4">
        <input id="txtpopupMessage" type="text" class="validate" maxlength="100">
        <label for="txtpopupMessage">Popup Success Message</label>
    </div>
</div>

<div class="row">
    <div class="col offset-s4">
        <input type="checkbox" class="filled-in" id="chkEmail" checked="checked" />
        <label for="chkEmail">Email Required</label>
    </div>
</div>

<div class="row">
    <div class="col s2 offset-s4">
        <input type="checkbox" class="filled-in" id="chkPincode" checked="checked" />
        <label for="chkPincode">Pincode Required</label>       
    </div>
    <div class="col">
        <a href="">Map Manufacturer Pincodes</a>
    </div>
</div>

<div class="row">
    <div class="col s2 offset-s4">
        <input type="checkbox" class="filled-in" id="chkDealer" checked="checked" />
        <label for="chkDealer">Dealer Required</label>               
    </div>
    <div class="col">
        <a href="">Map Manufacturer Dealers</a>
    </div>
</div>

<div class="row">
    <div class="col offset-s4">
        <button id="btnConfigurePopup" class="btn waves-effect waves-light" type="submit" name="action">
            Configure popup
        </button>
    </div>
</div>
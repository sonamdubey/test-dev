  <appSettings>
    <!--server=192.168.1.72,21443;uid=caradmin;pwd=ani#4512$opq;database=bikewale;Min Pool Size=5;Max Pool Size=200;-->
    <add key="connectionstring" value="server=cwdb;uid=bwuser1;pwd=bwu$er#!;database=bikewale"/>
    <!--<add key="connectionString" value="server=192.168.1.72,21443;uid=caradmin;pwd=ani#4512$opq;database=StagingBike"/>-->
    <!--<add key="connectionString" value="server=192.168.1.72,21443;uid=caradmin;pwd=ani#4512$opq;database=bikewale"/>-->
    <add key="MMindexName" value="newbwsrckeywords"/>
    <add key="PQindexName" value="newbwsrckeywordspq"/>
    <add key="cityIndexName" value="newbwsrckeywordscity"/>
    <add key="esHost" value="172.16.0.11:9200;172.16.0.10:9200"/>
    <!--<add key="esHost" value="192.168.1.200:9202"/>--> <!--Live-->
    <add key="typeName" value="mm"/>
  </appSettings>

  <log4net>
    <!--This appender is for adding the default providers -->
    <appender name="ProviderFile" type="log4net.Appender.RollingFileAppender">
      <file value="logs/LogInfo.txt"/>
      <appendToFile value="true"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="1MB"/>
      <staticLogFileName value="true"/>
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="INFO"/>
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{MM/dd/yyyy hh:mm:ss}|%message%newline"/>
      </layout>
    </appender>

    <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
      <file value="logs/Error.log"/>
      <appendToFile value="true"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="1MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline%exception%newline"/>
      </layout>
    </appender>

    <root>
      <level value="INFO"/>
      <appender-ref ref="ProviderFile"/>
    </root>

    <logger additivity="false" name="ErrorLog">
      <level value="ERROR"/>
      <appender-ref ref="ErrorLog"/>
    </logger>
  </log4net>
  
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>
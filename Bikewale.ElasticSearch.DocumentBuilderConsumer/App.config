<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <connectionStrings>
    <add name="RabbitMQServerList" connectionString="172.16.0.20"/>
    <add name="SMTPHost" connectionString="172.16.10.250"/>
    <add name="EmailFrom" connectionString="no-reply@carwale.com"/>
    <add name="EmailTo" connectionString="bikewalebugs2016@gmail.com"/>
    <add name="EmailCC" connectionString="prasad.gawde@carwale.com"/>
    <add name="IsSMTPEnabled" connectionString="true"/>
    <add name="ReadOnlyConnectionString" connectionString="SERVER=172.16.0.26;UID=cwadmin;PASSWORD=cwadmin;DATABASE=bikewaledev;Allow User Variables=true;Min Pool Size=10;Max Pool Size=300"/>
  </connectionStrings>

  <appSettings>
    <add key="ReadOnlyConnectionString" value="SERVER=172.16.0.26;UID=cwadmin;PASSWORD=cwadmin;DATABASE=bikewaledev;Allow User Variables=true;Min Pool Size=10;Max Pool Size=300"/>
    <add key="ConsumerName" value="Bikewale.RabbitMq.BWEsBuilderQueue-Local"/>
    <add key="QueueName" value="BWEsBuilderQueue"/>
    <add key="RabbitMsgTTL" value="60000"/>
    <add key="RetryCount" value="3"/>
    <add key="BWEsIndexUpdaterQueue" value="BWEsDocumentQueue"/>
    
    <!-- ES Index Names Start Here-->
    <add key="BikeIndex" value="bikeindex"/>
    <add key="BikePriceIndex" value="bikewalepricingindex"/>
    
  </appSettings>

  <log4net>
    <!--This appender is for adding the default providers -->
    <appender name="ProviderFile" type="log4net.Appender.RollingFileAppender">
      <file value="logs/LogInfo.txt"/>
      <appendToFile value="true"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="1MB"/>
      <staticLogFileName value="true"/>
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="INFO"/>
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{MM/dd/yyyy hh:mm:ss} - %message%newline"/>
      </layout>
    </appender>

    <appender name="GelfUdpAppender" type="Gelf4net.Appender.GelfUdpAppender, Gelf4net">
      <remoteAddress value="172.16.1.39"/>
      <remotePort value="22002"/>
      <layout type="Gelf4net.Layout.GelfLayout, Gelf4net">
        <!--exception:%exception,stacktraceLevel1: %stacktrace{2},stacktraceLevel1: %stacktrace{2},stacktraceLevel3: %stacktrace{3},-->
        <param name="AdditionalFields" value="app:%app,date:%date{ISO8601},Environment:MYSQLCONSUMER,Level:%level"/>
        <param name="Facility" value="Consumer"/>
        <param name="IncludeLocationInformation" value="true"/>
        <!-- Sets the full_message and short_message to the specified pattern-->
        <param name="ConversionPattern" value="%-5level [%thread] %logger{1} %M - %m"/>
      </layout>
    </appender>

    <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
      <file value="logs/Error.log"/>
      <appendToFile value="true"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="1MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline%exception%newline"/>
      </layout>
    </appender>

    <root>
      <level value="INFO"/>
      <appender-ref ref="ProviderFile"/>
    </root>

    <logger additivity="false" name="ErrorLog">
      <level value="ERROR"/>
      <appender-ref ref="ErrorLog"/>
    </logger>
  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2"/>
  </startup>
</configuration>
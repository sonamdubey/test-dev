    ViewData["PageTag"] = "mA-4";
    ViewData["Title"] = "CarWale Advantage";
    ViewData["landingPage"] = true;
    ViewData["Description"] = "CarWale is India's most authoritative source of new car pricing. Focused around car buyers, CarWale promises to help you buy the right car at the right price.";
    ViewData["Keywords"] = "";
    ViewData["BodyClass"] = "bg-white header-fixed-inner";
    ViewData["Canonical"] = "";
    ViewData["Alternate"] = "";
    ViewData["BodyClass"] = "bg-grey";
    ViewData["CustomCss"] = "~/Views/StaticPartials/m/Deals/MDealsCss.cshtml";
    ViewData["CustomJs"] = "~/Views/StaticPartials/m/Deals/MDealsScript.cshtml";
    Layout = "~/views/shared/m/_MLayout.cshtml";

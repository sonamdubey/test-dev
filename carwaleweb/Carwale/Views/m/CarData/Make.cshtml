@model Carwale.DTOs.NewCars.MakePageDTO_Mobile
@using Carwale.Entity.Enum;
@using Carwale.UI.Common;
@using System.Linq;
@using Carwale.BL.Experiments;
@{
    if (Model.MakeDetails != null)
    {
        ViewBag.DefineAdSlots =
            @"<script type='text/javascript'>
    var AdSlots={};
        googletag.cmd.push(function () {
        googletag.pubads().disableInitialLoad();
        googletag.pubads().setCentering(true);
        AdSlots['div-gpt-ad-1419227721763-0']=googletag.defineSlot('/1017752/" + ViewBag.adPath + @"CarWale_Mobile_ROS_320x50', [[320, 50], [320, 100], [320, 150]], 'div-gpt-ad-1419227721763-0').addService(googletag.pubads()).setCollapseEmptyDiv(true);
        //Ad for quatation page bottom Ad
        AdSlots['div-gpt-ad-1435297201507-0']=googletag.defineSlot('/1017752/" + ViewBag.adPath + @"CarWale_Mobile_ROS_300x250', [300, 250], 'div-gpt-ad-1435297201507-0').addService(googletag.pubads());
        googletag.pubads().setTargeting('Make', '" + Model.MakeDetails.MakeName + @"');
        googletag.pubads().setTargeting('Section', '');
        googletag.pubads().setTargeting('City', '" + MobileWeb.Common.CookiesCustomers.MasterCity + @"');
        googletag.pubads().collapseEmptyDivs(true);
        googletag.pubads().enableSingleRequest();
        googletag.enableServices();
    });
</script>";
    }
    Layout = "~/views/shared/m/_MLayoutV3.cshtml";
    string label = "makeid=" + Model.MakeDetails.MakeId + "|source=43";
}
@section Plugins{
    <script type="text/javascript" src="/static/m/js/plugins/swiper.js" defer></script>
    <script type="text/javascript" src="/static/m/js/plugins/beauty-tooltips.js" defer></script>
    <script type="text/javascript" src="/static/m/js/plugins/flip.js" defer></script>
}
@section atfcss{
    <link rel="stylesheet" href="/static/sass/partials/make.css" type="text/css" inline>
    <link href="/static/sass/partials/review-contest-slug.css" rel="stylesheet" inline>
}
@section btfcss{
    <link rel="stylesheet" href="/static/sass/m/css/globalcitypopup.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/m/css/globalcarsearch.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/m/css/advantagecitypopup.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/m/css/nav.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/m/css/selectcitypq.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/m/css/footer.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/m/css/swiper.css" type="text/css">
    <link rel="stylesheet" href="/static/sass/partials/model-image-carousel.css" type="text/css">
    <link href="/static/sass/partials/model-videos-carousel.css" rel="stylesheet">
}
@section MetaData{
    @{Html.RenderAction("MetaData", "ModelComponent", Model.MetaData);}
}
@if (Model.MakeDetails != null)
{
    @section Scripts{
        <script>
            var makeId = @Model.MakeDetails.MakeId;
        </script>
        <script type="text/javascript" src="/static/m/js/new-car-make.js" defer></script>
        <script type="text/javascript" src="/static/m/js/upcoming-form.js" defer></script>
        @if (Model.MakeDetails.MakeId.Equals(16))
        {
            <script type="text/javascript" src="/static/src/jquery.obj.min.js" defer></script>
        }
        <script type="text/javascript">var product = {category: ['new', '@UrlRewrite.FormatSpecial(Model.MakeDetails.MakeName)-cars']};</script>
    }
}
<div class="clear"></div>
<div data-cwticat="ReviewLandingLinkage" data-cwtiact="MakePageSlugImpression" data-cwtilbl="@label" data-cwtccat="ReviewLandingLinkage" data-cwtcact="MakePageSlugClick" data-cwtclbl="@label" cwt>@Html.Partial("~/Views/Shared/m/UserReviews/_UserReviewSlug.cshtml")</div>

<div id="divAdBar">
    <div id='div-gpt-ad-1419227721763-0' style='width:320px; margin:20px auto 10px auto;' data-load-immediate="true">
        <script type='text/javascript'>
            googletag.cmd.push(function () { googletag.display('div-gpt-ad-1419227721763-0'); });
        </script>
    </div>
</div>
<div class="clear"></div>

<section class="container">
    <div id="main-container">
        @if (Model.MakeDetails != null)
        {
        <div>
            <div class="make-car-container m-special-skin-text m-no-bg-color">
                <h1 class="make-heading  m-no-bg-color">@Model.MakeDetails.MakeName Cars</h1>
            </div>
            @if (Model.NewCarModels.Count > 0)
            {
                @Html.Partial("m/CarData/_ModelList", Model)
                <div id="toastBox" class="toast-box hide"></div>
            }
            @{Html.RenderAction("Description", "ModelComponent", new { makeId = Model.MakeDetails.MakeId, makeName = Model.MakeDetails.MakeName });}

            <div class="pgsubhead margin-left10 margin-right10 margin-bottom10 margin-top20">
                <h2 class="special-skin-text m-special-skin-text text-bold">Other popular Brands</h2>
            </div>
            <div class="box content-inner-block-10 rounded-corner2 make-popular-brands">
                @{Html.RenderAction("AllMakesWidget", "CarWidgets", new { excludeMakeId = Model.MakeDetails.MakeId, isMobile = true });}
            </div>
            <div class="box content-inner-block-10 car-carousel">
                @{Html.RenderAction("TopLatestNewsForMake", "ModelComponent", new { makeId = Model.MakeDetails.MakeId, makeName = Model.MakeDetails.MakeName });}
            </div>

            @if (Model.Images != null && Model.Images.ModelPhotos != null && Model.Images.ModelPhotos.Count > 0)
            {
                <div class="box content-inner-block-10 car-carousel">
                    @{Html.RenderPartial("~/Views/Shared/m/CarData/_ModelImages.cshtml", Model.Images);}
                </div>
            }
            @if (Model.MakeVideos != null && Model.MakeVideos.Count > 0)
            {
                <div class="box content-inner-block-10 car-carousel">
                    @Html.Partial("m/CarData/_Videos", Tuple.Create(Model.MakeVideos, ContentPages.MakePage))
                </div>
            }
        </div>
        }        
    </div>
    <div class="clear"></div>    
    <div class="banner-div">
        <div id="divBottomAdBar" class="ad-div">
            <div id='div-gpt-ad-1435297201507-0' style='height:250px; width:300px;' class="text-center margin-bottom20">
                <script type='text/javascript'>googletag.cmd.push(function () { googletag.display('div-gpt-ad-1435297201507-0'); });</script>
            </div>
        </div>
    </div>

    <div class="margin-left10" id="br-cr">
        <ul class="breadcrumb m-special-skin-text">
            <li>
                <a href="/m/" class="normal">Home</a>  &rsaquo;
            </li>
            <li>
                <span class="lightgray"> @Model.MakeDetails.MakeName Cars</span>
            </li>
        </ul>
    </div>
</section>

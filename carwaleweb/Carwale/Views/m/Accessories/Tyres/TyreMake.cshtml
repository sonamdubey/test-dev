@model Carwale.DTOs.Accessories.Tyres.VersionTyresDTO
@{
    if (Model != null && Model.Tyres.Count > 0)
    {
        ViewBag.Title = string.Format("{0} Tyre Price in India", Model.Tyres[0].BrandName);
        ViewBag.Description = string.Format("{0} Tyres Price in India. Checkout {0} Tyre Size at CarWale.", Model.Tyres[0].BrandName);
    }
    ViewBag.landingPage = true;
    ViewBag.Responsive = true;
    ViewBag.CustomCss = "~/Views/StaticPartials/m/TyreSection/MTyreListSectionCss.cshtml";
    Layout = "~/views/shared/m/_MLayoutV2.cshtml";
}
@section Styles{
    <noscript class="deferred-styles"><link rel="stylesheet" href="/static/m/css/tyre-section.css" type="text/css"></noscript>
}
@if (Model != null && Model.Tyres.Count > 0)
{
    <section class="container padding-top5">
        <div class="grid-12 bg-white alpha omega">
            <div class="margin-top5 margin-bottom10 padding-left10 padding-right10">
                <a href="/m/">Home</a> &rsaquo;
                <a href='/m/tyres/'>Tyres</a> &rsaquo;
                <span class="lightgray">@(Model.Tyres[0].BrandName)</span>
            </div>
            <div id="carData">
                <div class="tyre-model-view padding-left10 padding-right10">
                    <div class="car-desc">
                        <h1 class="car-name text-uppercase">@Model.Tyres[0].BrandName TYRES</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </section>
    if (Model.Tyres[0].BrandId == 7)
    {
    <section class="dealer-container">
        <div class="grid-12">
            <div class="dealer-slug-view content-box-shadow padding-top10 padding-bottom10 margin-bottom10">
                <div class="dealer-slug">
                    <div>
                        <span class="dealer-slug__icon"></span>
                        <p class="dealer-slug__title padding-top15">Find a tyre dealer near your location</p><br><br>
                        <a href="/new/michelin-dealers/india/" class="text-capitalize dealer-slug__btn" rel="nofollow">view dealers</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </section>
    }
    <div class="modal-background"></div>
    <section class="container">
        <div class="grid-12 alpha omega bg-white" id="tyresList">
            <div class="m-loading-popup">
                <span class="m-defaultAlert-window"></span>
                <span class="m-loading-icon"></span>
                <div class="clear"></div>
            </div>
            <ul class="tyre-list border-solid-top">
                @{Html.RenderPartial("~/Views/Shared/m/Accessories/Tyres/_TyresList.cshtml", Model); }
            </ul>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </section>
}
else
{
    <div class="not-found-section text-center" id="noDataFound">
        <h1 class="text-black font18 margin-bottom10 m-special-skin-text">Oops!</h1>
        <p class="font14 text-bold m-special-skin-text">Sorry we couldn't find any tyre.</p>
        <img src="https://imgd.aeplcdn.com/0x0/cw/es/tyres/bg.jpg" alt="No Tyres Found" title="No Tyres Found">
    </div>
}
@section Scripts{
    <script type="text/javascript"> var brandId = '@(Model != null && Model.Tyres.Count > 0 ? Model.Tyres[0].BrandId : 0)'</script>
    <script type="text/javascript" src="/static/m/js/tyreBrand.js" defer></script>
}
@model Carwale.DTOs.CMS.ContentDetailPagesDTO_V2
@using Carwale.Utility

 @if (Model.ArticlePages.NextArticle != null && !string.IsNullOrWhiteSpace(Model.ArticlePages.NextArticle.ArticleUrl))
 {
    <link rel="next" href="@("https://www.carwale.com"+Model.ArticlePages.NextArticle.ArticleUrl)" />
 }
 @if (Model.ArticlePages.PrevArticle!=null && !string.IsNullOrWhiteSpace(Model.ArticlePages.PrevArticle.ArticleUrl))
 {
    <link rel="prev" href="@("https://www.carwale.com"+Model.ArticlePages.PrevArticle.ArticleUrl)" />
 } 
@if (Model.ArticlePages.DisplayDate >= AmpCommonOprations.AmpStartDate)
{
    <link rel="amphtml" href="@("https://www.carwale.com/m"+@Model.ArticlePages.ArticleUrl+"amp/")" />
}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@Html.Raw("@CarWale")">
<meta name="twitter:title" content="@Model.ArticlePages.Title">
<meta name="twitter:description" content="@ViewBag.Description">
<meta name="twitter:creator" content="@Html.Raw("@CarWale")">
<meta name="twitter:image" content="@Carwale.Utility.ImageSizes.CreateImageUrl(Model.ArticlePages.HostUrl,Carwale.Utility.ImageSizes._642X361,Model.ArticlePages.OriginalImgUrl)">
<meta property="og:title" content="@Model.ArticlePages.Title" />
<meta property="og:type" content="website" />
<meta property="og:url" content="@("https://www.carwale.com" + Model.ArticlePages.ArticleUrl)" />
<meta property="og:image" content="@Carwale.Utility.ImageSizes.CreateImageUrl(Model.ArticlePages.HostUrl,Carwale.Utility.ImageSizes._642X361,Model.ArticlePages.OriginalImgUrl)" />
<meta property="og:description" content="@ViewBag.Description" />
<meta property="og:site_name" content="CarWale" />
<meta property="article:published_time" content="@Model.ArticlePages.DisplayDate.ToString("s")" />
<meta property="article:section" content="Car News" />
<meta property="article:tag" content="@(ViewBag.Tags)" />
<meta property="fb:admins" content="154881297559" />
<meta property="fb:pages" content="154881297559" />

@model Carwale.Entity.ViewModels.LocateDealerModel
@using Carwale.UI.Common;
@using Carwale.Utility;
@{
    ViewBag.Title = "Find New Car Showrooms in India";
    ViewBag.Description = "Locate New car dealers and authorized car showrooms in India. Find new car dealer information for more than 200 cities. Authorized company showroom information includes full address, phone numbers, email address, pin code etc.";
    ViewBag.Keywords = "new car dealers, new car showrooms, car dealers, car showrooms, showrooms, dealerships, test drive, price quote";
    ViewBag.CustomJS = "~/Views/StaticPartials/LocateDealerScripts.cshtml";
    ViewBag.HeaderClass = "header-landing";
    ViewBag.CustomCss = "~/Views/StaticPartials/LocateDealerCss.cshtml";
    ViewBag.Canonical = "https://www.carwale.com/new/locatenewcardealers.aspx";
    ViewBag.Alternate = "https://www.carwale.com/m/research/locatedealerpopup.aspx";
    ViewBag.PageId = 80;
    ViewBag.landingPage = true;
}

<header class="locate-dealer-banner">
    <div class="container">
        <div class="welcome-box">
            <h1 class="text-uppercase margin-bottom10">Find New Car Dealers</h1>
            <p class="font20">Find new car dealers and authorized showrooms in India.</p>
        </div>
    </div>
</header>
<section class="container">
    <div class="grid-12">
        <div class="ld-landing-container content-inner-block-10 margin-minus50 content-box-shadow">
            <div class="ldlanding-form-container text-center">
                <div class="form-control-box margin-top40 margin-bottom30 plain-select-box">
                    <select data-placeholder="Type to select car manufacturer eg: Audi " class="chosen-select form-control" multiple id="drpDealerMakes" data-bind='options: pqDealerMakes, optionsText: "makeName", optionsValue: "makeId" '></select>
                    <span class="cwsprite error-icon hide city-error-icon errCar"></span>
                    <div class="cw-blackbg-tooltip city-err-msg errCar hide">Please select a make</div>
                </div>

                <div class="form-control-box margin-top20 margin-bottom30 plain-select-box">
                    <select id="drpDealerCity" data-placeholder="Select City" disabled class="chosen-select form-control" multiple></select>

                </div>
                <a onclick="redirectToLocateDealer()">
                    <button class="btn btn-orange text-uppercase margin-bottom40 behavior">Find Dealers</button>
                </a>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</section>
<section class="container">
    <div class="grid-12">
        <h2 class="text-uppercase text-center margin-top50 margin-bottom30 special-skin-text">Browse dealers by manufacturer</h2>

        <div class="content-inner-block-10 content-box-shadow margin-bottom50">
            <div class="dealer-list-container">
                <ul class="dealers-list margin-top50 margin-bottom40 one">
                    @for (int i = 0; i < Math.Ceiling(Model.MakeDealers.Count / 3.0); i++)
                    {
                        <li><a href="@(ManageCarUrl.CreateMakeDealerUrl(Model.MakeDealers[i].MakeName))" title="@string.Format("{0} Showrooms in India",Model.MakeDealers[i].MakeName)">@Model.MakeDealers[i].MakeName</a></li>
                    }
                </ul>

                <ul class="dealers-list margin-top50 margin-bottom40 two">
                    @for (int i = Convert.ToInt16(Math.Ceiling(Model.MakeDealers.Count / 3.0)); i < Math.Ceiling(Model.MakeDealers.Count * 2 / 3.0); i++)
                    {
                        <li><a href="@(ManageCarUrl.CreateMakeDealerUrl(Model.MakeDealers[i].MakeName))" title="@string.Format("{0} Showrooms in India",Model.MakeDealers[i].MakeName)">@Model.MakeDealers[i].MakeName</a></li>
                    }
                </ul>

                <ul class="dealers-list margin-top50 margin-bottom40 last-dealer-list three">
                    @for (int i = Convert.ToInt16(Math.Ceiling(Model.MakeDealers.Count * 2 / 3.0)); i < Model.MakeDealers.Count; i++)
                    {
                        <li><a href="@(ManageCarUrl.CreateMakeDealerUrl(Model.MakeDealers[i].MakeName))" title="@string.Format("{0} Showrooms in India",Model.MakeDealers[i].MakeName)">@Model.MakeDealers[i].MakeName</a></li>
                    }
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</section>
<script type="text/javascript">
    var PageId=@ViewBag.PageId;
    var landingPage = true;
</script>
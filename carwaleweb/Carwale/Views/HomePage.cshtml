@{Html.RenderAction("TopCarsByBodyTypeCarousel", "CarWidgets");}

<div class="container overflow-x-auto">
    <div class="grid-12">
        <!-- /1017752/Homepage_SecondSlot_976x400 -->
        <div id='div-gpt-ad-1439110989763-1' class="margin-top20 margin-bottom20 text-center">
            <script type='text/javascript'>
                googletag.cmd.push(function () { googletag.display('div-gpt-ad-1439110989763-1'); });
            </script>
        </div>
    </div>
    <div class="clear"></div>
</div>
<!-- default PQ code start here  -->
@if (Model.SponsoredPQBanner == null)

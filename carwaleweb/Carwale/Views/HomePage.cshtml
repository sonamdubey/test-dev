                <div style="display:table-cell; vertical-align:middle; width:auto;">
                    <!-- /1017752/Homepage_300x250 -->
                    <div id='div-gpt-ad-1439110989763-3' class="text-center">
                        <script type='text/javascript'>
                            googletag.cmd.push(function () { googletag.display('div-gpt-ad-1439110989763-3'); });

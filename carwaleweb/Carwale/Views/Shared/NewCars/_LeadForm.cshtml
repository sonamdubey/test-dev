@model Carwale.Entity.Dealers.SponsoredDealer

<script>
    sponsorDlrBusType = "@Model.DealerLeadBusinessType";
    sponsorDlrName = "@Model.DealerName";
    campaignId = "@Model.DealerId";
    sponsorDlrLeadPanel = "@Model.LeadPanel";
    showEmail ="@Model.ShowEmail".toLowerCase() === 'true';
    sponsoredDealerId = "@Model.ActualDealerId";
</script>

<style>.renault-lead-form-container{padding:20px 20px 0;background:#F2FDF7!important;border:1px solid #E2E2E2}.renault-form-header{padding-bottom:21px;font-size:16px;color:rgba(26,26,26,.87);letter-spacing:0}.renault-form-header h2{display:inline-block;margin-right:30px;font-size:18px;font-weight:600;color:#565a5c}.custMobile input[type=text],.renault-form{color:#82888b}.renault-phone-icon{width:13px;height:13px;display:inline-block;margin-right:5px}.renault-form-para{padding-bottom:15px}.renault-form-para p{padding-bottom:11px}.renault-form-para li{display:inline-block;padding-left:18px;position:relative;color:#82888b;font-size:12px}.renault-form-para li:before{content:'•';position:absolute;left:5px;font-size:20px;top:-5px}.renault-form{width:278px;padding:5px 0;display:inline-block;position:relative;line-height:1.42857143;font-size:14px;background-color:transparent;border-bottom:1px solid #979797}.renault-form-mobile-field{width:150px;margin-left:17px}#renaultBtnSubmit{width:150px;height:40px;display:inline-block;margin-bottom:10px;color:#f85649;border:1px solid #f85649;border-radius:2px;text-transform:uppercase;font-weight:600;font-size:16px;cursor:pointer;background:#F2FDF7}.renault-lead-msg{text-align:center;margin:0 auto 20px}.text-color-grey{color:rgba(38,0,0,.46)}</style>
<section id="leadform" class="margin-top20">
    <div class="clear"></div>
    <div class="renault-lead-form-container grid-12 content-box-shadow">
        <div id="renaultCustInfo">
            <div class="renault-form-header">
                <h2>Contact @Model.DealerName</h2>
                <span><span class="fa fa-phone"></span> 18002090230</span>
            </div>
            <div class="renault-form-para">
                <p>Connect with @Model.DealerName for more information about the car</p>
                @*<ul>
                    <li>Doorstep Demo</li>
                    <li>Lowest EMI</li>
                    <li>Offers and Discounts</li>
                    <li>Exchange Benefits</li>
                </ul>*@
                <div class="clear"></div>
            </div>
            <div>
                <div class="margin-bottom20 position-rel">
                    <div class="custName inline-block-noalign position-rel">
                        <input class="renault-form" type="text" id="custName" name="" placeholder="Name" maxlength="100">
                        <span class="cwmsprite error-icon hide"></span>
                        <div class="cw-blackbg-tooltip hide"></div>
                    </div>
                    <div class="inline-block-noalign custMobile position-rel">
                        <input class="renault-form renault-form-mobile-field" type="text" id="custMobile" name="" placeholder="Mobile No." style="color: #82888b ;" maxlength="10">
                        <span class=" cwmsprite error-icon hide"></span>
                        <div class="cw-blackbg-tooltip hide"></div>
                    </div>
                    <div class="margin-top20 form-control-box hide">
                        <input type="text" placeholder="Type to select city" id="personCity" class="renault-form ui-autocomplete-input blur" autocomplete="off">
                        <span class="cwsprite error-icon hide"></span>
                        <div class="cw-blackbg-tooltip hide">No city match</div>
                    </div>
                </div>
            </div>
            <div>
                <input type="button" id="renaultBtnSubmit" leadclicksource="333" value="Submit"/>
                <div class="font11 padding-bottom20 text-left">
                    <span>By proceeding ahead you agree to CarWale <a href="/visitoragreement.aspx">visitor agreement</a> and <a href="/privacypolicy.aspx">privacy policy</a>.</span>
                </div>
            </div>
            <input type="hidden" id="hdnDealerId">
            <input type="hidden" id="hdnDealerName">
        </div>
        <div class="renault-lead-msg hide">
            <h3>Thank you</h3>
            <p>A car consultant would get in touch with you shortly with assistance on your purchase.</p>
        </div>
    </div>
    <div class="clear"></div>
</section>
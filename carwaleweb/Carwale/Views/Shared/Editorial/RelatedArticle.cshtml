@model Carwale.DTOs.CMS.Articles.ArticlePageDetails
<h1 class="font30 text-black margin-top15 special-skin-text">@(Model.Title)</h1>
<div class="border-solid-bottom margin-top10 margin-bottom15"></div>
<div class="content-box-shadow content-inner-block-10 content-details margin-top15" id="@Model.BasicId" categoryid="6" categoryname="feature">

    <div class="leftfloat">
        @Model.DisplayDate.ToString("MMMM dd, yyyy, hh:mm tt") IST by 
        @if (!string.IsNullOrEmpty(Model.AuthorMaskingName))
        { <a href="/authors/@Model.AuthorMaskingName">@Model.AuthorName</a>}
        else
        { @Model.AuthorName}

    </div>
    <div class="rightfloat"><span class="cw-sprite view-icon margin-right5 news-sprite v-views-icon"></span>@(Model.Views != 0 ? Model.Views : 0) Views</div>
    <div class="clear"></div>
    <ul class="social" style="margin-top:10px">
        <li style="float:left; width:90px; height:20px;"><iframe src="https://www.facebook.com/plugins/like.php?layout=button_count&show_faces=false&action=like&font&colorscheme=light&width=100&height=25&href=https://www.carwale.com@(Model.ArticleUrl);" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:25px;" allowtransparency="true"></iframe></li>
        <li style="float:left; width:90px; height:20px;"><iframe allowtransparency="true" frameborder="0" scrolling="no" src="https://platform.twitter.com/widgets/tweet_button.html?text=@(Model.Title)&via=CarWale&url=https://www.carwale.com@(Model.ArticleUrl)&counturl=https://www.carwale.com@(Model.ArticleUrl)" style=" width:110px; height:40px;"></iframe></li>
        <li style="float:left; width:90px; height:20px;">
            <div class="g_plus" id="gplus-@(Model.BasicId)" data-articleurl="@(Model.ArticleUrl)">
            </div>
        </li>
    </ul>
    <div class="clear"></div>
    <div>
        @foreach (var page in Model.PageList)
        {
            <div id='@Carwale.Utility.Format.RemoveSpecialCharacters(page.PageName)' class="btm-border">
                <h2> @page.PageName </h2>
                <div class="text-area-right">
                    @Html.Raw(page.Content)
                </div>
            </div>
        }
    </div>
</div>
<div data-page-url="@Model.ArticleUrl"></div>
<a data-next href="/relatedArticle/details/?basicId="></a>

@{
    Layout = null;
    ViewBag.Title = "Bikewale Operations | Login";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/materialize/css/materialize.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    @using (Html.BeginForm("Authenticate", "Users", FormMethod.Post))
    {
        <div class="container ">            
            <div class="row">                
                <div class="col m12">
                    <div class="col m4 offset-m4">
                        <div class="card">
                            <div class="card-content teal darken-1 white-text center-align">
                                <span class="card-title">Bikewale Operations</span>
                            </div>
                            <div class="card-action">
                                <div class="input-field row m12">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="icon_prefix" type="text" class="validate" name="Username">
                                    <label for="icon_prefix">LoginId</label>
                                </div>
                                <div class="input-field row m12">
                                    <i class="material-icons prefix">lock_outline</i>
                                    <input id="lock_outline" type="password" class="validate" name="Password">
                                    <label for="lock_outline">Password</label>
                                </div>
                                <div class="input-field row m12 center-align">
                                    <button class="btn waves-effect waves-light col m12" type="submit" name="action">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
        <footer class="page-footer teal darken-1 no-padding">
            <div class="footer-copyright">
                <div class="container">
                    &copy; Bikewale India Confidential
                    <a class="grey-text text-lighten-4 right" href="https://www.bikewale.com">BikeWale</a>
                </div>
            </div>
        </footer>
    }
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/materialize/js/materialize.min.js" type="text/javascript"></script>
</body>
</html>
